<project>
    <!-- ************************* -->
    <!-- EAConfig target overrides -->
    <!-- ************************* -->
    <optionset name="config.targetoverrides" >
        <option name="build" value="exclude"/>
        <option name="clean" value="exclude"/>
    </optionset>

    <!-- ******************* -->
    <!-- Package declaration -->
    <!-- ******************* -->

		<property name="eaxexp-grunt_component_packager_path" value="${tools.dir}/npm/eaxexp-grunt-component-packager"/>

		<target name="eaxexp-build-component-packager">
			<task name="npm-install-grunt" unless="${islinux}"/>
			<task name="npm-install-grunt-cli" unless="${islinux}" />
			<task name="npm-install-bower" unless="${islinux}"/>
			<echo message="Building eaxexp-grunt-component-packager"/>
			<task name="origin.exec" cmd="${npm.cmd}" args="${npm.options} install" workingdir="${eaxexp-grunt_component_packager_path}"/>
			<task name="origin.exec" cmd="${npm.cmd}" args="link" workingdir="${eaxexp-grunt_component_packager_path}" sudo="false"/>
		</target>

		<target name="eaxexp-components-test">
			<task name="npm-install-grunt" unless="${islinux}"/>
			<task name="npm-install-grunt-cli" unless="${islinux}" />
			<task name="npm-install-bower" unless="${islinux}"/>
			<echo message="Running unit tests"/>
			<task name="origin.exec" cmd="${grunt.cmd}" args="test" workingdir="${eaxexperiments.dir}" force="${force}"/>
		</target>
</project>




