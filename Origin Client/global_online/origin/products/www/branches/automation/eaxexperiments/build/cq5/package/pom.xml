<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.ea.origin.cms</groupId>
        <artifactId>origin-cms-deployable</artifactId>
        <version>10.0.0</version>
    </parent>
    <groupId>com.ea.origin.www</groupId>
    <artifactId>origin-eaxexp-cms-angular-components</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>com.day.jcr.vault</groupId>
                <artifactId>content-package-maven-plugin</artifactId>
                <configuration>
                    <packageVersion>2</packageVersion>
                    <builtContentDirectory>${basedir}/jcr_root/</builtContentDirectory>
                    <filterSource>${basedir}/META-INF/vault/filter.xml</filterSource>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>deploy-to-cq</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <configuration>
                            <packageVersion>2</packageVersion>
                            <builtContentDirectory>${basedir}/jcr_root/</builtContentDirectory>
                            <filterSource>${basedir}/META-INF/vault/filter.xml</filterSource>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deploy-author</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                                <configuration>
                                    <targetURL>${cq5.deploy.url}/crx/packmgr/service.jsp</targetURL>
                                    <userId>${cq5.deploy.username}</userId>
                                    <password>${cq5.deploy.password}</password>
                                    <verbose>true</verbose>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <version>${project.version}</version>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
                <profile>
                    <id>origin.x.build</id>
                        <distributionManagement>
                            <repository>
                                <id>origin.repo</id>
                                <name>Origin Repository</name>
                                <url>scp://ubuntu@maven.dm.origin.com/opt/apps/ebisu/web/maven</url>
                                <uniqueVersion>false</uniqueVersion>
                            </repository>
                            <snapshotRepository>
                            <id>origin.repo</id>
                            <name>Origin repo</name>
                            <url>scp://ubuntu@maven.dm.origin.com/opt/apps/ebisu/web/maven</url>
                            <uniqueVersion>false</uniqueVersion>
                            </snapshotRepository>
                        </distributionManagement>
                </profile>
    </profiles>
</project>
