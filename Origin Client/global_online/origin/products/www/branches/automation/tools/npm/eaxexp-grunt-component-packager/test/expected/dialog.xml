<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="cq:Dialog" Title="origin-home-recommended-action-trial" xtype="dialog">
  <items jcr:primaryType="cq:Widget" xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
      <general jcr:primaryType="cq:Panel" title="General">
        <items jcr:primaryType="cq:WidgetCollection">
          <expireddatetime fieldDescription="an ISO8601 compliant date string" fieldLabel="&lt;span style='color:red;'>expireddatetime&lt;/span>" jcr:primaryType="cq:Widget" name="./expireddatetime" referencedValue="" xtype="datetime" dateFormat="Y-m-d"/>
          <title jcr:primaryType="cq:Widget" fieldDescription="the title string" fieldLabel="&lt;span style='color:red;'>title&lt;/span>" name="./i18n/title" referencedValue="" xtype="textfield"/>
          <subtitle jcr:primaryType="cq:Widget" fieldDescription="the subtitle string" fieldLabel="subtitle" name="./i18n/subtitle" referencedValue="" xtype="textfield"/>
          <description jcr:primaryType="cq:Widget" fieldDescription="a really long description string" fieldLabel="description" name="./i18n/description" referencedValue="" xtype="textarea"/>
          <titleexpired jcr:primaryType="cq:Widget" fieldDescription="the title expired string" fieldLabel="titleexpired" name="./i18n/titleexpired" referencedValue="" xtype="textfield"/>
          <subtitleexpired jcr:primaryType="cq:Widget" fieldDescription="the subtitle expired string" fieldLabel="subtitleexpired" name="./i18n/subtitleexpired" referencedValue="" xtype="textfield"/>
          <descriptionexpired jcr:primaryType="cq:Widget" fieldDescription="the description expired str" fieldLabel="descriptionexpired" name="./i18n/descriptionexpired" referencedValue="/apps/originx/components/imported/directives/ocd/ocd@descriptionexpired" xtype="textfield"/>
          <href jcr:primaryType="cq:Widget" fieldDescription="the URL to the trial PDP" fieldLabel="href" name="./href" referencedValue="" xtype="pathfield"/>
          <baz jcr:primaryType="cq:Widget" fieldDescription="the trial PDP idenifier" fieldLabel="baz" name="./baz" referencedValue="" xtype="textfield"/>
          <priority jcr:primaryType="cq:Widget" fieldDescription="the priority value" fieldLabel="priority" name="./priority" referencedValue="" xtype="textfield"/>
          <trialtype jcr:primaryType="cq:Widget" fieldDescription="a list of tile configurations" fieldLabel="trialtype" name="./trialtype" referencedValue="" type="select" xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
              <o0 jcr:primaryType="nt:unstructured" text="expanded" value="expanded"/>
              <o1 jcr:primaryType="nt:unstructured" text="list-only" value="list-only"/>
            </options>
          </trialtype>
          <isagegated jcr:primaryType="cq:Widget" fieldDescription="return 'true' as a string if the offer is age gated" fieldLabel="&lt;span style='color:red;'>isagegated&lt;/span>" name="./isagegated" referencedValue="" type="checkbox" xtype="selection"/>
          <ocd-path jcr:primaryType="cq:Widget" fieldDescription="Select a product path" fieldLabel="Product" name="./ocd-path" rootPath="/content/web/app/games" xtype="ocdpathfield" validator="function(){return Origin.Util.ocdPathValidator(this);}"/>
          <localized-template-string jcr:primaryType="cq:Widget" fieldDescription="the string will be localized and the parameter will be replaced on client side." fieldLabel="&lt;span style='color:green;'>localized-template-string&lt;/span>" name="./i18n/localized-template-string" referencedValue="" xtype="textfield"/>
        </items>
      </general>
      <image jcr:primaryType="cq:Panel" title="image: Image management">
        <items jcr:primaryType="cq:WidgetCollection">
          <image_selector jcr:primaryType="cq:Widget" collapsible="{Boolean}true" title="Image Management: Select images and their targeted locales" xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
              <images jcr:primaryType="cq:Widget" fieldDescription="Click the '+' to add a new image for geo-targeting" fieldLabel="Images" name="./image" xtype="multifield">
                <fieldConfig jcr:primaryType="cq:Widget" path="/apps/originx/components/management/imagetab/image_target/items/image_selector/items/images/fieldConfig.infinity.json" xtype="cqinclude"/>
              </images>
            </items>
          </image_selector>
        </items>
      </image>
      <youtubevideoid jcr:primaryType="cq:Widget" path="/apps/originx/components/management/videotab/video_target.infinity.json" xtype="cqinclude"/>
      <offerid jcr:primaryType="cq:Widget" path="/apps/originx/components/management/offerselectiontab/offer_management.infinity.json" xtype="cqinclude"/>
      <contenttarget jcr:primaryType="cq:Widget" path="/apps/originx/components/management/contenttargettab/content_target.infinity.json" xtype="cqinclude"/>
      <contentreferencetarget jcr:primaryType="cq:Widget" path="/apps/originx/components/management/referencetargettab/reference_target.infinity.json" xtype="cqinclude"/>
      <offertarget jcr:primaryType="cq:Widget" path="/apps/originx/components/management/offertargettab/offer_target.infinity.json" xtype="cqinclude"/>
    </items>
  </items>
</jcr:root>