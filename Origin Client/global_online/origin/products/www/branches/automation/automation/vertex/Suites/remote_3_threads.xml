<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Origin Web Store Remote" verbose="1" parallel="methods" thread-count="3" data-provider-thread-count="3">
    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter" />
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
        <listener class-name="com.ea.vx.core.listeners.VxXMLReporter" />
        <listener class-name="com.ea.vx.core.listeners.VxMethodInitListener" />
        <listener class-name="com.ea.vx.core.listeners.VxTestListener" />
        <listener class-name="com.ea.vx.webui.listeners.VxWebUIInitListener" />
        <listener class-name="com.ea.vx.webui.listeners.VxWebUITestListener" />
    </listeners>

    <parameter name="browserName" value="chrome" />
    <parameter name="browserPlatform" value="WINDOWS" />

    <parameter name="jenkinsWorkspace" value="origin/vertex/master/" />
    <parameter name="hub" value="remote" />
    <!--<parameter name="proxy" value="remote" />-->

    <parameter name="home_url" value="https://store.dm.origin.com/" />

    <parameter name="defaultDriverTimeout" value="15" />
    <parameter name="retry" value="true" />
    <parameter name="logLevel" value="2" />

    <test name="Origin Web Store Test">
        <!-- If using groups, you must keep the packages element below -->
        <groups>
            <run>
                <include name="subscriptions" />
                <exclude name="indev" />
            </run>
        </groups>

        <!-- Run all tests in package, unless groups are specified -->
        <packages>
            <package name="com.ea.originwebstorevx.tests.regression.*" />
            <package name="com.ea.originwebstorevx.tests.subscriptions.*" />
        </packages>

        <!-- Uncomment or remove packages element if using classes -->
<!--        <classes>
            <class name="com.ea.originwebstorevx.tests.OriginLoginTest">
                <methods>
                    <include name="testOriginLogoLink" />
                    <include name="testQuickViewDisplay" />
                </methods>
            </class>
        </classes>-->
    </test>

    <!-- Jenkins CI -->
    <!-- D environments (prod) -->
    <parameter name="prod" value="https://store.dm.origin.com/" />
    <parameter name="fc_qa_prod" value="https://fc.qa.www.origin.com/" />
    <parameter name="qa_prod" value="https://qa.www.origin.com/" />

    <!-- C environments (approve) -->
    <parameter name="prod_approve" value="https://approve.www.cms.origin.com/" />
    <parameter name="fc_qa_approve" value="https://fc.qa.approve.www.cms.origin.com/" />
    <parameter name="qa_approve" value="https://qa.approve.www.cms.origin.com/" />
    <parameter name="thor_qa_approve" value="https://thor.qa.approve.www.cms.origin.com/" />

    <!-- B environments (review) -->
    <parameter name="prod_review" value="https://review.www.cms.origin.com/" />
    <parameter name="fc_qa_review" value="https://fc.qa.review.www.cms.origin.com/" />
    <parameter name="qa_review" value="https://qa.review.www.cms.origin.com/" />
    <parameter name="thor_qa_review" value="https://thor.qa.review.www.cms.origin.com/" />

    <!-- A environments (preview) -->
    <parameter name="prod_preview" value="https://preview.www.cms.origin.com/" />
    <parameter name="fc_qa_preview" value="https://fc.qa.preview.www.cms.origin.com/" />
    <parameter name="qa_preview" value="https://qa.preview.www.cms.origin.com/" />
    <parameter name="thor_qa_preview" value="https://thor.qa.preview.www.cms.origin.com/" />
</suite>
