<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Origin X" verbose="1" parallel="methods" thread-count="1" data-provider-thread-count="1">
    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter" />
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
        <listener class-name="com.ea.vx.core.listeners.VxXMLReporter" />
        <listener class-name="com.ea.vx.core.listeners.VxMethodInitListener" />
        <listener class-name="com.ea.vx.core.listeners.VxTestListener" />
        <listener class-name="com.ea.vx.webui.listeners.VxWebUIInitListener" />
        <listener class-name="com.ea.vx.originclient.listeners.VxOriginClientTestListener" />
    </listeners>

    <parameter name="hub" value="local" />
    <parameter name="browserName" value="chrome" />
    <parameter name="browserPlatform" value="WINDOWS" />
    <parameter name="keepAppAlive" value="false" />
    <parameter name="defaultDriverTimeout" value="30" />
    <parameter name="retry" value="true" />
    <parameter name="logLevel" value="1" />
    <parameter name="browserHeight" value="800" />
    <parameter name="browserWidth" value="600" />

    <test name="Origin X Chrome Mini Browser Test">
        <groups>
            <run>
                <include name="mobile" />
            </run>
        </groups>
        <!-- test class will be added dynamically -->
        <!--classes>
            <class name="com.ea.originx.automation.scripts.mobile.OAMiniBrowserTest" />
        </classes-->
    </test>
</suite>