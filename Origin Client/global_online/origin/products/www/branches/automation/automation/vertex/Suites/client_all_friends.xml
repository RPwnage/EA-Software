<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Origin X Client Full Regression" verbose="1" parallel="methods" thread-count="4" data-provider-thread-count="10">
    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter" />
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
        <listener class-name="com.ea.vx.core.listeners.VxXMLReporter" />
        <listener class-name="com.ea.vx.core.listeners.VxMethodInitListener" />
        <listener class-name="com.ea.vx.core.listeners.VxTestListener" />
        <listener class-name="com.ea.vx.originclient.listeners.VxOriginClientSuiteListener" />
        <listener class-name="com.ea.vx.originclient.listeners.VxOriginClientTestListener" />
        <listener class-name="com.ea.vx.testrail.listeners.VxTestRailListener" />
    </listeners>

    <parameter name="hub" value="remote" />
    <parameter name="hubHost" value="eax-automation" />
    <parameter name="hubPort" value="4446" />
    <parameter name="browserName" value="originclient" />
    <parameter name="browserPlatform" value="WINDOWS" />
    <parameter name="keepAppAlive" value="false" />
    <parameter name="defaultDriverTimeout" value="30" />
    <parameter name="retry" value="true" />
    <parameter name="logLevel" value="1" />
    <parameter name="garbagecollection" value="true" />
    <parameter name="testrail-assignee" value="1"/>
    <parameter name="testrail-server" value="https://testrail.eax.ea.com/index.php"/>
    <parameter name="testrail-user" value="originautomation"/>
    <parameter name="testrail-password" value="Origin@11"/>
    <parameter name="python" value="C:\packages\ActivePython\python27-seleniumgrid\python.exe" />

    <test name="Origin X Client Full Regression">
        <!-- If using groups, you must keep the packages element below -->
        <groups>
            <run>
                <include name="client" />
            </run>
        </groups>

        <!-- Uncomment or remove packages element if using classes -->
        <classes>
            <class name="com.ea.originx.automation.scripts.feature.gifting.OAGiftingDialogs" />
            <class name="com.ea.originx.automation.scripts.feature.gifting.OAGiftingDLC" />
            <class name="com.ea.originx.automation.scripts.feature.gifting.OAGiftPending" />
            <class name="com.ea.originx.automation.scripts.feature.gifting.OARedeemGift" />
            <class name="com.ea.originx.automation.scripts.feature.gifting.OASendGiftManyFriends" />
            <class name="com.ea.originx.automation.scripts.feature.gifting.OASendGiftOwned" />
            <class name="com.ea.originx.automation.scripts.social.OABasicChat" />
            <class name="com.ea.originx.automation.scripts.social.OABlockUnblock" />
            <class name="com.ea.originx.automation.scripts.social.OAChatMultiple" />
            <class name="com.ea.originx.automation.scripts.social.OAChatOffline" />
            <class name="com.ea.originx.automation.scripts.social.OAChatOfflineInvisible" />
            <class name="com.ea.originx.automation.scripts.social.OAChatOneFriend" />
            <class name="com.ea.originx.automation.scripts.social.OAFriendsInvitations" />
            <class name="com.ea.originx.automation.scripts.social.OAFriendsListSearch" />
            <class name="com.ea.originx.automation.scripts.social.OANoFriends" />
            <class name="com.ea.originx.automation.scripts.social.OAOfflineModeFriends" />
        </classes>
    </test>
</suite>
