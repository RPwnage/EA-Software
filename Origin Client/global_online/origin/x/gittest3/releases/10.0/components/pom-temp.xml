<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.ea.origin.cq5</groupId>
        <artifactId>origin-cq5-deployable</artifactId>
        <version>1.0.0.2</version>
    </parent>
    <artifactId>origin-cq5-directive-default-translations</artifactId>
    <version>__ORIGIN_VERSION__</version>
    <packaging>jar</packaging>
    
    <build>
        <plugins>
            <plugin>
                <groupId>com.day.jcr.vault</groupId>
                <artifactId>content-package-maven-plugin</artifactId>
                <configuration>
                    <packageVersion>2</packageVersion>
                    <builtContentDirectory>${propstart}basedir${propend}/jcr_root/</builtContentDirectory>
                    <filterSource>${propstart}basedir${propend}/META-INF/vault/filter.xml</filterSource>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>package</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>deploy-to-cq</id>
            <activation>
                <os>
                    <family>Windows</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.day.jcr.vault</groupId>
                        <artifactId>content-package-maven-plugin</artifactId>
                        <configuration>
                            <packageVersion>2</packageVersion>
                            <builtContentDirectory>${propstart}basedir${propend}/jcr_root/</builtContentDirectory>
                            <filterSource>${propstart}basedir${propend}/META-INF/vault/filter.xml</filterSource>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deploy-author</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                                <configuration>
                                    <targetURL>${propstart}cq5.deploy.url${propend}/crx/packmgr/service.jsp</targetURL>
                                    <userId>${propstart}cq5.deploy.username${propend}</userId>
                                    <password>${propstart}cq5.deploy.password${propend}</password>
                                    <verbose>true</verbose>
                                    <groupId>${propstart}project.groupId${propend}</groupId>
                                    <artifactId>${propstart}project.artifactId${propend}</artifactId>
                                    <version>${propstart}project.version${propend}</version>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
