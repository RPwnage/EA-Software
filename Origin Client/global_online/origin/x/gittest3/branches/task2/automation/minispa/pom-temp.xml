<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ea.origin.x.sandboxes.__ORIGINX_MAVEN_BRANCH__</groupId>
    <artifactId>originwebminispa</artifactId>
    <name>originwebminispa</name>
    <version>__ORIGIN_VERSION__</version>
    <packaging>pom</packaging>

    <distributionManagement>
        <repository>
            <id>origin.repo</id>
            <url>scp://ubuntu@maven.dm.origin.com/opt/apps/ebisu/web/maven</url>
            <uniqueVersion>false</uniqueVersion>
        </repository>
    </distributionManagement>

    <!-- Source Control Management -->
    <!-- http://maven.apache.org/ref/current/maven-model/maven.html#class_scm -->
    <!-- NOTE: This block must exist independently in each child project! -->
    <scm>
        <connection>
            scm:perforce:p4serv1.online.ea.com:4487://global_online/ebisu/client/main
        </connection>
        <developerConnection>${dollar}${propstart}scm.connection${propend}</developerConnection>
        <url>http://docs.online.ea.com:4487/global_online/ebisu/client/main/</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>release-build</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>${dollar}${propstart}artifactId${propend}-__ORIGIN_VERSION__</finalName>
                            <descriptors>
                                <descriptor>originwebminispa-assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    <extensions>
        <extension>
            <groupId>org.apache.maven.wagon</groupId>
            <artifactId>wagon-ssh</artifactId>
            <version>2.4</version>
        </extension>
    </extensions>
    </build>

    <dependencies>
    </dependencies>
</project>
