<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="cq:Dialog" Title="origin-home-recommended-action-trial" xtype="dialog">
  <items jcr:primaryType="cq:Widget" xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
      <general jcr:primaryType="cq:Panel" title="General">
        <items jcr:primaryType="cq:WidgetCollection">
          <startdate fieldDescription="the startdate of the trial" fieldLabel="startdate" jcr:primaryType="cq:Widget" name="./startdate" defaultValue="" format="Y-m-d" xtype="datefield"/>
          <starttime fieldDescription="the start time of the trial" fieldLabel="starttime" jcr:primaryType="cq:Widget" name="./starttime" defaultValue="" format="H:i:s" xtype="timefield"/>
          <expireddatetime fieldDescription="the combined expired datetime" fieldLabel="expireddatetime" jcr:primaryType="cq:Widget" name="./expireddatetime" defaultValue="" format="Y-m-d H:i:s" xtype="timefield"/>
          <title jcr:primaryType="cq:Widget" fieldDescription="the title string" fieldLabel="title" name="./i18n/title" defaultValue="" xtype="textarea"/>
          <subtitle jcr:primaryType="cq:Widget" fieldDescription="the subtitle string" fieldLabel="subtitle" name="./i18n/subtitle" defaultValue="" xtype="textarea"/>
          <description jcr:primaryType="cq:Widget" fieldDescription="the description string" fieldLabel="description" name="./i18n/description" defaultValue="" xtype="textarea"/>
          <titleexpired jcr:primaryType="cq:Widget" fieldDescription="the title expired string" fieldLabel="titleexpired" name="./i18n/titleexpired" defaultValue="" xtype="textarea"/>
          <subtitleexpired jcr:primaryType="cq:Widget" fieldDescription="the subtitle expired string" fieldLabel="subtitleexpired" name="./i18n/subtitleexpired" defaultValue="" xtype="textarea"/>
          <descriptionexpired jcr:primaryType="cq:Widget" fieldDescription="the description expired str" fieldLabel="descriptionexpired" name="./i18n/descriptionexpired" defaultValue="/apps/originx/components/imported/directives/ocd/ocd@descriptionexpired" xtype="textarea"/>
          <href jcr:primaryType="cq:Widget" fieldDescription="the URL to the trial PDP" fieldLabel="href" name="./href" defaultValue="" xtype="textarea"/>
          <priority jcr:primaryType="cq:Widget" fieldDescription="the priority value" fieldLabel="priority" name="./priority" defaultValue="" xtype="textfield"/>
          <trialtype jcr:primaryType="cq:Widget" fieldDescription="a list of tile configurations" fieldLabel="trialtype" name="./trialtype" defaultValue="" type="select" xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
              <o0 jcr:primaryType="nt:unstructured" text="expanded" value="expanded"/>
              <o1 jcr:primaryType="nt:unstructured" text="list-only" value="list-only"/>
            </options>
          </trialtype>
        </items>
      </general>
      <image jcr:primaryType="cq:Panel" title="image: Image management">
        <items jcr:primaryType="cq:WidgetCollection">
          <image_selector jcr:primaryType="cq:Widget" collapsible="{Boolean}true" title="Image Management: Select images and their targeted locales" xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
              <images jcr:primaryType="cq:Widget" fieldDescription="Click the '+' to add a new image for geo-targeting" fieldLabel="Images" name="./image" xtype="multifield">
                <fieldConfig jcr:primaryType="nt:unstructured" hideLabel="{Boolean}false" xtype="imagetarget"/>
              </images>
            </items>
          </image_selector>
        </items>
      </image>
      <contenttarget jcr:primaryType="cq:Widget" path="/apps/originx/components/management/contenttargettab/content_target.infinity.json" xtype="cqinclude"/>
      <contentreferencetarget jcr:primaryType="cq:Widget" path="/apps/originx/components/management/referencetargettab/reference_target.infinity.json" xtype="cqinclude"/>
    </items>
  </items>
</jcr:root>