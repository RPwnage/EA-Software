<project>

	<!-- IGOX public header files location. -->
	<property name="package.IGO.includedirs" value="${package.IGO.dir}/.."/>

	<!-- IGO source files location. -->
	<property name="package.IGO.sourcedir" value="${package.IGO.dir}/.." />

	<!-- IGOX bundle location. -->
    <property name="package.IGO.config-xcode-type" value="Debug" if="${config-type} == 'debug'" />
    <property name="package.IGO.config-xcode-type" value="Release" if="${config-type} == 'opt'" />
    <property name="package.IGO.dylib" value="${package.IGO.dir}/build/XCodeOSX/build/${package.IGO.config-xcode-type}/IGO.dylib"/>
</project>
