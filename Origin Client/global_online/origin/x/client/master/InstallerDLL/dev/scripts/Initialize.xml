<project>

	<!-- InstallerDLL public header files location. -->
	<property name="package.InstallerDLL.includedirs">
		${package.InstallerDLL.dir}/include
	</property>

	<!-- InstallerDLL binary files location. -->
	<property name="package.InstallerDLL.bindir" value="${package.InstallerDLL.dir}/bin" />

	<!-- InstallerDLL source files location. -->
	<property name="package.InstallerDLL.sourcedir" value="${package.InstallerDLL.dir}/source" />

	<!-- InstallerDLL libraries location. -->
	<fileset name="package.engine.libs">
		<includes name="${package.InstallerDLL.builddir}/${config}/lib/${lib-prefix}InstallerDLL.lib" />
	</fileset>
</project>
