<project> 
  <property name="IGOIPC.module.name" value="IGOIPC" />
  <property name="package.WindowsSDK.TargetPlatformVersion" value="win8" />
  
  <property name="runtime.buildmodules" value="${property.value} IGOIPC" />
  <property name="runtime.${IGOIPC.module.name}.outputdir" value="${package.IGO.lib}" if="${config-system} == 'pc'" />
  <property name="runtime.${IGOIPC.module.name}.outputname" value="${IGOIPC.module.name}32${debug-suffix}" if="${config-system} == 'pc'" />
  <property name="runtime.${IGOIPC.module.name}.outputdir" value="${package.IGO.lib}/x64" if="${config-system} == 'pc64'" />
  <property name="runtime.${IGOIPC.module.name}.outputname" value="${IGOIPC.module.name}64${debug-suffix}" if="${config-system} == 'pc64'" />
  <property name="runtime.${IGOIPC.module.name}.defines.winver" value="0x0502" />
	
  <dependent name="OriginConfig" />
  <dependent name="OriginVersion" />
  
  <property name="runtime.${IGOIPC.module.name}.usedependencies" >
    EASTL
    EABase
	EAThread
  </property>
  
	<!-- Add special compiler options and create new buidtype -->
	<BuildType name="${IGOIPC.module.name}" from="OriginLibrary">
    <option name="buildset.cc.defines">
      ${option.value}
      _LIB
    </option>
    <option name="multithreadeddynamiclib"        value="on" />
	</BuildType>
	
  <!-- ${IGOIPC.module.name} build properties -->
	<property name="runtime.${IGOIPC.module.name}.buildtype" value="${IGOIPC.module.name}" />

<!--  <property name="runtime.${IGOIPC.module.name}.runtime.moduledependencies" value="MadCHook" /> -->

  <property name="runtime.${IGOIPC.module.name}.includedirs" >
    ${property.value}
    ${module.IGOIPC.dir}/../originClient/${origin.build.version}
    ${module.IGOIPC.dir}/../IGO
    ${package.WindowsSDK.kitdir}\Include\${package.WindowsSDK.TargetPlatformVersion}\um
    ${package.WindowsSDK.kitdir}\Include\${package.WindowsSDK.TargetPlatformVersion}\shared
	</property>

  <fileset name="runtime.${IGOIPC.module.name}.libs" >
  </fileset>
  
  <fileset name="runtime.${IGOIPC.module.name}.headerfiles" basedir="${module.${IGOIPC.module.name}.dir}" >
    <includes name="**/*.h" />
  </fileset>

  <fileset name="runtime.${IGOIPC.module.name}.sourcefiles" basedir="${module.${IGOIPC.module.name}.dir}">
		<includes name="IGOIPC.cpp" />
		<includes name="IGOIPCClient.cpp" />
		<includes name="IGOIPCConnection.cpp" />
		<includes name="IGOIPCMessage.cpp" />
		<includes name="IGOIPCServer.cpp" />
		<includes name="IGOIPCUtils.cpp" />
  </fileset>
  
  <target name="clean-igoipc">
    <delete>
			<fileset basedir="${runtime.${IGOIPC.module.name}.outputdir}">
				<includes name="${runtime.${IGOIPC.module.name}.outputname}.*"/>
			</fileset>
		</delete>
  </target>
</project>