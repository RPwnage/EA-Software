<project>
  <property name="package.rtf2html.suffix" value=""/>
  <property name="package.rtf2html.suffix" value="d" if="${config-name} == dev-debug"/>
	
	<property name="config-type" value="opt" if="${config-name} == dev-opt"/>
	<property name="config-type" value="debug" if="${config-name} == dev-debug"/>

	<!-- rtf2html public header files location. -->
	<property name="package.rtf2html.includedirs">
		${package.rtf2html.dir}/include
	</property>

	<!-- rtf2html libraries location. -->
	<fileset name="package.rtf2html.libs">
		<includes name="${package.rtf2html.builddir}/${config}/lib/rtf2html${package.rtf2html.suffix}.lib" />
	</fileset>
</project>
