<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.ea.link</groupId>
	<artifactId>checkCode</artifactId>
	<name>checkCode</name>
	<version>1.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
  <properties>
    <sln.file>Ebisu Client.sln</sln.file>
    <lint.file>ebisuLint.bat</lint.file>
    <lint.args>+v -iC:\lint std.lnt +os(_LINT.TMP) +ffn +linebuf -width(0) -hf1 &quot;-format=%f(%l): %t %n: %m&quot;</lint.args>
    <lint.exe>c:\lint\Lint-nt.exe</lint.exe>
  </properties>

  <modules>
    <module>ui</module>
  </modules>
  
	<build>
		<plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>.</directory>
              <includes>
                <include>_LINT.TMP</include>
                <include>**/*.lnt</include>
                <include>${lint.file}</include>
              </includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

      
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>lint-sln-file</id>
            <phase>validate</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <exec executable="${lint.exe}" output="ui/${lint.file}" dir="ui">
                  <arg value="${sln.file}"/>
                </exec>
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-lint-indirection-files</id>
            <phase>initialize</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${lint.file}</executable>
              <workingDirectory>ui</workingDirectory>
              <arguments>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin> 
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>exec-lint</id>
            <phase>compile</phase>
            <configuration>
              <target>
                <apply executable="${lint.exe}" dir="ui">
                  <arg line="${lint.args}"/>
                  <fileset dir="ui">
                    <include name="**/*.lnt"/>
                  </fileset>
                </apply>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
	</build>

	<dependencies>
	</dependencies>
</project>