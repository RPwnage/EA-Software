<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.ea.link</groupId>
	<artifactId>EADMVersioning</artifactId>
	<name>EADM Versioning</name>
	<version>2.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<parent>
		<groupId>com.ea.core</groupId>
		<artifactId>MavenVSParent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>initialize</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
								<groupId>com.ea.core</groupId>
								<artifactId>UpdateVersion</artifactId>
								<version>1.0.0-SNAPSHOT</version>
								<overWrite>true</overWrite>
								<outputDirectory>target/dependency</outputDirectory>
								<type>zip</type>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
 				<artifactId>exec-maven-plugin</artifactId>
				<executions>
 					<execution>
 						<id>update-veresion</id>
 						<phase>generate-sources</phase>
 						<goals>
 							<goal>exec</goal>
 						</goals>
 						<configuration>
 							<executable>python.exe</executable>
 							<workingDirectory>target/dependency</workingDirectory>
 							<arguments>
 								<argument>update-version.py</argument>
 								<argument>../../version/</argument>
 								<argument>//global_online/ebisu/client/${eadm.branch}/version/</argument>
								<argument>${p4.clientspec}</argument>
 								<argument>hudson.online</argument>
 								<argument>CrMbLmTXe</argument>
 							</arguments>
 						</configuration>
 					</execution>
 				</executions>
 			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.ea.core</groupId>
			<artifactId>UpdateVersion</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>zip</type>
		</dependency>
	</dependencies>
</project>