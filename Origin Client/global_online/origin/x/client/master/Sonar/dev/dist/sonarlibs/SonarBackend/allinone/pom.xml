<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>sonar-allinone</artifactId>
    <name>ESN Sonar All-in-one</name>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.esn.sonar</groupId>
        <artifactId>sonar</artifactId>
        <version>0.10.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.esn.sonar</groupId>
            <artifactId>sonar-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.esn.sonar</groupId>
            <artifactId>sonar-master</artifactId>
        </dependency>
        <dependency>
            <groupId>com.esn.sonar</groupId>
            <artifactId>sonar-useredge</artifactId>
        </dependency>
        <dependency>
            <groupId>com.esn.sonar</groupId>
            <artifactId>sonar-voiceedge</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <!-- Plugin for bundling a runnable, stand-alone JAR -->
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-5</version>
                <configuration>
                    <appendAssemblyId>false</appendAssemblyId>
                    <finalName>sonar-${env.BUILD_VCS_NUMBER}</finalName>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <archive>
                        <manifest>
                            <mainClass>com.esn.sonar.allinone.AllInOne</mainClass>
                        </manifest>
                    </archive>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

