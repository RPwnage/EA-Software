<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.esn.core</groupId>
        <artifactId>masterpom</artifactId>
        <version>2.0.0</version>
    </parent>

    <groupId>com.esn.sonar</groupId>
    <artifactId>sonar</artifactId>
    <name>ESN Sonar</name>
    <version>0.10.0-SNAPSHOT</version>
    <description>ESN Sonar Backend</description>
    <packaging>pom</packaging>
    <inceptionYear>2010</inceptionYear>

    <profiles>
        <!--
            Default profile; builds everything
        -->
        <profile>
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>geoip</module>
                <module>core</module>
                <module>master</module>
                <module>useredge</module>
                <module>voiceedge</module>
                <module>allinone</module>
                <module>load</module>
                <!--module>rpm</module-->
            </modules>
        </profile>
        <!--
            Release profile; builds everything
        -->
        <profile>
            <id>release</id>
            <properties>
                <!-- Must be grater than snapshot number -->
                <buildNumber>1000000</buildNumber>
                <releaseNumber>${buildNumber}</releaseNumber>
            </properties>
            <modules>
                <module>geoip</module>
                <module>core</module>
                <module>master</module>
                <module>useredge</module>
                <module>voiceedge</module>
                <module>allinone</module>
                <module>load</module>
                <module>rpm</module>
            </modules>
        </profile>
    </profiles>

    <properties>
        <!-- This is Team City buildnumber -->
        <buildNumber>${build.number}</buildNumber>
        <releaseNumber>${buildNumber}_SNAPSHOT</releaseNumber>
        <rhnpushChannel>planet-dev-incubator</rhnpushChannel>
        <distChannel>planet-dev-incubator</distChannel>
        <deployrepo>http://nexus.project.esn:8081/nexus/content/repositories/snapshots</deployrepo>
        <deployartifactId>${project.artifactId}</deployartifactId>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.esn.sonar</groupId>
                <artifactId>sonar-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.esn.sonar</groupId>
                <artifactId>sonar-geoip</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.esn.sonar</groupId>
                <artifactId>sonar-master</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.esn.sonar</groupId>
                <artifactId>sonar-useredge</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.esn.sonar</groupId>
                <artifactId>sonar-voiceedge</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- twitter commons stats -->
            <dependency>
                <groupId>com.twitter.common</groupId>
                <artifactId>stats</artifactId>
                <version>0.0.14</version>
            </dependency>
            <dependency>
                <groupId>com.twitter.common</groupId>
                <artifactId>stats-time-series</artifactId>
                <version>0.0.10</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.16</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.netty</groupId>
            <artifactId>netty</artifactId>
            <version>3.2.3.Final</version>
        </dependency>
        <dependency>
            <groupId>com.cgbystrom</groupId>
            <artifactId>netty-tools</artifactId>
            <version>1.2.7</version>
        </dependency>

        <!-- Test dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.4</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.jayway.awaitility</groupId>
            <artifactId>awaitility</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <argLine>-Xmx3g</argLine>
                    <printSummary>true</printSummary>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-scm-plugin</artifactId>
                <version>1.4</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.scm</groupId>
                        <artifactId>maven-scm-provider-gitexe</artifactId>
                        <version>1.4</version>
                    </dependency>
                    <dependency>
                        <groupId>org.apache.maven.scm</groupId>
                        <artifactId>maven-scm-api</artifactId>
                        <version>1.4</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <arguments>-P release</arguments>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.scm</groupId>
                        <artifactId>maven-scm-api</artifactId>
                        <version>1.4</version>
                    </dependency>
                    <dependency>
                        <groupId>org.apache.maven.scm</groupId>
                        <artifactId>maven-scm-provider-gitexe</artifactId>
                        <version>1.4</version>
                    </dependency>
                    <dependency>
                        <groupId>org.codehaus.plexus</groupId>
                        <artifactId>plexus-utils</artifactId>
                        <version>1.5.9</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>esn</id>
            <name>ESN Internal repository</name>
            <url>http://10.20.108.220:8081/nexus/content/groups/public</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <scm>
        <developerConnection>scm:git:ssh://git@github.com/esnme/sonar-backend.git</developerConnection>
    </scm>


</project>