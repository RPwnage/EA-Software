<?xml version="1.0"?>
<interface>
	<description>
		Object describing an in-progress operation on an entitlement
	</description>

	<property type="Float?" name="progress" readonly="true">
		<description>
			Progress of the current operation. Between 0.0 (0%) and 1.0 (100%) or null if the progress cannot be determined
		</description>
	</property>

	<method name="pause">
		<description>
			Pauses the current operation if it is pausable
		</description>
	</method>
	
	<method name="resume">
		<description>
			Resumes the current operation if it is resumable
		</description>
	</method>

	<method name="cancel">
		<description>
			Cancels the current operation
		</description>
	</method>

	<property type="Boolean" name="pausable">
		<description>
			Indicates if this operation can be paused
		</description>
	</property>
	
	<property type="Boolean" name="resumable">
		<description>
			Indicates if this operation can be resumed
		</description>
	</property>

	<property type="Boolean" name="cancellable">
		<description>
			Indicates if this operation can be cancelled
		</description>
	</property>

	<property type="EntitlementOperationPhase" name="phase" readonly="true">
		<description>
			Current phase of the operation
		</description>
	</property>
</interface>
