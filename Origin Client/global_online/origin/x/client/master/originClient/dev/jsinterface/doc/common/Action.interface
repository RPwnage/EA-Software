<?xml version="1.0"?>
<interface>
	<description>Represents an abstract user interface action</description>

	<signal name="triggered">
		<description>Fired whenever the action has been triggered by the user or programmatically using the trigger method</description>
	</signal>

	<property type="Boolean" name="enabled">
		<description>Enable state of the action. Disabled actions are greyed out and unselectable</description>
	</property>

	<property type="Boolean" name="visible">
		<description>Visibility of the action. Invisible actions are not displayed to the user and are not triggable</description>
	</property>

	<property type="String" name="text">
		<description>Text of the action</description>
	</property>

	<method name="trigger">
		<description>Triggers the action</description>
	</method>
</interface>
