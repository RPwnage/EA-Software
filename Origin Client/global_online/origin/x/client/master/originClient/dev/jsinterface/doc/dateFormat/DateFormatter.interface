<?xml version="1.0"?>
<interface root="true">
	<description>Helper for formatting localized dates and times</description>

	<method return="String" name="formatTime">
		<param name="time" type="Date" />
		<param name="includeSeconds" type="Boolean" default="false">
			<description>Indicates if seconds should be included in addition to hours and minutes</description>
		</param>
		<description>Formats the time component of the passed Date object as a localized string</description>
	</method>
	
	<method return="String" name="formatShortDate">
		<param name="date" type="Date" />
		<description>Formats the date component of the passed Date object as a short localized string. This is typically a short numerical representation eg 12/10/2012.</description>
	</method>
	
	<method return="String" name="formatShortDateTime">
		<param name="datetime" type="Date" />
		<description>Formats the passed Date object as a localized datetime string using the short date format.</description>
	</method>
	
	<method return="String" name="formatLongDate">
		<param name="date" type="Date" />
		<description>Formats the date component of the passed Date object as a long localized string. This is typically includes the full month name eg October 12, 2012.</description>
	</method>

    <method return="String" name="formatLongDateWithWeekday">
        <param name="date" type="Date" />
        <description>Formats the date component of the passed Date object as a long localized string. This is typically includes the full month name and weekday eg Friday October 12, 2012.</description>
    </method>
	
	<method return="String" name="formatLongDateTime">
		<param name="datetime" type="Date" />
		<description>Formats the passed Date object as a localized datetime string using the long date format.</description>
	</method>

    <method return="String" name="formatLongDateTimeWithWeekday">
        <param name="datetime" type="Date" />
        <description>Formats the passed Date object as a localized datetime string using the long date format and includes the day of the week.</description>
    </method>

	<method return="String" name="formatInterval">
		<param name="seconds" type="Integer" />

		<param name="minimumUnit" type="IntervalUnit" default="HOURS">
			<description>Smallest time unit to use. Intervals of time smaller than the smallest unit will use the form "less than a (unit)"</description>
		</param>
		
		<param name="maximumUnit" type="IntervalUnit" default="DAYS">
			<description>Largest time unit to use</description>
		</param>

		<description>Formats the passed interval in seconds. The result is in the form "1 day", "2 hours", "less than an hour", etc</description>
	</method>

	<method return="String" name="formatShortInterval">
		<param name="seconds" type="Integer" />
		<description>Formats the passed interval in seconds. The result is in the form "hh:mm:ss", etc</description>
	</method>    
</interface>
