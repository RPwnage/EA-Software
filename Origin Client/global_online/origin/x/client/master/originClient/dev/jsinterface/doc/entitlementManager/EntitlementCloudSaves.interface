<?xml version="1.0"?>
<interface>
	<description>Helper class for an entitlement's cloud save related functionality</description>

	<property type="Integer?" name="currentUsage" readonly="true">
		<description>
			Current usage of the remote cloud saves area in bytes. This value is locally cached and updated from the server whenever a cloud sync is performed or pollCurrentUsage() is called. If no cached value is available then this property will be null.
		</description>
	</property>

	<property type="Boolean" name="autoSyncEnabled" readonly="true">
		<description>
			Indicates if the entitlement's local save files are automatically synchronized with the cloud. Entitlements with autosync disabled are different from entitlements without cloud save support as they can still have associated remote usage and backups.
		</description>
	</property>

	<property type="Integer" name="maximumUsage" readonly="true">
		<description>
			Maximum usage of the remote cloud saves area for the entitlement in bytes.
		</description>
	</property>

	<method name="pollCurrentUsage">
		<description>
			Requests a single asynchronous update of the remote cloud saves usage from the server. This should be called when the user is actively looking at cloud save usage and not for passive things such as warning badges. 
		</description>
	</method>

	<property type="EntitlementCloudSaveBackup?" name="lastBackup" readonly="true">
		<description>
			Last successful backup of the local save files for the entitlement. A backup is automatically created before pulling any changes from the remote cloud saves area. This property will be null if no backup exists.
		</description>
	</property>

	<signal name="currentUsageChanged">
		<param type="Integer" name="currentUsage">
			<description>
				New value of the currentUsage property
			</description>
		</param>
		<description>
			Emitted when the currentUsage property changes
		</description>
	</signal>

	<signal name="changed">
		<description>
			Emitted whenever any property of this object changes value
		</description>
	</signal>

	<property type="EntitlementOperation?" name="syncOperation" readonly="true">
		<description>
			Current remote sync operation if one is in progress, null otherwise
		</description>
	</property>
</interface>
