<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.ea.eadm</groupId>
	<artifactId>OriginInstaller</artifactId>
	<name>OriginSetup</name>
	<version>${version}-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<distributionManagement>
		<!-- Fusion Snapshots -->
    <snapshotRepository>
			<id>nexus.snapshots</id>
			<url>http://ebisu-build03:8088/nexus/content/repositories/snapshots</url>
			<uniqueVersion>true</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>
	
	<!-- Source Control Management -->
    <!-- http://maven.apache.org/ref/current/maven-model/maven.html#class_scm -->
    <!-- NOTE: This block must exist independently in each child project! -->
    <scm>
        <connection>
            scm:perforce:eac-p4proxy:4487://global_online/origin/client/
        </connection>
        <developerConnection>${scm.connection}</developerConnection>
        <url>http://docs.online.ea.com:4487/global_online/origin/client/main/</url>
    </scm>
	
	<build>
		<plugins>
			<!-- Zip up the relevant build artifacts -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>release-build</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
                            <finalName>${artifactId}-${version}-${env.BUILD_NUMBER}</finalName>
							<descriptors>
								<descriptor>./scripts/${artifactId}-assembly.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
	</dependencies>
</project>
