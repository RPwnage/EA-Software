<?xml version="1.0"?>
<interface>
	<description>Helper class for boxart related functionality</description>

    <method name="imageTop">
        <description>
            For cropped boxart, the image top coordinate should be translated to this pixel location relative to its container's top.
        </description>
    </method>

    <method name="imageLeft">
        <description>
            For cropped boxart, the image left coordinate should be translated to this pixel location relative to its container's left.
        </description>
    </method>

    <method name="imageScale">
        <description>
            For cropped boxart, the image should be set to this scale.
        </description>
    </method>

    <property type="Integer" name="cropCenterX" readonly="true">
        <description>
            For cropped boxart, the x coordinate of the center of the cropped area using image pixel coordinates.
        </description>
    </property>

    <property type="Integer" name="cropCenterY" readonly="true">
        <description>
            For cropped boxart, the y coordinate of the center of the cropped area using image pixel coordinates.
        </description>
    </property>

    <property type="Integer" name="cropWidth" readonly="true">
        <description>
            For cropped boxart, the width of the cropped area in pixels.
        </description>
    </property>

    <property type="Integer" name="cropHeight" readonly="true">
        <description>
            For cropped boxart, the height of the cropped area in pixels.
        </description>
    </property>

    <property type="Integer" name="cropTop" readonly="true">
        <description>
            For cropped boxart, the top coordinate of the cropped area relative to the image top.
        </description>
    </property>

    <property type="Integer" name="cropLeft" readonly="true">
        <description>
            For cropped boxart, the left coordinate of the cropped area relative to the image left.
        </description>
    </property>

    <property type="Boolean" name="croppedBoxart" readonly="true">
        <description>
            Has the boxart been cropped?
        </description>
    </property>

    <property type="String[]" name="boxartUrls" readonly="true">
        <description>
            Array of URLs for the entitlement's box art in descending order of preference. These are images styled to resemble the front art of a physical game package. URLs in this array may not exist; the next URL should be tried if a URL fails to load.
        </description>
    </property>

    <property type="String?" name="customizedBoxart" readonly="true">
        <description>
            Data url for a customized boxart.
        </description>
    </property>

</interface>
