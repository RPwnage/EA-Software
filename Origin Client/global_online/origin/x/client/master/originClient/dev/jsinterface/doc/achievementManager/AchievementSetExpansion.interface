<?xml version="1.0"?>
<interface>
	<description>
		This expansion object contains all the achievements for a given expansion. 
	</description>

  <property name="id" type="String">
    <description>
      The identifier for this expansion.
    </description>
  </property>

  <property name="achievements" type="Achievement[]">
    <description>
      The achievements in the expansion.
    </description>
  </property>

  <property name="total" type="Integer">
    <description>
      Get the total achievements a user can achieve with this expansion.
    </description>
  </property>

  <property name="achieved" type="Integer">
    <description>
      Get the total granted achievements a user has achieved with this expansion.
    </description>
  </property>

  <property name="totalXp" type="Integer" >
    <description>
      Get the total Xp for all achievements in this expansion.
    </description>
  </property>

  <property name="totalRp" type="Integer" >
    <description>
      Get the total Rp for all achievements in this expansion.
    </description>
  </property>

  <property name="earnedXp" type="Integer" >
    <description>
      Get the earned Xp for all the achieved achievements in this expansion.
    </description>
  </property>

  <property name="earnedRp" type="Integer" >
    <description>
      Get the earned Rp for all the achieved achievements in this expansion.
    </description>
  </property>

  <property name="platform" type="String" >
    <description>
      A comma separated list with the supported platform for this expansion.
    </description>
  </property>

  <property name="displayName" type="String" >
    <description>
      The game name of the game belonging to this expansion.
    </description>
  </property>

  <property name="owned" type="Boolean" >
    <description>
      Indication whether this expansion is owned.
    </description>
  </property>
  
  <method name="getAchievementSet" return="AchievementSet?" >
	<param name="id" type="String" />
    <description>
      Get the parent achievement set.
    </description>
  </method>

</interface>
