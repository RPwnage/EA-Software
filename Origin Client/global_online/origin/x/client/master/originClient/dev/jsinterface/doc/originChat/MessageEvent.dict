<?xml version="1.0"?>
<dict inherits="ConversationEvent">
	<description>Chat message that has been sent or received</description>

	<member name="from" type="SocialUser">
		<description>Sender of the message</description>
	</member>

	<member name="body" type="String">
		<description>Plain text body of the message. This value is remotely provided and must not be trusted. In particular, it may contain malicious HTML special characters.</description>
	</member>

	<member name="threadId" type="String">
		<description>Thread ID of the message. See XEP-0201 for threading best practices.</description>
	</member>
</dict>
