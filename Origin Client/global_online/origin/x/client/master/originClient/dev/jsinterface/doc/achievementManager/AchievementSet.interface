<?xml version="1.0"?>
<interface>
	<description>
		This achievement set object contains all the achievements for a certain title. 
	</description>

  <property name="id" type="String">
    <description>
      The identifier for this achievement set.
    </description>
  </property>

  <property name="achievements" type="Achievement[]">
    <description>
      The achievements in the achievement set.
    </description>
  </property>

  <property name="expansions" type="AchievementSetExpansion[]">
    <description>
      The expansions in the achievement set.
    </description>
  </property>

  <property name="total" type="Integer">
    <description>
      Get the total achievements a user can achieve with the games in the library.
    </description>
  </property>

  <property name="achieved" type="Integer">
    <description>
      Get the total granted achievements a user has achieved with the games in the library.
    </description>
  </property>

  <property name="totalXp" type="Integer" >
    <description>
      Get the total Xp for all achievements in the set.
    </description>
  </property>

  <property name="totalRp" type="Integer" >
    <description>
      Get the total Rp for all achievements in the set.
    </description>
  </property>

  <property name="earnedXp" type="Integer" >
    <description>
      Get the earned Xp for all the achieved achievements in the set.
    </description>
  </property>

  <property name="earnedRp" type="Integer" >
    <description>
      Get the earned Rp for all the achieved achievements in the set.
    </description>
  </property>

  <property name="platform" type="String" >
    <description>
      A comma separated list with the supported platform for this achievement set.
    </description>
  </property>

  <property name="displayName" type="String" >
    <description>
      The game name of the game belonging to this achievement set.
    </description>
  </property>

  <property name="isUpdated" type="Boolean" >
    <description>
      Indicator whether the data comes from the cache or was updated from GOS.
    </description>
  </property>

  <property name="lastUpdated" type="Date?" >
    <description>
      The time when the achievement Set was last updated.
    </description>
  </property>
  
  
  <method name="getAchievement" return="Achievement?" >
	<param name="id" type="String" />
    <description>
      Get an achievement by id.
    </description>
  </method>

  <method name="getExpansion" return="AchievementSetExpansion?" >
	<param name="id" type="String" />
    <description>
      Get the expansion associated with the id.
    </description>
  </method>
  
  <signal name="updated">
    <description>
      Fired when something in the achievement set has changed. Check the isUpdated flag to check whether the data came from GOS, or from the local file system.
    </description>
  </signal>

  <signal name="achievementAdded">
    <param name="achievement" type="Achievement" />
    <description>
      Fired when an achievement is added to the achievement set
    </description>
  </signal>

  <signal name="achievementRemoved">
    <param name="achievement" type="Achievement" />
    <description>
      Fired when an achievement is removed from the achievement set
    </description>
  </signal>
  
  <signal name="expansionAdded">
    <param name="expansion" type="AchievementSetExpansion" />
    <description>
      Fired when an achievement is added to the achievement set
    </description>
  </signal>

  <signal name="expansionRemoved">
    <param name="expansion" type="AchievementSetExpansion" />
    <description>
      Fired when an expansion is removed from the achievement set
    </description>
  </signal>

</interface>
