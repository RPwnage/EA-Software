<?xml version="1.0"?>
<interface>
	<description>
		The statistics object allows for performing simple statistics operations on the users achievement portfolio.
	</description>

  <method name="mostXpIn" return="AchievementStatisticsMostPointsInPeriod?" >
    <param name="period" type="Integer" />
    <description>
      This method calculates how much and on/in which day(0), week(1), month(2), or year(3) you earned the most Xp.
      The method returns the amount, and when in an AchievementStatisticsMostPointsInPeriod object.
    </description>
  </method>

  <method name="mostRpIn" return="AchievementStatisticsMostPointsInPeriod?" >
    <param name="period" type="Integer" />
    <description>
      This method calculates how much and on/in which day(0), week(1), month(2), or year(3) you earned the most Rp.
      The method returns the amount, and when in an AchievementStatisticsMostPointsInPeriod object.
    </description>
  </method>

  <method name="mostCntIn" return="AchievementStatisticsMostPointsInPeriod?" >
    <param name="period" type="Integer" />
    <description>
      This method calculates how much and on/in which day(0), week(1), month(2), or year(3) you earned the most achievements.
      The method returns the amount, and when in an AchievementStatisticsMostPointsInPeriod object.
    </description>
  </method>

  <method name="topAchievement" return="AchievementStatisticsAchievement?" >
    <description>
      Returns the most recent achievementset, and achievement that awarded the most Xp.
    </description>
  </method>

  <method name="withinReach" return="AchievementStatisticsAchievement[]" >
    <param name="count" type="Integer" />
    <description>
      Returns the most recent achievementsets, and achievements that are in reach of being achieved.
      Pinned achievements go first, and then all meta achievements with progress greater than 50%, and the first couple of not achieved achievements of each game.
      'count' controls the maximum size of the list.
    </description>
  </method>

  <method name="earnedRecently" return="AchievementStatisticsAchievement[]" >
    <param name="count" type="Integer" />
    <description>
      Returns the most recently earned achievementsets, and achievements ordered by date/time.
      'count' controls the maximum size of the list.
    </description>
  </method>
  
</interface>
