<?xml version="1.0"?>
<interface root="true">
	<description>Root object for accessing chat-related functionality</description>
	<method name="getConversationById" return="Conversation?">
		<param name="id" type="String" />
		<description>Gets a conversation based on its ID. Null is returned if not conversation with the passed ID exists</description>
	</method>

	<property type="Boolean" name="showTimestamps" readonly="true">
		<description>Indicates if the user has requested that timestamps be displayed in the chat history</description>
	</property>

	<property type="Integer?" name="maximumOutgoingMessageBytes" readonly="true">
		<description>Exposes the implementation's maximum outgoing message size in UTF-8 encoded bytes. If this property is null the implementation has no outgoing message size limitation.</description>
	</property>

	<property type="Boolean" name="multiUserChatCapable">
		<description>Indicates if the implementation currently supports multi-user chat conversations. If this property changes at runtime multiUserChatCapabilityChanged will be emitted.</description>
	</property>

	<signal name="multiUserChatCapabilityChanged">
		<description>Emitted whenever the multiUserChatCapable property changes</description>
	</signal>

	<property name="conversations" type="Conversation[]" readonly="true">
		<description>List of all unfinished conversations</description>
	</property>

	<signal name="showTimestampsChanged">
		<description>Emitted whenever the showTimestamps property changes</description>
	</signal>
</interface>
