<?xml version="1.0"?>
<interface root="true">
	<description>Provides a method for pages to detect if they're visible. This interface is based on the W3C Page Visibility API</description>

	<property name="hidden" type="Boolean" readonly="true">
		<description>Indicates if the page is not visible at all</description>
	</property>

	<property name="visibilityState" type="VisibilityState" readonly="true">
		<description>Indicates the visibility state of the page</description>
	</property>

	<signal name="visibilityChanged">
		<description>Fired whenever the page's visibility changes</description>
	</signal>
</interface>
