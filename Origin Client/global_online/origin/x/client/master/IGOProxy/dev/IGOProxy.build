<project name="IGOProxy" default="build">
    <!-- ************************* -->
    <!-- EAConfig target overrides -->
    <!-- ************************* -->
	<optionset name="config.targetoverrides" >
		<option name="clean" value="exclude"/>
	</optionset>

  
  <property name="dirtysdk-samples" value="false" />
  <property name="eaconfig.rtti" value="on" />	
	
	<!-- ******************* -->
	<!-- Package declaration -->
	<!-- ******************* -->
	<property name="package.IGOProxy.dir"  value="@{PathGetFullPath('.')}"/>
	<property name="module.IGOProxy.dir" value="${package.IGOProxy.dir}/.." />
	<property name="package.IGOProxy.version"  value="@{PathGetFileName(@{PathGetFullPath('.')})}"/>
	<package name="IGOProxy" targetversion="${package.IGOProxy.version}"/>
    <property name="runtime.originClient.outputdir" value="${package.IGOProxy.dir}/../../originClient/dev/runtime" />
		
	<!-- ******************* -->
    <!-- Package dependencies -->
    <!-- ******************* -->
	<dependent name="OriginConfig" />
	<dependent name="OriginVersion" />
	<dependent name="VisualStudio" />

  <!-- This enables the NANT built IGOProxy -->
  <include file="${module.IGOProxy.dir}/IGOProxy.xml" if="${config-system} == 'pc'"/>
  
  <target name="clean-custom">
	<call target="clean-igoproxy"  if="${config-system} == 'pc'" />
  </target>
</project>
