Origin--UIToolkit--OriginCloseButton[style="large"]
{
	border: none;
	outline: none;
	min-width: 20px;
	min-height: 20px;
	max-width: 20px;
	max-height: 20px;
	background: transparent url(:/OriginCommonControls/OriginCloseButton/close-sprite.png) no-repeat;
    background-position: top;
}

Origin--UIToolkit--OriginCloseButton[style="small"]
{
    border: none;
	outline: none;
	min-width: 12px;
	min-height: 12px;
	max-width: 12px;
	max-height: 12px;
	background: transparent url(:/OriginCommonControls/OriginCloseButton/close-small-sprite.png) no-repeat;
    background-position: top;
}

Origin--UIToolkit--OriginCloseButton:hover
{
	background-position: center;
}

Origin--UIToolkit--OriginCloseButton:pressed
{
	background-position: bottom;
}