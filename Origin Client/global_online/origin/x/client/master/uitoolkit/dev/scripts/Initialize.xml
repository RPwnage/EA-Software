<project>
	<property name="package.uitoolkit.includedirs">
		${package.uitoolkit.dir}/include/Qt
		${package.uitoolkit.dir}/include
		${package.uitoolkit.dir}/generated/${config}
	</property>

	<property name="package.uitoolkit.libdir" value="${package.uitoolkit.builddir}/${config}/lib" />
	
    <fileset name="package.uitoolkit.libs">
        <includes name="${package.uitoolkit.libdir}/uitoolkit.lib" if="${config-system} == 'pc'"/>
        <includes name="${package.uitoolkit.libdir}/libuitoolkit.a" if="${config-system} == 'osx'"/>
    </fileset>
	</project>