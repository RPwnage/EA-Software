<project>

	<!-- eajpeg header files location. -->
	<property name="package.eajpeg.includedirs">
		${package.eajpeg.dir}/include/
	</property>

	<!-- eajpeg libraries location. -->
	<do if="@{PropertyExists('config')}">
		<do if="@{PropertyExists('lib-prefix')}">
			<do if="@{PropertyExists('lib-suffix')}">
				<fileset name="package.eajpeg.libs">
					<includes name="${package.eajpeg.builddir}/${config}/lib/${lib-prefix}eajpeg${lib-suffix}" />
				</fileset>
			</do>
		</do>
	</do>

</project>

