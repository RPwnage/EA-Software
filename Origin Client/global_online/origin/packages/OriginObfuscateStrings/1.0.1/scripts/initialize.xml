<project>
    <property name="package.OriginObfuscateStrings.exe" value="${package.OriginObfuscateStrings.dir}/PostBuildTool/bin/ObfuscateStrings.exe"/>
    <property name="package.OriginObfuscateStrings.exe" value="${package.OriginObfuscateStrings.dir}/PostBuildTool/bin/ObfuscateStrings" if="${config-system} == 'osx'"/>

    <fileset name="package.OriginObfuscateStrings.libs">
        <includes name="${package.OriginObfuscateStrings.builddir}/${config}/lib/${lib-prefix}Deobfuscate${lib-suffix}"/>
    </fileset>

    <createtask name="OriginObfuscateStrings.obfuscate">
      <parameters>
        <option name="infile" value="required"/>
      </parameters>
      <code>
      <exec program="${package.OriginObfuscateStrings.exe}">
        <args>
          <arg value="-file:&quot;${OriginObfuscateStrings.obfuscate.infile}&quot;"/>
        </args>
      </exec>
      <sleep seconds="1"/><!-- There are occasional write errors after this command -->
      </code>
    </createtask>
    <property name="package.OriginObfuscateStrings.includedirs">
        ${package.OriginObfuscateStrings.dir}/Deobfuscate/include
    </property>
</project>
