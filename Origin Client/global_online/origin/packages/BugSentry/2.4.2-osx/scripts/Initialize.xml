<project>
    <property name="package.BugSentry.includedirs">
        ${package.BugSentry.dir}/include/common
        ${package.BugSentry.dir}/include/${config-system}
    </property>

    <property name="package.BugSentry.includedirs" if="${config-system} == pc64">
        ${package.BugSentry.dir}/include/common
        ${package.BugSentry.dir}/include/pc
    </property>

    <fileset name="package.BugSentry.libs">
        <includes name="${package.BugSentry.builddir}/${config}/lib/${lib-prefix}BugSentry${lib-suffix}"/>
    </fileset>
</project>
