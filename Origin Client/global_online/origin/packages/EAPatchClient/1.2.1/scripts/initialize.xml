<project>

    <!-- EAPatchClient header files location. -->
    <property name="package.EAPatchClient.includedirs">
        ${package.EAPatchClient.dir}/include
    </property>

    <!-- These are properties that external packages use to read our test directory header and source files. -->
    <property name="package.EAPatchClient.test_includedir" value="${package.EAPatchClient.dir}/test/include"/>
    <property name="package.EAPatchClient.test_sourcedir"  value="${package.EAPatchClient.dir}/test/source"/>
        
    <!-- EAPatchClient libraries location. -->
    <fileset name="package.EAPatchClient.libs">
        <includes name="${package.EAPatchClient.builddir}/${config}/lib/${lib-prefix}EAPatchClient${lib-suffix}" />
    </fileset>

    <do if="'${config-system}' == 'pc' or '${config-system}' == 'pc64'">
        <fileset name="package.EAPatch.libs.external" append="true">
            <includes name="version.lib" asis="true"/>
        </fileset>
    </do>

</project>
