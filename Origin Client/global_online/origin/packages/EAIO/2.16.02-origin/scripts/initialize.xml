<project>

	<!-- EAIO header files location. -->
	<property name="package.EAIO.includedirs">
		${package.EAIO.dir}/include
	</property>

	<!-- EAIO libraries location. -->
	<do if="@{PropertyExists('config')}">
		<do if="@{PropertyExists('lib-prefix')}">
			<do if="@{PropertyExists('lib-suffix')}">
				<fileset name="package.EAIO.libs">
					<includes name="${package.EAIO.builddir}/${config}/lib/${lib-prefix}EAIO${lib-suffix}" />
				</fileset>
			</do>
		</do>
	</do>

    <fileset name="package.EAIO.java.classes" basedir="${package.EAIO.builddir}/${config}/bin/EAIO/classes" >
        <includes name="**\*.class"/>
    </fileset>

</project>
