<project>
  <include file="version.xml"/>
  <choose>
    <do if="${config-system} == 'pc' or ${config-system} == 'pc64'">
      <dependent name="VisualStudio"/>
      <property name="toolset" value="UNKNOWN"/>
      <property name="toolset" value="v100" if="@{StrIndexOf('${config-vs-version}', '10.0')} == 0"/>
      <property name="toolset" value="v110" if="@{StrIndexOf('${config-vs-version}', '11.0')} == 0"/>
      <property name="toolset" value="v120" if="@{StrIndexOf('${config-vs-version}', '12.0')} == 0"/>
      <property name="toolset" value="v140" if="@{StrIndexOf('${config-vs-version}', '14.0')} == 0"/>
      <property name="toolset" value="v141" if="@{StrIndexOf('${config-vs-version}', '15.0')} == 0"/>
	  <property name="toolset" value="v142" if="@{StrIndexOf('${config-vs-version}', '16.0')} == 0"/>
      <fail message="OriginSDK failed to resolved VS toolset" if="${toolset} == 'UNKNOWN'"/>
      <property name="toolset" value="${package.VisualStudio.platformtoolset??${toolset}}" />
      <property name="package.OriginSDK.suffix" value="-${OriginSDK.VersionName}.${config-platform}-${config-name}.${toolset}"/>
    </do>
    <do>
      <property name="package.OriginSDK.suffix" value="-${OriginSDK.VersionName}.${config-platform}-${config-name}"/>
    </do>
  </choose>
  <choose>
    <do if="${config-system} == 'pc' or ${config-system} == 'pc64'">
      <fileset name="package.OriginSDK.libs">
        <includes name="${package.OriginSDK.builddir}/${config}/lib/OriginSDK${package.OriginSDK.suffix}.lib"/>
      </fileset>
    </do>
    <do>
      <fileset name="package.OriginSDK.libs">
        <includes name="${package.OriginSDK.builddir}/${config}/lib/libOriginSDK${package.OriginSDK.suffix}.a"/>
      </fileset>
    </do>
  </choose>

  <do if="${package.OriginSDK.Dll??${Dll??false}}">
    <do if="${config-system} == 'pc' or ${config-system} == 'pc64'">
      <fileset name="package.OriginSDK.dlls">
        <includes name="${package.OriginSDK.builddir}/${config}/bin/OriginSDK${package.OriginSDK.suffix}${dll-suffix}"/>
      </fileset>
    </do>
  </do>

  <property name="package.OriginSDK.includedirs">
    ${package.OriginSDK.dir}/include
  </property>
</project>
