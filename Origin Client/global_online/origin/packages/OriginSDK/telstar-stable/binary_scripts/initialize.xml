<project>
    <property name="package.eaconfig.isusingvc9" value="false" unless="@{PropertyExists('package.eaconfig.isusingvc9')}"/>
    <property name="package.eaconfig.isusingvc10" value="false" unless="@{PropertyExists('package.eaconfig.isusingvc10')}"/>
    <property name="package.eaconfig.isusingvc11" value="false" unless="@{PropertyExists('package.eaconfig.isusingvc11')}"/>

    <property name="package.OriginSDK.vsversion" value="v90" if="${package.eaconfig.isusingvc9}" />
    <property name="package.OriginSDK.vsversion" value="v100" if="${package.eaconfig.isusingvc10}" />
    <property name="package.OriginSDK.vsversion" value="v110" if="${package.eaconfig.isusingvc11}" />

    <include file="version.xml"/>    
    <dependent name="EAThread"/>
  
    <do if='${config-system}==pc or ${config-system}==pc64'>
      <property name="filename" value="${package.OriginSDK.dir}/lib/OriginSDK-${OriginSDK.VersionName}-${package.EAThread.version}.${config}.${package.OriginSDK.vsversion}.lib"/>
      <fileset name="package.OriginSDK.libs">
          <!--Make sure to update the manifest as well-->
          <includes name="${filename}" if="@{FileExists(${filename})}"/>
      </fileset>
    </do>

    <property name="package.OriginSDK.includedirs">
        ${package.OriginSDK.dir}/include
    </property>
</project>
