    <!-- =================  PS3  =================== -->
    <property if="${config-system} == 'ps3'" name="package.DirtySDK.contribs.available">
    </property>

    <!-- =================  WINRT  =================== -->
    <property if="${config-system} == 'winrt'" name="package.DirtySDK.contribs.available">
    </property>

    <!-- =================  WINPRT  =================== -->
    <property if="${config-system} == 'winprt'" name="package.DirtySDK.contribs.available">
    </property>

