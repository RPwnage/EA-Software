<project>
    <DynamicLibrary name="dirtyshark" if="${Dll??false} and ${config-compiler} == 'vc'" frompartial="DSLibrary">
        <sourcefiles basedir="${package.DirtySDK.dir}">
            <includes fromfile="${package.DirtySDK.dir}/contrib/dirtyshark/project/${config-system}/source.txt"/>
        </sourcefiles>

        <resourcefiles>
            <includes name="${package.DirtySDK.dir}/contrib/dirtyshark/source/pc/eatunnel/eatunnel.rc"/>
        </resourcefiles>

        <dependencies>
            <auto>
                WireShark
                DirtySDK/dirtysock
            </auto>
        </dependencies>

        <config>
            <warningsuppression>
                -wd4127 <!-- $$todo remove this when the code is cleaned up -->
            </warningsuppression>
        </config>
    </DynamicLibrary>
</project>
