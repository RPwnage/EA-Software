<project>
    <target name="dirtysdk-edit-chmdocs" description="Open the chm files for edit and overwrites them with the newly generated chm files of the release" hidden="true">
        <p4 command="client -f -s -S //gos-stream/rel-${dirtysdk-version} ${dirtysdk-release-workspace}"/>
        <foreach item="String" in="xboxone ps4 pc ps3 unix winrt xenon" property="platform">
            <p4edit files="${dirtysdk-release-clientdir}\doc\chm\${platform}\DirtySock.chm" change="${p4.change}" client="${dirtysdk-release-workspace}" />
            <copy file="${dirtysdk-chm-dir}\${platform}\DirtySock.chm" tofile="${dirtysdk-release-clientdir}\doc\chm\${platform}\DirtySock.chm" clobber="true" />
        </foreach>
    </target>

    <target name="dirtysdk-edit-versionfiles" description="Open version.txt and dirtyvers.h files for edit and overwrite them with the updated files" hidden="true">
        <p4 command="client -f -s -S //gos-stream/rel-${dirtysdk-version} ${dirtysdk-release-workspace}"/>
        <p4edit files="${dirtysdk-release-clientdir}\version.txt" change="${p4.change}" client="${dirtysdk-release-workspace}"/>
        <copy file="${package.dir}\version.txt" todir="${dirtysdk-release-clientdir}" clobber="true" />
        <p4edit files="${dirtysdk-release-clientdir}\include\DirtySDK\dirtyvers.h" change="${p4.change}" client="${dirtysdk-release-workspace}"/>
        <copy file="${package.dir}\include\DirtySDK\dirtyvers.h" todir="${dirtysdk-release-clientdir}\include\DirtySDK" clobber="true" />
    </target>

    <target name="dirtysdk-edit-mapparse" description="Open memory.txt and summary.txt files for edit and overwrite them with the updated files" hidden="true">
        <p4 command="client -f -s -S //gos-stream/rel-${dirtysdk-version} ${dirtysdk-release-workspace}"/>
        <!-- Move memory usage and summary reports for Xenon -->
        <foreach item="String" in="xenon-vc" property="dirtysdk-config">
            <property name="platform" value="@{StrSubstring(${dirtysdk-config}, '0', @{StrIndexOf(${dirtysdk-config}, '-')})}" />
            <property name="dirtysdk-targ-dir" value="dev-debug" />
            <p4edit files="${dirtysdk-release-clientdir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-memory.txt" change="${p4.change}" client="${dirtysdk-release-workspace}"/>
            <copy file="${package.dir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-memory.txt" tofile="${dirtysdk-release-clientdir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-memory.txt" clobber="true" />
            <p4edit files="${dirtysdk-release-clientdir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-summary.txt" change="${p4.change}" client="${dirtysdk-release-workspace}"/>
            <copy file="${package.dir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-summary.txt" tofile="${dirtysdk-release-clientdir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-summary.txt" clobber="true" />
        </foreach>
    </target>
    
    <target name="dirtysdk-dashboard-edit-mapparse" description="Open memory.txt and summary.txt files for edit and overwrite them with the updated files" hidden="true">
        <!-- Move memory usage and summary reports for Xenon -->
        <foreach item="String" in="xenon-vc" property="dirtysdk-config">
            <property name="platform" value="@{StrSubstring(${dirtysdk-config}, '0', @{StrIndexOf(${dirtysdk-config}, '-')})}" />
            <property name="dirtysdk-targ-dir" value="dev-debug" />
            <p4edit files="${dirtysdk-release-clientdir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-memory.txt" change="${p4.change}"/>
            <copy file="${package.dir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-memory.txt" tofile="${dirtysdk-release-clientdir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-memory.txt" clobber="true" />
            <p4edit files="${dirtysdk-release-clientdir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-summary.txt" change="${p4.change}"/>
            <copy file="${package.dir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-summary.txt" tofile="${dirtysdk-release-clientdir}\doc\codesize\${platform}\${platform}-${dirtysdk-targ-dir}-summary.txt" clobber="true" />
        </foreach>
    </target>
    
    <target name="dirtysdk-dashboard-edit-chmdocs" description="Open the chm files for edit and overwrites them with the newly generated chm files of the release" hidden="true">
        <foreach item="String" in="xboxone ps4 pc ps3 unix winrt xenon" property="platform">
            <p4edit files="${dirtysdk-release-clientdir}\doc\chm\${platform}\DirtySock.chm" change="${p4.change}"/>
            <copy file="${dirtysdk-chm-dir}\${platform}\DirtySock.chm" tofile="${dirtysdk-release-clientdir}\doc\chm\${platform}\DirtySock.chm" clobber="true" />
        </foreach>
    </target>
</project>
