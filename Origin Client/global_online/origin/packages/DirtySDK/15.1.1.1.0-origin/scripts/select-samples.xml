<project>

    <!-- Create a list of sample libraries to use, based on the platform in question -->
    <property name="package.DirtySDK.samples.available"/>

    <!-- =================  Android  =================== -->
    <property if="${config-system} == 'android'" name="package.DirtySDK.samples.available">
        ticker
    </property>

    <!-- =================  Capilano  ================== -->
    <property if="${config-system} == 'capilano'" name="package.DirtySDK.samples.available">
        tester2host
    </property>
    
    <!-- =================  iPhone  =================== -->
    <property if="${config-system} == 'iphone'" name="package.DirtySDK.samples.available">
        tester2host
    </property>

    <!-- =================  Kettle  =================== -->
    <property if="${config-system} == 'kettle'" name="package.DirtySDK.samples.available">
        ticker
        tester2host
    </property>

    <!-- =================  OSX  =================== -->
    <property if="${config-system} == 'osx'" name="package.DirtySDK.samples.available">
        tester2host
    </property>

    <!-- =================  PC  =================== -->
    <property if="${config-system} == 'pc'" name="package.DirtySDK.samples.available">
        libstat
        offering
        tester2host
        tester2client
        tester2driver
    </property>

    <!-- =================  PC64  =================== -->
    <property if="${config-system} == 'pc64'" name="package.DirtySDK.samples.available">
        tester2host
    </property>

    <!-- =================  PS3  =================== -->
    <property if="${config-platform} == 'ps3-sn'" name="package.DirtySDK.samples.available">
        libstat
        tester2host
        ticker
    </property>

    <!-- =================  UNIX  =================== -->
    <property if="${config-system} == 'unix'" name="package.DirtySDK.samples.available">
        tester2host
    </property>

    <!-- =================  UNIX64  =================== -->
    <property if="${config-system} == 'unix64'" name="package.DirtySDK.samples.available">
        tester2host
    </property>

    <!-- =================  WINRT  =================== -->
    <property if="${config-system} == 'winrt'" name="package.DirtySDK.samples.available">
        ticker
        tester2host
    </property>

    <!-- =================  WINPRT  =================== -->
    <property if="${config-system} == 'winprt'" name="package.DirtySDK.samples.available">
        tester2host
        <!-- mclouatre 11/16/2012
             ticker is also supported on winprt, but there are limitaitons with solution generation
             I got it to work with only one sample listed here at a time. -->
    </property>

    <!-- =================  XENON  =================== -->
    <property if="${config-system} == 'xenon'" name="package.DirtySDK.samples.available">
        <!-- atgframework -->
        <!-- tester2host *must* come before other samples, until /XEXSECTION
             is done properly at the sample level instead of globally -->
        tester2host
        <!-- other samples must follow tester2host -->
        libstat
    </property>
</project>
