<project>
    <WindowsProgram name="offering" frompartial="WinDSProgram">
        <sourcefiles basedir="${package.dir}">
            <includes fromfile="${package.dir}/sample/offering/project/${config-system}/source.txt"/>
        </sourcefiles>

        <resourcefiles if="${config-system} == 'pc' or ${config-system} == 'pc64'">
            <includes name="${package.dir}/sample/offering/source/pc/Offering.rc"/>
        </resourcefiles>

        <dependencies>
            <auto>
                DirtySDK/dirtysock
                DirtySDK/common
            </auto>
        </dependencies>

        <libraries append="true">
            <includes name="comctl32.lib" asis="true"/>
        </libraries>

        <config>
            <warningsuppression>
                -wd4127 <!-- conditional expression is constant -->
                -wd4255 <!-- no function prototype given: converting '()' to '(void)' -->
            </warningsuppression>
        </config>
    </WindowsProgram>
</project>
