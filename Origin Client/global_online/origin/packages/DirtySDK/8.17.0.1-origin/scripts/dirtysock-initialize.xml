<project>

    <property name="package.DirtySDK.includedirs" if="${config-system} == 'pc64'">
        ${package.DirtySDK.dir}/platform
        ${package.DirtySDK.dir}/core/include
        ${package.DirtySDK.dir}/core/include/pc
    </property>
    <property name="package.DirtySDK.includedirs" if="${config-system} != 'pc64'">
        ${package.DirtySDK.dir}/platform
        ${package.DirtySDK.dir}/core/include
        ${package.DirtySDK.dir}/core/include/${config-system}
    </property>

    <!-- convenience names -->
    <property name="dirtysock_modulename"         value="dirtysock"/>

    <property name="package.DirtySDK.libs" value="${property.value};dirtysock" />
    
</project>
