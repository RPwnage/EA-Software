<project>
    <property name="package.DirtySDK.includedirs" if="${config-system} == 'pc64'">
        ${package.DirtySDK.dir}/include
    </property>
    <property name="package.DirtySDK.includedirs" if="${config-system} == 'pc64' and not @{PropertyExists('dirtysdk-namespaced-includes')}">
        ${property.value}
        ${package.DirtySDK.dir}/include/DirtySDK/comm/pc
        ${package.DirtySDK.dir}/include/DirtySDK/friend/pc
        ${package.DirtySDK.dir}/include/DirtySDK/dirtysock/pc
        ${package.DirtySDK.dir}/include/DirtySDK/game/pc
        ${package.DirtySDK.dir}/include/DirtySDK
        ${package.DirtySDK.dir}/include/DirtySDK/buddy
        ${package.DirtySDK.dir}/include/DirtySDK/comm
        ${package.DirtySDK.dir}/include/DirtySDK/crypt
        ${package.DirtySDK.dir}/include/DirtySDK/dirtysock
        ${package.DirtySDK.dir}/include/DirtySDK/friend
        ${package.DirtySDK.dir}/include/DirtySDK/game
        ${package.DirtySDK.dir}/include/DirtySDK/graph
        ${package.DirtySDK.dir}/include/DirtySDK/misc
        ${package.DirtySDK.dir}/include/DirtySDK/proto
        ${package.DirtySDK.dir}/include/DirtySDK/util
        ${package.DirtySDK.dir}/include/DirtySDK/voip
        ${package.DirtySDK.dir}/include/DirtySDK/xml
        ${package.DirtySDK.dir}/include/DirtySDK/web
    </property>
    <property name="package.DirtySDK.includedirs" if="${config-system} != 'pc64'">
        ${package.DirtySDK.dir}/include
    </property>
    <property name="package.DirtySDK.includedirs" if="${config-system} != 'pc64' and not @{PropertyExists('dirtysdk-namespaced-includes')}">
        ${property.value}
        ${package.DirtySDK.dir}/include/DirtySDK/comm/${config-system}
        ${package.DirtySDK.dir}/include/DirtySDK/friend/${config-system}
        ${package.DirtySDK.dir}/include/DirtySDK/dirtysock/${config-system}
        ${package.DirtySDK.dir}/include/DirtySDK/game/${config-system}
        ${package.DirtySDK.dir}/include/DirtySDK
        ${package.DirtySDK.dir}/include/DirtySDK/buddy
        ${package.DirtySDK.dir}/include/DirtySDK/comm
        ${package.DirtySDK.dir}/include/DirtySDK/crypt
        ${package.DirtySDK.dir}/include/DirtySDK/dirtysock
        ${package.DirtySDK.dir}/include/DirtySDK/friend
        ${package.DirtySDK.dir}/include/DirtySDK/game
        ${package.DirtySDK.dir}/include/DirtySDK/graph
        ${package.DirtySDK.dir}/include/DirtySDK/misc
        ${package.DirtySDK.dir}/include/DirtySDK/proto
        ${package.DirtySDK.dir}/include/DirtySDK/util
        ${package.DirtySDK.dir}/include/DirtySDK/voip
        ${package.DirtySDK.dir}/include/DirtySDK/xml
        ${package.DirtySDK.dir}/include/DirtySDK/web
    </property>

    <!-- convenience names -->
    <property name="dirtysock_modulename"         value="dirtysock"/>

    <property name="package.DirtySDK.libs" value="${property.value};dirtysock" />
    
</project>
