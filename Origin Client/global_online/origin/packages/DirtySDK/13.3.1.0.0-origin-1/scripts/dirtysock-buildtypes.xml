<project>

    <do if="${config-system} == 'unix' or ${config-system} == 'unix64'">
        <property name="runtime.internal.libs.ordered">
            ${property.value}
        </property>

        <include file="build-types.xml"/>
    </do>

    <!-- Defines custom build types for DirtySDK modules. 
    This is the correct way to set custom compiler, linker, and librarian flags in Framework2.
    You can also add custom flags in DirtySDK's config overrides, however beware that
    the config overrides are not used when building DirtySDK as a build dependency.
    -->

    <optionset name="config-options-library-ds" fromoptionset="config-options-library-c">
      <option name="buildset.name" value="DSLibrary"/>
    </optionset>
    <task name="GenerateBuildOptionset" configsetname="config-options-library-ds" />

    <optionset name="config-options-program-ds" fromoptionset="config-options-program-c">
      <option name="buildset.name" value="DSProgram"/>
    </optionset>
    <task name="GenerateBuildOptionset" configsetname="config-options-program-ds" />

    <optionset name="config-options-library-ds-cpp" fromoptionset="config-options-library">
      <option name="buildset.name" value="DSCppLibrary"/>
    </optionset>
    <task name="GenerateBuildOptionset" configsetname="config-options-library-ds-cpp" />

    <optionset name="config-options-program-ds-cpp" fromoptionset="config-options-program">
      <option name="buildset.name" value="DSCppProgram"/>
    </optionset>
    <task name="GenerateBuildOptionset" configsetname="config-options-program-ds-cpp" />

</project>
