<project>

    <!-- initialize the dirtysock SDK build -->
    <include file="dirtysock-initialize.xml"/>

    <!-- bring in DirtySDK.warningsuppression & AddDirtySDKLibsToModule -->
    <include file="dirtysock-external.xml" />
  
    <!-- decide which contribs to include -->
    <include file="select-contribs.xml"/>

    <!-- decide which samples to include -->
    <include file="select-samples.xml"/>

    <!-- build the library directory name -->
    <property name="package.DirtySDK.libdirname" value="${config-name}"/>

    <!-- build the config platform expression -->
    <do if="${config-platform} == 'iphone-gcc'">
       <property name="package.DirtySDK.configplatform" value="iphone-gcc"/>
       <do if="${config.iphone-sim} == true">
           <property name="package.DirtySDK.configplatform" value="iphonesim-gcc"/>
       </do>
    </do>
    <do if="${config-platform} != 'iphone-gcc'">
        <property name="package.DirtySDK.configplatform" value="${config-platform}"/>
    </do>

    <!-- now attach the rest of what we need, including the rest of the path and the wildcard for the libraries -->
    <do if="@{PropertyExists('dirtysdk-prebuilt-libs')}">
        <property name="package.DirtySDK.libdirname" value="${package.DirtySDK.dir}/build/DirtySDK/${package.DirtySDK.version}/${package.DirtySDK.configplatform}-${property.value}/lib/*${lib-suffix}"/>
    </do>
    <do unless="@{PropertyExists('dirtysdk-prebuilt-libs')}">
        <property name="package.DirtySDK.libdirname" value="${package.DirtySDK.builddir}/${package.DirtySDK.configplatform}-${property.value}/lib/*${lib-suffix}"/>
    </do>

    <!-- now specify include directories and library directory -->
    <task name="ScriptInit" PackageName="DirtySDK">
        <IncludeDirs>
            ${package.DirtySDK.includedirs}
        </IncludeDirs>
        <Libs>
            ${package.DirtySDK.libdirname}
        </Libs>
    </task>
</project>
