<project>
    <Program name="ticker" frompartial="DSProgram">
        <headerfiles basedir="${package.dir}">
            <includes name="sample/ticker/source/${dirtyplat}/*.h"/>
        </headerfiles>

        <sourcefiles basedir="${package.dir}">
            <includes fromfile="sample/ticker/project/${dirtyplat}/source.txt" if="@{FileExists('${package.dir}/sample/ticker/project/${dirtyplat}/source.txt')}"/>
            <includes fromfile="sample/ticker/project/${dirtyplat}/sourcecpp.txt" if="@{FileExists('${package.dir}/sample/ticker/project/${dirtyplat}/sourcecpp.txt')}" optionset="Program"/>
        </sourcefiles>

        <dependencies>
            <auto>
                DirtySDK/dirtysock

                <do if="${config-system} == 'kettle'">
                    EASTL
                    coreallocator
                    PPMalloc
                    EASystemEventMessageDispatcher
                    EAAssert
                    EAThread
                    IEASystemEventMessageDispatcher
                    EAMessage
                    IEAUser
                    IEAController
                    EAControllerUserPairing
                </do>
            </auto>
        </dependencies>

        <config>
            <warningsuppression>
                <do if="${config-compiler} == 'gcc'">
                    -Wno-unused-but-set-variable
                </do>
            </warningsuppression>
        </config>
    </Program>
</project>
