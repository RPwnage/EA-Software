<project>

    <!-- EXPORT: DirectX SDK dir.  This just points at the SDK copy inside this package -->
    <property name="package.DirectX.appdir" value="${package.DirectX.dir}\installed\DXSDK"/>

    <!-- EXPORT: Managed DirectX fileset -->
    <property name="package.DirectX.manageddir" value="${package.DirectX.dir}\installed\ManagedDirectX\v1.0.2902.0"/>
    <property name="package.DirectX.managedD3DXdir" value="${package.DirectX.dir}\installed\ManagedDirectX\v1.0.2911.0"/>

    <fileset name="package.DirectX.assemblies">
        <includes name="${package.DirectX.manageddir}\Microsoft.DirectX.AudioVideoPlayback.dll"/>
        <includes name="${package.DirectX.manageddir}\Microsoft.DirectX.Diagnostics.dll"/>
        <includes name="${package.DirectX.manageddir}\Microsoft.DirectX.Direct3D.dll"/>
        <includes name="${package.DirectX.manageddir}\Microsoft.DirectX.DirectDraw.dll"/>
        <includes name="${package.DirectX.manageddir}\Microsoft.DirectX.DirectInput.dll"/>
        <includes name="${package.DirectX.manageddir}\Microsoft.DirectX.DirectPlay.dll"/>
        <includes name="${package.DirectX.manageddir}\Microsoft.DirectX.DirectSound.dll"/>
        <includes name="${package.DirectX.manageddir}\Microsoft.DirectX.dll"/>
        <includes name="${package.DirectX.managedD3DXdir}\Microsoft.DirectX.Direct3DX.dll"/>
    </fileset>

    <fileset name="package.DirectX.managedfiles" fromfileset="package.DirectX.assemblies"/>

    <fileset name="package.DirectX.debugmanagedfiles">
        <includes name="${package.DirectX.manageddir}\Debug\Microsoft.DirectX.AudioVideoPlayback.dll"/>
        <includes name="${package.DirectX.manageddir}\Debug\Microsoft.DirectX.Diagnostics.dll"/>
        <includes name="${package.DirectX.manageddir}\Debug\Microsoft.DirectX.Direct3D.dll"/>
        <includes name="${package.DirectX.manageddir}\Debug\Microsoft.DirectX.DirectDraw.dll"/>
        <includes name="${package.DirectX.manageddir}\Debug\Microsoft.DirectX.DirectInput.dll"/>
        <includes name="${package.DirectX.manageddir}\Debug\Microsoft.DirectX.DirectPlay.dll"/>
        <includes name="${package.DirectX.manageddir}\Debug\Microsoft.DirectX.DirectSound.dll"/>
        <includes name="${package.DirectX.manageddir}\Debug\Microsoft.DirectX.dll"/>
        <includes name="${package.DirectX.managedD3DXdir}\Debug\Microsoft.DirectX.Direct3DX.dll"/>
    </fileset>


    <!-- EXPORT: include dirs, it's really just one dir -->
    <property name="package.DirectX.includedirs" value="${package.DirectX.appdir}\include"/>

    <!-- EXPORT: lib dir, Note: not dirs, there's only one dir -->    
    <property name="package.DirectX.libdir" value="${package.DirectX.appdir}\lib\x86" unless="@{PropertyExists('package.VisualStudio.64bit')}"/>
    <property name="package.DirectX.libdir" value="${package.DirectX.appdir}\lib\x64" if="@{PropertyExists('package.VisualStudio.64bit')}"/>


  <!-- EXPORT: bin dir, Note: not dirs, there's only one dir -->
    <property name="package.DirectX.bindir" value="${package.DirectX.appdir}\Utilities\Bin\x86"/>
    
    <!-- EXPORT: libs -->
    <fileset name="package.DirectX.libs">
        <includes name="${package.DirectX.libdir}\d3d11.lib"/>
        <includes name="${package.DirectX.libdir}\d3d12.lib"/>
		<includes name="${package.DirectX.libdir}\d3dcompiler.lib"/>
        <includes name="${package.DirectX.libdir}\dinput8.lib"/>
        <includes name="${package.DirectX.libdir}\dxguid.lib"/>
        <includes name="${package.DirectX.libdir}\dsound.lib"/>
        <includes name="${package.DirectX.libdir}\xinput.lib"/>
    </fileset>

    <!-- EXPORT: path to directory containing runtime DLLs. -->
    <property name="package.DirectX.developerruntimedir" value="${package.DirectX.dir}\installed\Developer Runtime\x86" unless="@{PropertyExists('package.VisualStudio.64bit')}"/>
    <property name="package.DirectX.developerruntimedir" value="${package.DirectX.dir}\installed\Developer Runtime\x64" if="@{PropertyExists('package.VisualStudio.64bit')}"/>

 
</project>
