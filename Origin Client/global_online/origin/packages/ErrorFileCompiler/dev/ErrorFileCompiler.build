<project default="build">
  <dependent name="DotNet"/>
  <!-- ErrorFileCompiler TOOL -->
  <property name="package.ErrorFileCompiler.dir"  value="@{PathGetFullPath('.')}"/>
  <property name="package.ErrorFileCompiler.version"  value="@{PathGetFileName('${package.ErrorFileCompiler.dir}')}"/>
  <package name="ErrorFileCompiler" targetversion="${package.ErrorFileCompiler.version}"/>

  <property name="runtime.buildtype" value="CSharpProgram" />
  
  <property name="runtime.outputdir" value="${package.dir}/bin" />

  <fileset name="runtime.sourcefiles">
    <includes name="${package.ErrorFileCompiler.dir}/Program.cs" />
  </fileset>

  <fileset name="runtime.assemblies">
    <includes name="${package.DotNet.appdir}/System.Core.dll" />
    <includes name="${package.DotNet.appdir}/System.Data.dll" />
    <includes name="${package.DotNet.appdir}/System.Data.DataSetExtensions.dll" />
    <includes name="${package.DotNet.appdir}/System.Windows.Forms.dll" />
    <includes name="${package.DotNet.appdir}/System.Xml.dll" />
    <includes name="${package.DotNet.appdir}/System.Xml.Linq.dll" />
  </fileset>
</project>