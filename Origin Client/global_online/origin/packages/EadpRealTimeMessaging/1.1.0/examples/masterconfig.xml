<project>
    <!-- import the shared xml -->
    <fragments>
        <include name="masterconfig_shared.xml" />
    </fragments>

    <masterversions>
        <!-- build environment packages -->
        <package name="MSBuildTools"                    version="15.9.9-dev" />
        <package name="WindowsSDK"                      version="10.0.18362-proxy">
            <exception propertyname="nonproxy">
                <condition value="true"                 version="10.0.18362"/>
            </exception>
        </package>

        <!-- dependent packages for runtime -->
        <package name="EAUser"                          version="1.09.01"/>
        <package name="EAMessage"                       version="2.10.07"/>
        <package name="IEASystemEventMessageDispatcher" version="1.00.05"/>
        <package name="EASystemEventMessageDispatcher"  version="1.05.01"/>
        <package name="EAIO"                            version="flattened"/>
    </masterversions>

    <buildroot>../build</buildroot>
    <ondemand>true</ondemand>
    <ondemandroot>../../packages</ondemandroot>

    <globalproperties>
        vsversion=2017
        eadpsdk_init_dirtysdk=true
        <if condition="${jenkins??false}">
            package.VisualStudio.use-non-proxy-build-tools=true
        </if>
    </globalproperties>

    <config package="eaconfig" default="pc64-vc-dev-debug" includes="pc64-vc-dev-debug
                                                                     pc64-vc-dll-dev-debug"/>
</project>
