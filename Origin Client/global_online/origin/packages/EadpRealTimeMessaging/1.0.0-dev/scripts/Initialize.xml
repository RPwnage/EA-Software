<project>
    <do if="${package.EadpFoundation.use_std_stl??false}">
      <property name="EADPSDK_USE_STD_STL" value="1" local="true" />
    </do>
    
    <property name="package.EadpRealTimeMessaging.sharedDefines">
      EADPSDK_USE_STD_STL=${EADPSDK_USE_STD_STL??0}
    </property>
    
    <publicdata packagename="EadpRealTimeMessaging">
        <runtime>
            <module name="EadpRealTimeMessaging" if="${config-system} == 'pc'
                                                     or ${config-system} == 'pc64'
                                                     or ${config-system} == 'osx'
                                                     or ${config-system} == 'osx64'">
                <includedirs>
                    ${package.EadpRealTimeMessaging.dir}/include
                </includedirs>
                <libs/> <!-- use default path -->
                <dlls if="${Dll??false}">
                    <includes name="${package.EadpRealTimeMessaging.builddir}/${config}/bin/EadpRealTimeMessaging${dll-suffix}"/>
                </dlls>

                <publicdependencies>
                    <do unless="${package.EadpFoundation.use_std_stl??false}">
                        EASTL
                    </do>
                    EadpFoundation
                </publicdependencies>
            </module>
        </runtime>
        <tests unless="${Dll??false}">
            <module name="EadpRealTimeMessaging-test" if="${config-system} == 'pc'
                                                          or ${config-system} == 'pc64'
                                                          or ${config-system} == 'osx'
                                                          or ${config-system} == 'osx64'"/>
        </tests>
        <examples>
            <module name="EadpRealTimeMessaging-demo-win" if="${config-system} == 'pc' or ${config-system} == 'pc64'"/>
            <module name="EadpRealTimeMessaging-demo-osx" if="${config-system} == 'osx' or ${config-system} == 'osx64'"/>
        </examples>
    </publicdata>
</project>
