<project name="EadpRealTimeMessaging" default="build">
    <package name="EadpRealTimeMessaging" targetversion="1.0.0-dev" initializeself="true"/>

    <property name="runtime.gen.slnname.template" value="%outputname%_${config-system}-${config-processor}"/>
    <property name="runtime.gen.projectname.template" value="${config-system}-${config-processor}_%outputname%"/>
    <property name="example.gen.slnname.template" value="%outputname%_${config-system}-${config-processor}"/>
    <property name="example.gen.projectname.template" value="${config-system}-${config-processor}_%outputname%"/>

    <property name="package.EadpRealTimeMessaging.modules">
        realtimemessaging
    </property>

    <property name="package.EadpRealTimeMessaging.demos">
        Realtimemessaging-demo-win
        Realtimemessaging-demo-osx
    </property>

    <!-- generate source files from protobuf definition file" -->
    <include file="scripts/protobuf-gen.xml" />

    <!-- module targets -->
    <foreach property="module" item="String" in="${package.EadpRealTimeMessaging.modules}">
        <include file="scripts/${module}-build.xml" />
    </foreach>

    <!-- test targets -->
    <foreach property="test" item="String" in="${package.EadpRealTimeMessaging.modules}">
        <include file="scripts/${test}-test.xml" ignoremissing="true" />
    </foreach>
	
    <!-- example targets -->
    <foreach property="demo" item="String" in="${package.EadpRealTimeMessaging.demos}">
        <include file="scripts/${demo}-build.xml"/>
    </foreach>


</project>
