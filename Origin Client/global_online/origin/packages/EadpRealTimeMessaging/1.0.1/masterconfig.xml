<project>
    <!-- import the shared xml -->
    <fragments>
        <include name="masterconfig_shared.xml" />
    </fragments>

    <masterversions>
        <!-- build environment packages -->
        <package name="VisualStudio"                    version="14.0.25420-1-proxy">
            <exception propertyname="vsversion">
                <!-- proxy package for vs2017 -->
                <condition value="2017"                 version="15.4.27004.2002-1-proxy"/>
            </exception>
        </package>
        <package name="WindowsSDK"                      version="10.0.14393-proxy"/>

        <!-- dependent packages for runtime -->
        <package name="EAUser"                          version="1.04.06"/>
        <package name="EAMessage"                       version="2.10.00"/>
        <package name="IEASystemEventMessageDispatcher" version="1.00.03"/>
        <package name="EASystemEventMessageDispatcher"  version="1.03.06"/>
        <package name="IEAController"                   version="1.02.03"/>
        <package name="EAIO"                            version="2.22.11"/>
    </masterversions>

    <buildroot>../build</buildroot>
    <ondemand>true</ondemand>
    <ondemandroot>../../packages</ondemandroot>

    <globalproperties>
        vsversion=2017
        eadpsdk_init_dirtysdk=true
    </globalproperties>

    <config package="eaconfig" default="pc64-vc-dev-debug" includes="pc64-vc-dev-debug
                                                                     pc64-vc-dll-dev-debug"/>
</project>
