<project>

	<!-- EATrace header files location. -->
	<property name="package.EATrace.includedirs">
		${package.EATrace.dir}/include
	</property>

	<!-- EATrace libraries location. -->
	<do if="@{PropertyExists('config')}">
		<do if="@{PropertyExists('lib-prefix')}">
			<do if="@{PropertyExists('lib-suffix')}">
				<fileset name="package.EATrace.libs">
					<includes name="${package.EATrace.builddir}/${config}/lib/${lib-prefix}EATrace${lib-suffix}" />
				</fileset>
			</do>
		</do>
	</do>

</project>
