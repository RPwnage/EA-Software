<project name="debug_helper" default="run">
	
    <!-- ******************* -->
    <!-- Package declaration -->
    <!-- ******************* -->
    <property name="package.debug_helper.dir"  value="@{PathGetFullPath('.')}"/>
    <property name="package.debug_helper.version"  value="@{PathGetFileName('${package.debug_helper.dir}')}"/>
    <package name="debug_helper" targetversion="${package.debug_helper.version}"/>

    <dependent name="ActivePython" version="2.7.6.9"/>
    
    <target name="run">
      <exec program="${package.ActivePython.exe}" >
        <arg value="${package.debug_helper.dir}/debug_helper.pyw"/>
      </exec>
    </target>
</project>