<project>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'lint')}' == 'exclude'">
    <target name="lint" description="Pc-Lint the specific configuration">
      <property name="eaconfig.build.group" value="runtime" />
      <call target="eaconfig-build-graph" force="true" />
      <call target="eaconfig-lint" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'lintall')}' == 'exclude'">
    <target name="lintall" description="Pc-Lint all the configurations">
      <property name="eaconfig.build.group" value="runtime" />
      <call target="eaconfig-build-graph-all" force="true" />
      <call target="eaconfig-lint" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <target name="eaconfig-lint" style="build" hidden="true" >


    <taskdef assembly="${nant.project.temproot}/eaconfig/eaconfig-lint.dll">
      <sources>
        <includes name="..\tasks\source\EaconfigLint.cs"/>
      </sources>
    </taskdef>

    <eaconfig-lint configs="${eaconfig.build.configs??${config}}"/>
  </target>

</project>
