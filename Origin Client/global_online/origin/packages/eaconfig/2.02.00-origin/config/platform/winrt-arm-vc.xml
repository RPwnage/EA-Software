<project>
  
  <property name="config-system"   value="winrt" />
  <property name="config-processor" value="arm" />
  <property name="config-compiler" value="vc" />
  <property name="config-platform" value="winrt-arm-vc" />

  <!-- pointer size -->
  <property name="platform-ptrsize" value="32bit"/>
  <!-- registers size -->
  <property name="platform-wordsize" value="32bit"/>

  <include file="winrt-vc-common.xml" />

  <optionset name="config-options-common">
    <option name="buildset.link.options">
      ${option.value}
      -machine:ARM    <!-- specify target platform to ARM -->
    </option>
  </optionset>

  <!-- +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+- -->
  <!-- +-+-  Visual Studio solution generation related data       -+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+- -->
  <!-- +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+- -->
  <property name="visualstudio.platform.name" value="ARM"/>


</project>