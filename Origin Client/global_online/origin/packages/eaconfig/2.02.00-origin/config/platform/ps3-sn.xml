<project>
    <property name="config-system"        value="ps3"/>
    <property name="config-compiler"      value="sn"/>
    <property name="config-platform"      value="ps3-sn"/>

    <property name="PlayStation3Package"    value="ps3sdk"/>

    <include file="ps3-common.xml"/>

  <optionset name="config-options-common">
    <option name="preprocess" value="ps3-sn-preprocess"/>
    <option name="postprocess">
      ps3-sn-postprocess
      all-platforms-postprocess
    </option>
  </optionset>

    <optionset name="config-options-ps3-ppu">
        <option name="link.template.commandline">
            %options%
            %objectfiles%
            %librarydirs%
            %libraryfiles%
        </option>
    </optionset>

    <optionset name="config-options-ps3-spu">
      <option name="as" value="@{OptionSetGetValue('ps3spu', 'as')}"/>
      <option name="cc" value="@{OptionSetGetValue('ps3spu', 'cc')}"/>
      <option name="link" value="@{OptionSetGetValue('ps3spu', 'link')}"/>
      <option name="lib" value="@{OptionSetGetValue('ps3spu', 'lib')}"/>
      <option name="buildset.link.librarydirs" value="@{OptionSetGetValue('ps3spu', 'link.librarydirs')}"/>
      <option name="buildset.cc.systemincludedirs" value="@{OptionSetGetValue('ps3spu', 'cc.includedirs')}"/>
      <!-- 
          for backwads compatibility put system includedirs into 'buildset.cc.includedirs' here and remove them in preprocess step.
          Some third party tasks may expect them here.
      -->
      <option name="buildset.cc.includedirs" value="@{OptionSetGetValue('ps3spu', 'cc.includedirs')}"/>
    </optionset>
    <property name="cc.includedirs"/>

  <!-- +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+- -->
  <!-- +-+-  Visual Studio solution generation related data       -+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+- -->
  <!-- +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+- -->
  <property name="visualstudio.platform-toolset" value="SNC"/>
  <property name="visualstudio.platform-toolset.spu" value="SPU"/>

</project>
