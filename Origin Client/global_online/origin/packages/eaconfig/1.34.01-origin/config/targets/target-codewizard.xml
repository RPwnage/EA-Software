<project>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'codewizard')}' == 'exclude'">
    <target name="codewizard" description="CodeWizard the specific configuration" style="build">
      <property name="eaconfig.build.target" value="eaconfig-codewizard" />
      <property name="eaconfig.build.group" value="runtime" />
      <call target="eaconfig-build-caller" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <target name="eaconfig-codewizard" hidden="true" style="build">

    <call target="__private_initialize"/>

    <property name="codewizardconfig.buildname" value="${build.outputname}" />

    <fileset name="codewizardconfig.sourcefiles" fromfileset="build.sourcefiles.all" />
    <property name="codewizardconfig.includedirs" value="@{OptionSetGetValue('config-options-common', 'buildset.cc.includedirs')} ${build.includedirs.all}" />
    <property name="codewizardconfig.defines" value="@{OptionSetGetValue('config-options-common', 'buildset.cc.defines')} ${build.defines.all}" />
    <property name="codewizardconfig.outputdir" value="${package.builddir}/${config}/codewizard/${build.module}" />

    <!--
    <property name="codewizardconfig.standards" value="EacCodingStandards" />
-->

    <dependent name="codewizardconfig"/>
    <include file="${codewizardconfig-targetfile}"/>
    <call target="package-codewizard" force="true" />
  </target>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'codewizardall')}' == 'exclude'">
    <target name="codewizardall" description="CodeWizard all the configurations">
      <property name="eaconfig.buildall.target" value="codewizard" />
      <property name="eaconfig.build.group" value="runtime" />
      <call target="eaconfig-buildall-caller" force="true" />
    </target>
  </do>

</project>
