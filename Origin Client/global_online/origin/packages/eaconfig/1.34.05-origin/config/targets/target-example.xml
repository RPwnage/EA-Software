<project>

  <property name="eaconfig.example.groupname" value="example" />
  <property name="eaconfig.example.outputfolder" value="/example" />
  <property name="eaconfig.example.sourcedir" value="examples" />
  <property name="eaconfig.example.usepackagelibs" value="true" />

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'example-build')}' == 'exclude'">  
    <target name="example-build" style="build" description="Build the examples for a specific configuration">
      <call target="build" force="false" if="@{TargetExists('build')}" />
      <property name="eaconfig.build.target" value="eaconfig-build" />
      <property name="eaconfig.build.group" value="example" />
      <call target="eaconfig-build-caller" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'example-buildall')}' == 'exclude'">
    <target name="example-buildall" description="Build the example program for each configuration">
      <property name="eaconfig.buildall.target" value="example-build" />
      <call target="eaconfig-buildall-caller" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'example-run')}' == 'exclude'">
    <target name="example-run" description="Runs the examples for a specific configuration" depends="example-build">
      <property name="eaconfig.build.group" value="example" />
      <property name="eaconfig-run-target-name" value="eaconfig-run" />
      <call target="eaconfig-run-caller" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'example-runall')}' == 'exclude' AND '@{OptionSetGetValue('eaconfig.targets', 'example-run')}' == 'exclude'">
    <target name="example-runall" description="Run the example program for each configuration">
      <property name="eaconfig.buildall.target" value="example-run" />
      <call target="eaconfig-buildall-caller" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'example-run-fast')}' == 'exclude' AND '@{OptionSetGetValue('eaconfig.targets', 'example-run')}' == 'exclude'">
    <target name="example-run-fast" description="Runs the examples for a specific configuration">
      <property name="eaconfig.build.group" value="example" />
        <property name="eaconfig-run-target-name" value="eaconfig-run" />
      <call target="eaconfig-run-caller" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'example-deploy')}' == 'exclude'">
    <target name="example-deploy" description="Deploys examples for a specific configuration">
      <property name="eaconfig.build.group" value="example" />
      <property name="eaconfig-run-target-name" value="eaconfig-deploy" />
      <call target="eaconfig-run-caller" force="true"/>
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'example-lint')}' == 'exclude'">
    <target name="example-lint" description="Pc-Lint the example code for the specific configuration" style="use">
      <property name="eaconfig.build.target" value="eaconfig-lint" />
      <property name="eaconfig.build.group" value="example" />
      <call target="eaconfig-build-caller" force="true" />
    </target>
  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('eaconfig.targets', 'example-codewizard')}' == 'exclude'">
    <target name="example-codewizard" description="CodeWizard the example code for the specific configuration" style="use">
      <property name="eaconfig.build.target" value="eaconfig-codewizard" />
      <property name="eaconfig.build.group" value="example" />
      <call target="eaconfig-build-caller" force="true" />
    </target>
  </do>

</project>
