<project>
  <!-- 
        Copies just built libraries and headers to the stable directory.

        Assumes outputdir from build task was ${build-dir}/${name}

        Inputs

            ${name}       Name of the component just built


        Example

            <target name="corelib">
                <property name="name" value="corelib"/>
                <build name="${name}" ...>
                    ...
                </build>
                <call target="copylib" force="true"/>
            </target>        
    -->

  <do if="false">
    <target name="copylib">
      <!-- create a named fileset for easy access to the library -->
      <fileset name="${name}">
        <includes name="${package.builddir}/${config}/build/${name}/${config}/${lib-prefix}${name}${lib-suffix}"/>
      </fileset>

      <!-- reset name property to prevent it from being used by another target -->
      <property name="name" value=""/>
    </target>
  </do>
</project>
