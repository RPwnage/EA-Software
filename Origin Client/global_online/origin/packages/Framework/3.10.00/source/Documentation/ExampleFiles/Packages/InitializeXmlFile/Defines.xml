<project>

  <property name="package.Havok.defines" if="${SIMD_IS_SUPPORTED??false}">
    HK_CONFIG_SIMD=1
  </property>

  <property name="package.Havok.defines" if="${config-system}==cafe">
    GEKKO
  </property>
  <property name="package.Havok.defines" if="${config-system}==xenon and ${USE_EXPLICIT_TLS??false}">
    ${property.value}
    HK_XBOX360_EXPLICIT_TLS=1
  </property>

  <!-- SPUs should always run havok without debugging -->
  <property name="package.Havok.defines.spu">
    ${package.Havok.defines}
    HK_DEBUG=0
  </property>

  <property name="debug_define" local="true" value="HK_DEBUG=0" unless="${lib_variant}==debug"/>
  <property name="debug_define" local="true" value="HK_DEBUG=1" if="${lib_variant}==debug or ${lib_variant}==fulldebug"/>
  <property name="package.Havok.defines">
    ${property.value}
    ${debug_define}
  </property>

  . . . . . . . . .

</project>