<project default="build">
  <package name="modules" targetversion="1.00.00" />

  <!-- Define LibModule module -->
  <property name="runtime.LibModule.buildtype" value="Library" />
  <property name="runtime.LibModule.includedirs" >
    ${package.dir}/include
  </property>

  <fileset name="runtime.LibModule.sourcefiles" >
    <includes name="${package.dir}/source/lib_module/*.cpp" />
  </fileset>

  <!-- Define ProgramModule module -->

  <property name="runtime.ProgramModule.buildtype" value="Program" />

  <property name="runtime.ProgramModule.includedirs" >
    ${package.dir}/include
  </property>


  <fileset name="runtime.ProgramModule.sourcefiles" >
    <includes name="${package.dir}/source/program_module/*.cpp" />
  </fileset>

  <!-- Define what to build and dependencies between modules -->

  <property name="runtime.buildmodules" >
    LibModule
    ProgramModule
  </property>

  <property name="runtime.ProgramModule.runtime.moduledependencies">
    LibModule
  </property>

</project>
