<project default="build">
  <package name="modules" targetversion="1.00.00" />

  . . . .

  <!-- Define ProgramLibrary module -->

  <property name="runtime.ProgramLibrary.buildtype" value="Library" />

  <property name="runtime.ProgramLibrary.includedirs" >
    ${package.dir}/include
  </property>

  <fileset name="runtime.ProgramLibrary.sourcefiles" >
    <includes name="${package.dir}/source/program_lib/*.cpp" />
  </fileset>

  <!-- Define what to build and dependencies between modules -->

  <property name="runtime.buildmodules" >
    ProgramLibrary
  </property>

  <property name="test.TestModule.buildtype" value="Program" />

  <property name="test.TestModule.includedirs" >
    ${package.dir}/include
  </property>

  <fileset name="test.TestModule.sourcefiles" >
    <includes name="${package.dir}/source/test_module/*.cpp" />
  </fileset>

  <property name="test.TestModule.runtime.moduledependencies">
    ProgramLibrary
  </property>

  <property name="test.TestModule.builddependencies">
    AnotherDependency
  </property>

  <property name="test.buildmodules">
    TestModule
  </property>

</project>
