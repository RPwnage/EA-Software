<example>
<code>
<![CDATA[
<project>
    <mkdir dir="foo" />
    <mkdir dir="foo/raz" />
    <mkdir dir="foo/bar" />
    
    <eval code="@{DirectoryGetDirectories('foo', '*', '|')}" 
          property="directories" 
          type="Function" />
    
    <foreach item="String" in="${directories}" property="directory" delim="|">
        <fail unless="@{DirectoryExists('${directory}')}" />
    </foreach>
</project>
]]>
</code>
</example>