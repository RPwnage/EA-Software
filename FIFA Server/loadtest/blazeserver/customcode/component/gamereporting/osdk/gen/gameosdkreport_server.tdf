namespace OSDKGameReportBase
{

const uint32_t SE_COUNTRY_MAX_NAME_LENGTH = 2;
const uint32_t SE_SCOPE_MAX_NAME_LENGTH = 32;
const uint32_t SE_CATEGORY_MAX_NAME_LENGTH = 64;
const uint32_t SE_QUERY_MAX_NAME_LENGTH = 64;

[
    tdfid = "hash",
    description = "OSDK custom end phase data."
]
class OSDKCustomEndPhaseConfig
{
    [tag="epph", description="End Phase"]
        uint16_t phase;
    [tag="epmt", description="End Phase Max Time"]
        uint32_t maxTime;
};

[
    tdfid = "hash",
    description = "OSDK custom global config data representing mode-independent custom data.",
    details = "skill tables and end phases"
]
class OSDKCustomGlobalConfig
{
    [tag="gcst", description="Skill Table List"]
        list<uint32_t> skillTables;

    [tag="gcep", description="End Phase List"]
        list<OSDKCustomEndPhaseConfig> endPhases;
		
    [tag="gccf", description="Games Team Custom Configuration"]
        variable gameCustomConfig;
};

} // namespace OSDKGameReportBase
