<project xmlns="schemas/ea/framework3.xsd">

  <!-- The components any integrator want to be present in their lite blazeserver. 
  This is done by populating "blazeserver.lite.components.custom" property in the lite_custom.xml file. -->
  <include file="./custom/lite_custom.xml" ignoremissing="true"/>

  <!-- All the components (regardless of being core/custom/proxy) populate 'blazeserver.lite.components' porperty. The multiple sections below are simply for 
  cleanliness. -->

  <!-- Proxy Components needed by Framework-->
  <property name="blazeserver.lite.components">
    ${blazeserver.lite.components.custom??}
    bytevault
    gephi
    notify
    nucleusconnect
    nucleusidentity
    pas
    redirector
    secretvault
    psnauthz
    xblreputationconfigs
    xblreputationservice
    xblsystemconfigs
  </property>

  <!-- Custom component(s) -->
  <property name="blazeserver.lite.components">
    ${property.value}
  </property>

  <!-- Regular component(s)-->
  <property name="blazeserver.lite.components">
    ${property.value}
    greeter
  </property>

</project>
