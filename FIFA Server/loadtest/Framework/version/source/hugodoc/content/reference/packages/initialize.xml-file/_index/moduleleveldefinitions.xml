<project xmlns="schemas/ea/framework3.xsd">

  <property name="package.ExamplePackage.runtime.buildmodules">
    FirstLibraryModule
    SecondLibraryModule
  </property>

  <!-- 
    Package leve and Module level definitions can be mixed.
    In this case include directories are common for all modules and are specified at the package level.
  -->
  <property name="package.ExamplePackage.includedirs">
    ${package.example.dir}/include
  </property>


  <fileset name="package.ExamplePackage.FirstLibraryModule.libs">
    <includes name="${package.ExamplePackage.builddir}/${config}/lib/${lib-prefix}FirstLibraryModule${lib-suffix}" />
  </fileset>

  <fileset name="package.ExamplePackage.SecondLibraryModule.libs">
    <includes name="${package.ExamplePackage.builddir}/${config}/lib/${lib-prefix}SecondLibraryModule${lib-suffix}" />
  </fileset>

</project>
