<project xmlns="schemas/ea/framework3.xsd">

  <choose>
    <do if="${config-compiler}==vc">
      <property name="runtime-type" value="MT" local="true"/>
      <property name="runtime-type" value="MD" local="true" if="${Dll}"/>
      <property name="debug-type" value="" local="true"/>
      <property name="debug-type" value="d" local="true" if="@{StrContains('${config-name}', 'debug')}"/>
      <property name="platform-type" value="x86" local="true" if="${config-system}==pc"/>
      <property name="platform-type" value="x64" local="true" if="${config-system}==pc64"/>
      <property name="platform-type" value="xbox360" local="true" if="${config-system}==xenon"/>

      <property name="deja-lib-name" value="DejaDll" local="true" if="${Dll}"/>

      <property name="package.Deja.libpath" value="${package.Deja.dir}/lib/${platform-type}/${runtime-type}${debug-type}"/>
    </do>
    <do>
      <property name="platform-type" value="ps3" local="true" if="${config-system}==ps3"/>
      <property name="platform-type" value="osx" local="true" if="${config-system}==osx"/>

      <property name="package.Deja.libpath" value="${package.Deja.dir}/lib/${platform-type}"/>
    </do>
  </choose>

  <property name="package.Deja.libdirs">
    ${package.Deja.libpath}
  </property>

  . . . . . . . . .

</project>