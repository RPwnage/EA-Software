<project default="build" xmlns="schemas/ea/framework3.xsd">
  
  <!-- 
    This package demonstrates usage of the Android Expansion libraries. 
    It is only necessary to define build (or use in case libraries are prebuilt) dependencies
  -->

  <package  name="play_apk_expansion_sample"/>

  <Program name="play_apk_expansion_sample" if="${config-system} == 'android'">

    <dependencies>
      <build>
        play_apk_expansion/downloader_library
        play_apk_expansion/zip_file
      </build>
    </dependencies>
    
    <sourcefiles basedir="${package.dir}/downloader_sample/native">
      <includes name="**.cpp"/>
    </sourcefiles>
    
    <java>
      <sourcefiles basedir="${package.dir}/downloader_sample/src">
        <includes name="**.java"/>
      </sourcefiles>
    </java>

    <resourcefiles basedir="${package.dir}/downloader_sample/res">
      <includes name="**.xml"/>
      <includes name="**.png"/>
    </resourcefiles>

    <buildsteps>
      <packaging packagename="downloader_sample">
        <manifestfile>
          <includes name="${package.dir}/downloader_sample/AndroidManifest.xml"/>
        </manifestfile>
      </packaging>
    </buildsteps>
  </Program>

</project>