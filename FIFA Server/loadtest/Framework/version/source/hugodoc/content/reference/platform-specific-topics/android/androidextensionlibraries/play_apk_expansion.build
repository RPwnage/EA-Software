<project default="build" xmlns="schemas/ea/framework3.xsd">
  
  <!-- 
  This package contains two expansion library modules: downloader_library and zip_file
  -->

  <package  name="play_apk_expansion"/>

  <Library name="downloader_library" if="${config-system} == 'android'">
    <dependencies>
      <build>
        play_licensing
      </build>
    </dependencies>
    <java>
      <sourcefiles basedir="${package.dir}/downloader_library/src">
        <includes name="**.java"/>
      </sourcefiles>
    </java>

    <resourcefiles basedir="${package.dir}/downloader_library/res">
      <includes name="**.xml"/>
      <includes name="**.png"/>
    </resourcefiles>
    <buildsteps>
      <packaging packagename="downloader_library">
        <manifestfile>
          <includes name="${package.dir}/downloader_library/AndroidManifest.xml"/>
        </manifestfile>
      </packaging>
    </buildsteps>
  </Library>

  <Library name="zip_file" if="${config-system} == 'android'">
    <dependencies>
      <build>
        play_licensing
      </build>
    </dependencies>
    <java>
      <sourcefiles basedir="${package.dir}/zip_file/src">
        <includes name="**.java"/>
      </sourcefiles>
    </java>
    <buildsteps>
      <packaging packagename="zip_file">
        <manifestfile>
          <includes name="${package.dir}/zip_file/AndroidManifest.xml"/>
        </manifestfile>
      </packaging>
    </buildsteps>
  </Library>

</project>