<project>
    <Library name="eafn" frompartial="DCLibrary">
        <headerfiles basedir="${package.dir}">
            <includes name="logger/*.h"/>
            <includes name="eafn/*.h"/>
            <excludes name="eafn/winmain.h" unless="${config-system} == 'pc64'"/>
        </headerfiles>

        <sourcefiles basedir="${package.dir}">
            <includes name="logger/logger.c"/>
            <includes name="eafn/*.c"/>
            <excludes name="eafn/winmain.c" unless="${config-system} == 'pc64'"/>
        </sourcefiles>

        <includedirs>
            ${package.dir}/eafn
            ${package.dir}/logger
        </includedirs>

        <dependencies>
            <auto>
                DirtySDK
                LegacyDirtySDK
            </auto>
            <interface>
                DirtyCast/shared
            </interface>
        </dependencies>
    </Library>
</project>
