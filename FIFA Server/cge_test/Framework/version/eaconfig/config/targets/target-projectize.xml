<project xmlns="schemas/ea/framework3.xsd">

  <target name="projectize" description="Generate Xcode project for 'runtime' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="runtime" />
    <call target="generate-xcode-project"/>
  </target>

  <target name="projectize-test" description="Generate Xcode project for 'test' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="test" />
    <call target="generate-xcode-project"/>
  </target>

  <target name="projectize-example" description="Generate Xcode project for 'example' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="example" />
    <call target="generate-xcode-project"/>
  </target>

  <target name="projectize-tool" description="Generate Xcode project for 'tool' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="tool" />
    <call target="generate-xcode-project"/>
  </target>

  <target name="projectize-groupall" description="Generate Xcode project for all build groups">
    <property name="__eaconfig.build.groups" value="${eaconfig.build.groups??${slngenerator.slngroupall.groups??runtime test example tool}}" />
    <dependent name="XcodeProjectizer"/>
    <call target="generate-xcode-project"/>
    <eval code="@{PropertyUndefine('__eaconfig.build.groups')}" type="Function"/>
  </target>

  <target name="xcodebuild" description="Build Xcode project for 'runtime' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="runtime" />
    <call target="build-xcode-project"/>
  </target>

  <target name="xcodebuild-test" description="Build Xcode project for 'test' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="test" />
    <call target="build-xcode-project"/>
  </target>

  <target name="xcodebuild-example" description="Build Xcode project for 'example' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="example" />
    <call target="build-xcode-project"/>
  </target>

  <target name="xcodebuild-tool" description="Build Xcode project for 'tool' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="tool" />
    <call target="build-xcode-project"/>
  </target>

  <target name="xcode-archive-export" description="Build Xcode Archive Export">
    <dependent name="XcodeProjectizer"/>
    <fail unless="@{TargetExists('build-xcode-archive-export')}"
          message="You are using an older version of XcodeProjectizer which does not have this feature.  Please update to the latest version (or dev) to use this target."/>
    <property name="eaconfig.build.group" value="runtime" />
    <call target="build-xcode-archive-export"/>
  </target>

  <target name="generate-ipa-from-app" description="Generate ipa output directly from previously build app bundle">
    <dependent name="XcodeProjectizer"/>
    <fail unless="@{TargetExists('generate-ipa-from-appbundle')}"
          message="You are using an older version of XcodeProjectizer which does not have this feature."/>
    <call target="generate-ipa-from-appbundle"/>
  </target>

  <target name="xcode-open" description="Open Xcode project for 'runtime' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="runtime" />
    <fail unless="@{TargetExists('open-xcode-project')}" message="xcode-open target is not implemented in XcodeProjectizer-${package.XcodeProjectizer.version}.  Please update to the latest version."/>
    <call target="open-xcode-project"/>
  </target>

  <target name="xcode-test-open" description="Open Xcode project for 'test' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="test" />
    <fail unless="@{TargetExists('open-xcode-project')}" message="xcode-${eaconfig.build.group}-open target is not implemented in XcodeProjectizer-${package.XcodeProjectizer.version}.  Please update to the latest version."/>
    <call target="open-xcode-project"/>
  </target>

  <target name="xcode-example-open" description="Open Xcode project for 'example' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="example" />
    <fail unless="@{TargetExists('open-xcode-project')}" message="xcode-${eaconfig.build.group}-open target is not implemented in XcodeProjectizer-${package.XcodeProjectizer.version}.  Please update to the latest version."/>
    <call target="open-xcode-project"/>
  </target>

  <target name="xcode-tool-open" description="Open Xcode project for 'tool' group">
    <dependent name="XcodeProjectizer"/>
    <property name="eaconfig.build.group" value="tool" />
    <fail unless="@{TargetExists('open-xcode-project')}" message="xcode-${eaconfig.build.group}-open target is not implemented in XcodeProjectizer-${package.XcodeProjectizer.version}.  Please update to the latest version."/>
    <call target="open-xcode-project"/>
  </target>

</project>
