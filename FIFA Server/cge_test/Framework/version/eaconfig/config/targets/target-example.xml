<project xmlns="schemas/ea/framework3.xsd">
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <do unless="'@{OptionSetGetValue('config.targetoverrides', 'example-build')}' == 'exclude'">
        <target name="example-build" style="build" description="Build the examples for a specific configuration" allowoverride="true">
          <property name="eaconfig.build.group" value="example" />
          <call target="eaconfig-build-graph" force="true" />
          <GenerateBuildLayout/>
          <nant-build configs="${config}"/>
        </target>
    </do>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <do unless="'@{OptionSetGetValue('config.targetoverrides', 'example-buildall')}' == 'exclude'">
        <target name="example-buildall" description="Build the example program for each configuration" allowoverride="true">
          <property name="eaconfig.build.group" value="example" />
          <call target="eaconfig-build-graph-all" force="true" />
          <GenerateBuildLayout/>
          <nant-build configs="${eaconfig.build.configs}"/>
        </target>
    </do>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <do unless="'@{OptionSetGetValue('config.targetoverrides', 'example-run')}' == 'exclude'">
        <target name="example-run" description="Runs the examples for a specific configuration" depends="example-build" allowoverride="true">
            <property name="eaconfig.build.group" value="example" />
            <call target="eaconfig-run-caller" force="true" />
        </target>
    </do>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <do unless="'@{OptionSetGetValue('config.targetoverrides', 'example-run-fast')}' == 'exclude'">
        <target name="example-run-fast" description="Runs the examples for a specific configuration" allowoverride="true">
            <property name="eaconfig.build.group" value="example" />
            <call target="eaconfig-run-caller" force="true" />
        </target>
    </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('config.targetoverrides', 'example-group-run-fast')}' == 'exclude'">
    <target name="example-group-run-fast" description="Runs the examples for a specific configuration" allowoverride="true">
      <property name="eaconfig.build.split-by-group-names" value="false"/>
      <call target="example-run-fast" force="true" />
    </target>
  </do>

</project>
