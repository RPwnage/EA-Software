<project>
  <include file="${package.blazeserver_grpc_tools.dir}/scripts/common_code_gen.xml"/>
  <include file="${package.blazeserver_grpc_tools.dir}/scripts/cpp_code_gen.xml"/>

  <publicdata packagename="blazeserver_grpc_tools">
    
    <tools>
      <module name="grpc++_reflection">
        <libs/>
      </module>
    </tools>

  </publicdata>

  <property name="protoc.exe" value="${package.blazeserver_grpc_tools.dir}/bin/protoc${exe-suffix}"/>
  <property name="protoc-blaze.exe" value="${package.blazeserver_grpc_tools.dir}/bin/protoc-blaze${exe-suffix}"/>
  <property name="grpc_cpp_plugin.exe" value="${package.blazeserver_grpc_tools.dir}/bin/grpc_cpp_plugin${exe-suffix}"/>
  <property name="grpc_csharp_plugin.exe" value="${package.blazeserver_grpc_tools.dir}/bin/grpc_csharp_plugin${exe-suffix}"/>
  <property name="grpc_php_plugin.exe" value="${package.blazeserver_grpc_tools.dir}/bin/grpc_php_plugin${exe-suffix}"/>
  <property name="grpc_node_plugin.exe" value="${package.blazeserver_grpc_tools.dir}/bin/grpc_node_plugin${exe-suffix}"/>
  <property name="grpc_ruby_plugin.exe" value="${package.blazeserver_grpc_tools.dir}/bin/grpc_ruby_plugin${exe-suffix}"/>
  <property name="grpc_python_plugin.exe" value="${package.blazeserver_grpc_tools.dir}/bin/grpc_python_plugin${exe-suffix}"/>
  <property name="grpc_objc_plugin.exe" value="${package.blazeserver_grpc_tools.dir}/bin/grpc_objc_plugin${exe-suffix}"/>

  <do.once key="blazeserver_grpc_tools.setexecbit" blocking="true" if="${config-system} == 'unix64'">
    <exec program="chmod" failonerror="false" workingdir="${package.blazeserver_grpc_tools.dir}">
      <args>
        <arg value="-R"/>
        <arg value="ugo+x"/>
        <arg value="bin"/>
      </args>
    </exec>
  </do.once>

</project>
