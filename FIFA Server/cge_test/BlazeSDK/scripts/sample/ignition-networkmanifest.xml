<mx:Extension Category="windows.xbox.networking" xmlns:mx="http://schemas.microsoft.com/appx/2013/xbox/manifest">
    <mx:XboxNetworkingManifest>
        <mx:SocketDescriptions>
            <mx:SocketDescription Name="Ignition" SecureIpProtocol="Tcp" BoundPort="6363">
                <mx:AllowedUsages>
                    <mx:SecureDeviceSocketUsage Type="Accept" />
                    <mx:SecureDeviceSocketUsage Type="ReceiveDebug" />
                    <mx:SecureDeviceSocketUsage Type="SendDebug" />
                </mx:AllowedUsages>
            </mx:SocketDescription>
        </mx:SocketDescriptions>
        <mx:SecureDeviceAssociationTemplates>
            <mx:SecureDeviceAssociationTemplate Name="IgnitionTemplate" InitiatorSocketDescription="Ignition" AcceptorSocketDescription="Ignition" MultiplayerSessionRequirement="Optional">
                <mx:AllowedUsages>
                    <mx:SecureDeviceAssociationUsage Type="Default" />
                </mx:AllowedUsages>
            </mx:SecureDeviceAssociationTemplate>
        </mx:SecureDeviceAssociationTemplates>
    </mx:XboxNetworkingManifest>
</mx:Extension>

