namespace Blaze
{

namespace CensusData
{

    [
        description = "The census data configuration.",
        details = "This class contains parameters refered to censusdata component."
    ]
    class CensusDataConfig
    {
        [tag="ipms", default=250, reconfigurable="yes", description="How frequently the census data idle loop runs", advanced=true]
        uint32_t mIdlePeriodMS;

        [tag="npms", default=4000, reconfigurable="yes", description="How often clients should be updated of new census"]
        uint32_t mCensusNotificationPeriodMS;

        [tag="ntmt", default="3s", reconfigurable="yes", description="How long clients should wait before resubscribing after the notification period elapses and no notification is received"]
        TimeValue mNotificationTimeout;

        [tag="rtmt", default="2s", reconfigurable="yes", description="How long clients should wait before resubscribing after they fail their last attempt to resubscribe"]
        TimeValue mResubscribeTimeout;
    };

}

}
