namespace Blaze
{

namespace XBLSystem
{

const uint32_t MAX_VALIDATE_STRING_LENGTH = 512;

class StringList
{
    [tag="strl", description="The list of strings to validate"]
    list<string(MAX_VALIDATE_STRING_LENGTH)> mStringstoVerify;
};

class ValidateStringsRequest
{
    [tag="atkn", description="The xSTS token"]
    string(-1) mAuthToken;
    
    [tag="body", description="The payload (strings to be validated) body"]
    StringList mPayload;
};

class Result
{
    [tag="code", description="The result code"]
    uint16_t mResultCode;

    [tag="offs", description="The offending string"]
    string(MAX_VALIDATE_STRING_LENGTH) mOffendingString;
};
typedef list<Result> ResultList;

class ValidateStringsResponse
{
    [tag="strm", description="The results of string validation"]
    ResultList mVerifyStringResult;
};

} // namespace XBLSystem
} // namespace Blaze