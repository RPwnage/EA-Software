#!/bin/bash

# relative path of script relative to launch location
srcDir=$(dirname ${BASH_SOURCE[0]})

set -e

source $srcDir/clientdeploy.cfg
source $srcDir/util

makeSudoStr $clientuser

cmdStr="$sudoStr pkill -9 monitor; $sudoStr pkill -9 blazeserver; echo \"Done: \$(hostname).\""

for host in ${allHosts[@]};
do
    echo "Host: ${host}"
    ssh ${host} "$cmdStr" &
done

wait

echo "done $0."
