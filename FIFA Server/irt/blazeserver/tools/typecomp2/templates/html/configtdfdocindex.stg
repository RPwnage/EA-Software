group configtdfdoc : configtdfdocbase;

masterComponent(fileNode, component) ::= <<>>
slaveComponent(fileNode, component) ::= <<>>

rootComponent(fileNode, node) ::= <<

<html>
<head>
  <title>Component Index</title>
  <link rel="stylesheet" type="text/css" name="cfgdoc" href="wadl.css" />
</head>

<body>
  <h1><a href="index_component.html">Blaze Configuration TDF</a> :: component index</h1>
  <p><i>This document serves as a reference for the configuration TDF classes. For a full guide to using the configuration TDF classes,
        <a href="https://developer.ea.com/display/blaze/How+To+Read+Configuration+Into+TDF+Class+Object">see Confluence</a>
  </i></p>
  <p>Blaze component index. Select a resource below to view TDF documentation.</p>
  <ul>
  <li>
  <b>Components</b>
  <ul>
  $node.Components:tocHelper(component=it); separator="\n"$
  </ul>
  </li>
  </ul>
</body>
</html>

>>

tocHelper(component) ::= <<
<li><a href="component/$component.Name; format="toLower"$.html">$component.Name$</a></li>
>>
