group luabt3luaconstants : servercommon;

masterComponent(fileNode, component) ::= <<>>
slaveComponent(fileNode, component) ::= <<>>

rootComponent(fileNode, node) ::= <<
<standardFileHeader()>
-- AutoGenerated Component Enumerations 
Blaze = {};

<node.Subcomponents:enumsForComponent(component=it); separator="\n">

-- AutoGenerated BlazeRpcError 
BlazeRpcError = {}

--[[ description: No error ]]
BlazeRpcError.ERR_OK = 0;                               
<node.Errors:error(e=it); separator="\n">
<node.Components:errorsForComponent(component=it)>
<standardFileFooter()>
>>

enumsForComponent(component) ::= <<
<if(component.IsSlave)>
Blaze.<component.Name>Slave = {}
Blaze.<component.Name>Slave.COMPONENT_ID = <component.CompId>
<if(component.Notifications)>

-- <component.Name>Slave Notifications 
<component.Notifications:componentNotification(notification=it); separator="\n">

<endif>
<endif>
>>

componentNotification(notification) ::= <<
Blaze.<component.Name>Slave.NOTIFY_<notification.Name; format="tu"> = <notification.id>
>>
 
errorsForComponent(component) ::= <<
<component.Errors:error(e = it); separator="\n">
>>

error(e) ::= <<
-- <e.description>
BlazeRpcError.<e.Name; format="@%1$-80s">= <e.FullValue> 

>>

