<project xmlns="schemas/ea/framework3.xsd">
  <Program name="stress" frompartial="BlazeProgram">
    <includedirs>
      ${package.dir}/tools/stress
    </includedirs>

    <dependencies>
      <auto>
        ${blazeserver.internal.component.dependencies}
        blazeserver/customcode
        blazeserver/framework
        blazeserver/framework_gen
        blazeserver/proxycomponents
        blazeserver/outboundgrpc
        blazeserver/grpc_helpers
      </auto>
    </dependencies>

    <headerfiles>
      <includes name="${package.dir}/tools/stress/**.h"/>
      <includes name="${package.dir}/*component/**/stress/*.h"/>
      <includes name="${package.dir}/*component/**/stress/custom/**.h"/>
      <includes name="${package.dir}/customcode/component/**/stress/**.h"/>
    </headerfiles>

    <sourcefiles>
      <includes name="${package.dir}/tools/stress/**.cpp"/>
      <includes name="${package.dir}/*component/**/stress/*.cpp"/>
      <includes name="${package.dir}/*component/**/stress/custom/**.cpp"/>
      <includes name="${package.dir}/customcode/component/**/stress/**.cpp"/>

      <includes name="${package.builddir}/gen/blazecomponentdb.cpp"/>
      <includes name="${package.builddir}/gen/blazerpcerrors.cpp"/>
      <includes name="${package.builddir}/gen/blazerpcproxy.cpp"/>
    </sourcefiles>

    <bulkbuild enable="true" partial="true" SplitByDirectories="true"/>

    <config>
      <defines>
      </defines>
    </config>

    <buildsteps>
      <run workingdir="${package.dir}/etc"/>
    </buildsteps>

    <visualstudio>
      <excludedbuildfiles>
        <includes name="${package.dir}/etc/stress/**.cfg"/>
      </excludedbuildfiles>
    </visualstudio>
  </Program>
</project>
