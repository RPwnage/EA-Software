<project>
    <Program name="gsrvstress" frompartial="DCProgram" outputdir="${package.dir}/stress/run">
        <sourcefiles basedir="${package.dir}">
            <includes name="stress/source/*.cpp"/>
        </sourcefiles>

        <headerfiles basedir="${package.dir}">
            <includes name="stress/source/*.h"/>
        </headerfiles>

        <includedirs>
            ${package.dir}/stress/source
        </includedirs>

        <config>
            <defines>
                <do if="${use_stress_login??false}">
                    USE_STRESS_LOGIN=1
                </do>
            </defines>
        </config>

        <dependencies>
            <auto>
                BlazeSDK
                coreallocator
                DirtySDK
                LegacyDirtySDK
                EAAssert
                EABase
                EAJson
                UTFXml
                EAStdC
                EASTL
                EATDF
                EAThread
                TelemetrySDK
                PinTaxonomySDK
                DirtyCast/eafn
                DirtyCast/shared
            </auto>
        </dependencies>

        <buildsteps>
            <run workingdir="${package.dir}/stress/run"/>
        </buildsteps>
    </Program>
</project>
