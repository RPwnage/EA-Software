// Defines the TDF classes used in the fifacups component. This is for server side only data
//  TDF classes are compiled with TypeComp, generating C++ classes that can be serialized in RPCs and Notifications.
//
// Note: see http://gos.online.ea.com/confluence/display/tech/Typecomp for info on the .tdf spec, as well as the compiler, TypeComp

[headername="xmshd/tdf/xmshdtypes.h"]
#include "xmshd/gen/xmshdtypes.tdf"

namespace Blaze
{
	namespace XmsHd
	{
		[
			description = "The configuration object for the XmsHd component",
			details = "This class represents the schema for all the configuration parameters for the XmsHd component."
		]

		class XmsHdConfig
		{
			[tag="xsku", description = "xmshd sku", reconfigurable="yes"]
			string(64) mXmssku;

			[tag="xaky", description = "xmshd api key", reconfigurable="yes"]
			string(64) mXmshdapikey;

			[tag="ptsk", description = "partner token sku", reconfigurable="yes"]
			string(64) mPartnertokensku;

			[tag="ptpd", description = "partner token password", reconfigurable="yes"]
			string(64) mPartnertokenpassword;

			[tag="maxa", description="max attempts", reconfigurable="yes"]
			uint32_t mMaxattempts;	
		};

		class GetConfigResponse
		{
			[tag="cfg", description="XmsHd server config TDF"]
			XmsHdConfig mConfig;
		};

	} // XmsHd
} // Blaze


