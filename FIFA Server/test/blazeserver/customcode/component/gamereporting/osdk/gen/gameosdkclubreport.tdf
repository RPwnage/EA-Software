[headername="gamereporting/tdf/gamereporting.h"]
#include "gamereporting/gen/gamereporting.tdf"
[headername="clubs/tdf/clubs_base.h"]
#include "clubs/gen/clubs_base.tdf"

namespace Blaze
{
[usePtrOption=true]
namespace GameReporting
{

///////////////////////////////////////////////////////////////////////////////
//  OSDK common club game report
//
//  Submitted report TDFs. 
namespace OSDKClubGameReportBase
{

const uint32_t CLUB_GAME_KEY_MAX_LENGTH = 33;

[
    tdfid = "hash",
    description = "OSDK Generic Club PlayerReport TDF that takes a variable TDF representing player data.",
    details = "OSDK Club player report TDF"
]
class OSDKClubPlayerReport
{
    [tag="cpid", description="Player club ID"]
        Clubs::ClubId clubId;
		
    [tag="cpgm", description="Player club games"]
        uint32_t clubGames;

    [tag="cpmi", description="Player club game minutes"]
        uint32_t minutes;

    [tag="cpch", description="Player club challenge"]
        uint32_t challenge;

    [tag="cpcp", description="Player club challenge points"]
        uint32_t challengePoints;

    [tag="cphp", description="Player h2h points"]
        uint32_t h2hPoints;

    [tag="cppo", description="Player position"]
        uint32_t pos;

    [tag="ccid", description="Cup Id"]
        uint32_t cupId;

    ///////////////////////////////////////////////////////////////////////////////
    // Game custom club player report
    ///////////////////////////////////////////////////////////////////////////////
    [tag="ccpr", description="Variable game player TDF report. Consult report TDF documentation for more information."]
        variable customClubPlayerReport;
};

[
    tdfid = "hash",
    description = "OSDK Generic Game TDF that takes a variable TDF representing game data.",
    details = "OSDK game report TDF"
]
class OSDKClubGameReport
{
    [tag="cgid", description="Challenge Club ID"]
        uint32_t challengeClubId;

    [tag="cgmm", description="Club member"]
        uint32_t member;

    [tag="cgch", description="Club challenge"]
        uint32_t challenge;

    [tag="cgty", description="Club game type"]
        uint32_t gameType;

    [tag="cgky", description="Club game key"]
        string(CLUB_GAME_KEY_MAX_LENGTH) clubGameKey;

    ///////////////////////////////////////////////////////////////////////////////
    // Game custom club game report
    ///////////////////////////////////////////////////////////////////////////////
    [tag="ccgr", description="Variable game TDF report. Consult report TDF documentation for more information."]
        variable customClubGameReport;
};

[
    tdfid = "hash",
    description = "OSDK Generic Club Report TDF that takes a variable TDF representing game data.",
    details = "OSDK club report TDF"
]
class OSDKClubClubReport
{
    [tag="ccid", description="Club ID"]
        Clubs::ClubId clubId;

    [tag="ctid", description="Club Tournament ID"]
        uint32_t tournamentId;

    [tag="ccrg", description="Club region"]
        uint32_t clubRegion;

    [tag="csea", description="Club season"]
        uint32_t clubSeason;

    [tag="cdic", description="Club Disconnect"]
        uint32_t clubDisc;
    
    [tag="ctem", description="Club team"]
        uint32_t team;

    [tag="chom", description="Club home or away"]
        bool     home;

    [tag="crlt", description="Club game result"]
        uint32_t gameResult;

    [tag="cwdf", description="Club winner by dnf"]
        uint32_t winnerByDnf;

    [tag="cscr", description="Club score or points for count"]
        uint32_t score;
        
    [tag="cwin", description="Club wins"]
        uint32_t wins;

    [tag="clos", description="Club losses"]
        uint32_t losses;
    
    [tag="ctie", description="Club ties"]
        uint32_t ties;

    [tag="cskl", description="Club skill level"]
        uint32_t skill;

    [tag="cskp", description="Club skill points"]
        uint32_t skillPoints;

    [tag="ccpt", description="Club challenge points"]
        uint32_t challengePoints;

    [tag="chpt", description="Club h2h points"]
        uint32_t h2hPoints;

    ///////////////////////////////////////////////////////////////////////////////
    // Game custom club report
    ///////////////////////////////////////////////////////////////////////////////
    [tag="cccr", description="Variable game club club TDF report. Consult report TDF documentation for more information."]
        variable customClubClubReport;
};

[
    tdfid = "hash",
    description = "OSDK Generic Club Report TDF that takes a variable TDF representing game report data.",
    details = "OSDK report TDF"
]
class OSDKClubReport
{
    typedef map<Clubs::ClubId, OSDKClubClubReport> OSDKClubReportsMap;

    [tag="cbid", description="Club Reports"]
        OSDKClubReportsMap clubReports;

    ///////////////////////////////////////////////////////////////////////////////
    // Game custom report
    ///////////////////////////////////////////////////////////////////////////////
    [tag="ccpt", description="Variable game TDF report. Consult report TDF documentation for more information."]
        variable customClubReport;
};


} // namespace OSDKClubGameReportBase
} // namespace GameReporting
} // namespace Blaze
