<project xmlns="schemas/ea/framework3.xsd">
  <property name="protogen.inbounddir"  value="${package.builddir}/gen/protogen/inbound" local="true"/>
  
  <Library name="customcode" frompartial="BlazeFullLibrary">
    <includedirs>
      ${package.dir}/customcode/common
      ${package.builddir}/gen/customcode/common
    </includedirs>

    <sourcefiles>
      <includes name="${package.dir}/customcode/common/**.cpp" />
      <includes name="${package.builddir}/gen/customcode/common/**.cpp"/>
      <includes name="${protogen.inbounddir}/${blazeserver.proto_rootdir??}/customcode/common/**.cc"/>
    </sourcefiles>

    <headerfiles>
      <includes name="${package.dir}/customcode/common/**.h"/>
      <includes name="${package.builddir}/gen/customcode/common/**.h"/>
      <excludes name="${package.builddir}/gen/customcode/common/**/test/**.h"/>
      <excludes name="${package.builddir}/gen/customcode/common/**/stress/**.h"/>
    </headerfiles>

    <visualstudio>
      <excludedbuildfiles>
        <includes name="${package.dir}/customcode/common/**.tdf"/>
      </excludedbuildfiles>
    </visualstudio>

    <config>
      <defines>
        _BLAZECOMPONENT
      </defines>
    </config>

    <bulkbuild enable="true"/>
  </Library>
</project>
