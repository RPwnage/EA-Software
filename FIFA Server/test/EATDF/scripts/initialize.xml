<project>

  <property name="EATDFBuildType" value="Library"/>
  <property name="EATDFBuildType" value="DynamicLibrary" if="${Dll??false}"/>

  <publicdata packagename="EATDF">
    <module name="EATDF" buildtype="${EATDFBuildType}">
      <!-- now specify include directories and library directory -->
      <includedirs>
        ${package.EATDF.dir}/cpp/include
      </includedirs>

      <publicdependencies>
        coreallocator
        EAAssert
        EAIO
        EAJson
        EAStdC
        EAThread
        UTFXml
      </publicdependencies>
    </module>
  </publicdata>

  <dependent name="jdk"/>
  <property name="java.exe" value="${package.jdk.home}/bin/java" unless="@{PropertyExists('java.exe')}"/>
  <property name="java.compiler" value="${package.jdk.home}/bin/javac" unless="@{PropertyExists('java.compiler')}"/>
  <property name="java.archiver" value="${package.jdk.home}/bin/jar" unless="@{PropertyExists('java.archiver')}"/>
  <property name="java.doc" value="${package.jdk.home}/bin/javadoc" unless="@{PropertyExists('java.doc')}"/>

  <include file="typecomp_task.xml" />
  <include file="make_typecomp.xml" />
  
  <fileset name="package.EATDF.PrebuiltIncludeSourceFiles">
    <!-- These files are needed by the above make_typecomp.xml task -->
    <includes name="${package.EATDF.dir}\tool\**"/>
  </fileset>
</project>
