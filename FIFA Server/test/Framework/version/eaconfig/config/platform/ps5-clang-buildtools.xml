<project xmlns="schemas/ea/framework3.xsd">

  <compiler
    path="${package.ps5sdk.compiler}"
    path-clanguage="${package.ps5sdk.c-compiler}"
    version="${package.ps5sdk.compiler.version??package.ps5sdk.InstalledVersion}"
    >
    <common-defines>
      <!-- Always define EA_PLATFORM_PS5 so it is available even if EABase is not in use. -->
      EA_PLATFORM_PS5=1
      <!-- Backward compatibility. -->
      EA_PLATFORM_BALIN=1
    </common-defines>
    <common-options>
      ${required_ps5_common_cc_options}
    </common-options>
    <system-includedirs>
      ${package.ps5sdk.includedirs}
    </system-includedirs>
    <template>
      <commandline>
        %defines%
        %includedirs%
        %system-includedirs%
        %options%
        -o "%objectfile%"     <!-- object file -->
        -c "%sourcefile%"     <!-- source file -->
      </commandline>
      <commandline-clanguage>
        %defines%
        %includedirs%
        %system-includedirs%
        %options%
        -o "%objectfile%"     <!-- object file -->
        -c "%sourcefile%"     <!-- source file -->
      </commandline-clanguage>
      <pch.commandline>
        %defines%
        %includedirs%
        %system-includedirs%
        %options%
        -o "%pchfile%"        <!-- pch file -->
        -c "%sourcefile%"     <!-- source file -->
      </pch.commandline>
      <define>-D %define%</define>
      <includedir>-I "%includedir%"</includedir>
      <!-- Need to make sure %system-includedir% is in unix path format -->
      <system-includedir>-isystem "%system-includedir%"</system-includedir>
    </template>
  </compiler>

  <assembler 
    path="${package.ps5sdk.assembler}"
    version="${package.ps5sdk.assembler.version??package.ps5sdk.InstalledVersion}"
    >
    <common-defines>
    </common-defines>
    <common-options>
      ${required_ps5_common_as_options}
    </common-options>
    <system-includedirs>
      ${package.ps5sdk.includedirs}
    </system-includedirs>
    <template>
      <commandline>
        %defines%
        %options%
        %includedirs%
        %system-includedirs%
        -o "%objectfile%"   <!-- object file -->
        "%sourcefile%"      <!-- source file -->
      </commandline>
      <define>--defsym %define%</define>
      <includedir>-I "%includedir%"</includedir>
      <system-includedir>-I "%includedir%"</system-includedir>
    </template>
  </assembler>

  <librarian
    path="${package.ps5sdk.archiver}"
    version="${package.ps5sdk.archiver.version??package.ps5sdk.InstalledVersion}"
    >
    <common-options>
      -rs "%liboutputname%"
    </common-options>
    <template>
      <commandline>
        %options%
        %objectfiles%
      </commandline>
      <objectfile>%objectfile%</objectfile>
    </template>
  </librarian>

	<!-- The template for the contents of the response file -->
	<property name="lib.template.responsefile.commandline">%objectfiles%</property>
	<!-- The template for the command line when a response file is used -->
	<property name="lib.template.responsefile">%options% @%responsefile%</property>

	<linker
    path="${package.ps5sdk.linker}"
    version="${package.ps5sdk.linker.version??package.ps5sdk.InstalledVersion}"
    >
    <common-options>
      ${required_ps5_common_link_options}
    </common-options>
    <system-librarydirs>
      ${package.ps5sdk.libdir}
    </system-librarydirs>
    <system-libs>
      ${required_ps5_common_libs}
    </system-libs>
    <template>
      <commandline>
        %options%
        %objectfiles%
        %librarydirs%
        --start-group
        %libraryfiles%
        --end-group
      </commandline>
      <librarydir>-L"%librarydir%"</librarydir>
      <libraryfile>"%libraryfile%"</libraryfile>
      <objectfile>"%objectfile%"</objectfile>
    </template>
  </linker>

</project>
