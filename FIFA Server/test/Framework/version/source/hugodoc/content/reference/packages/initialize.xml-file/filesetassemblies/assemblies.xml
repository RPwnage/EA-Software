<project xmlns="schemas/ea/framework3.xsd">

	<publicdata packagename="MyPackage" >
		<module name="MyModule">
			<!-- Empty 'assemblies' element tells the task to add default assembly name based on the module name. -->
			<assemblies/>

			<!-- external assembly -->
			<assemblies-external>
				<includes name="${package.MyPackage.dir}/bin/externalAssembly.dll" />
			</assemblies-external>
		</module>

		<module name="MyModule.Extra">
			<!-- explicit declaration -->
			<assemblies basedir="${package.MyPackage.builddir}/${config}/bin">
				<includes name="MyModule.Extra.dll" />
			</assemblies>
		</module>
	</publicdata>

</project>
