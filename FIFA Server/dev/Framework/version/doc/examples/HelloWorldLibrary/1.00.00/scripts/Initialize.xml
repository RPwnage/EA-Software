<project xmlns="schemas/ea/framework3.xsd">

  <publicdata packagename="HelloWorldLibrary" >
    
    <!-- runtime group is default and can be skipped -->
    <runtime>
      
      <module name="Hello">
        <includedirs>
          ${package.HelloWorldLibrary.dir}/include
        </includedirs>
        <!-- Empty 'lib' element tells the task to add default library name based on the module name. -->
        <libs/>
      </module>

      <module name="Goodbye" >
        <!-- relative paths are prepended with package directory -->
        <includedirs>
          include
        </includedirs>
        <libs>
          <includes name="${package.HelloWorldLibrary.libdir}/${lib-prefix}Goodbye${lib-suffix}"/>
        </libs>
      </module>
      
    </runtime>
  </publicdata>

</project>