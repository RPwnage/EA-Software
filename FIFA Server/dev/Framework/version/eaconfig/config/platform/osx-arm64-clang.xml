<project xmlns="schemas/ea/framework3.xsd">

	<property name="platform-ptrsize"     value="64bit"/>
	<property name="platform-wordsize"    value="64bit"/>

	<property name="arch-osx" value="arm64"/>
    <property name="osx-deployment-target-version"   value="11.0"  unless="@{PropertyExists('osx-deployment-target-version')}"/>
    
    <property name="osx-arm64-clang-common-options">
    </property>

	<optionset name="config-options-common">
		<option name="buildset.cc.options">
            -target ${arch-osx}-apple-macos${osx-deployment-target-version}
            ${osx-arm64-clang-common-options}
			${option.value}
		</option>
		<option name="buildset.link.options">
            -target ${arch-osx}-apple-macos${osx-deployment-target-version}
			${option.value}
		</option>
	</optionset>

	<include file="osx-clang-common.xml"/>

</project>
