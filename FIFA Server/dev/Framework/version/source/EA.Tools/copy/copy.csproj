<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>$(NantTargetFramework)</TargetFramework>
		<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<PlatformTarget>AnyCPU</PlatformTarget>
		<Prefer32Bit>false</Prefer32Bit>
	</PropertyGroup>
	<ItemGroup>
    	<PackageReference Include="Mono.Posix.NETStandard" Version="1.0.0" Condition="!$(TargetFramework.StartsWith('net4'))" />
    	<PackageReference Include="Mono.Posix-4.5" Version="4.5.0" Condition="$(TargetFramework.StartsWith('net4'))" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\..\NAnt.Core\NAnt.Core.csproj" />
	</ItemGroup>
</Project>
