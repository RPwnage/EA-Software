<project xmlns="schemas/ea/framework3.xsd">

	<publicdata packagename="MyPackage" >
		<module name="MyModule">
			<!-- Empty 'dlls' element tells the task to add default shared library name based on the module name. -->
			<dlls/>
			<!-- Empty libs can be used to export import library path unless platform uses different static and import lib path templates -->
			<libs/>
			
			<!-- external dll -->
			<dlls-external>
				<includes name="${package.MyPackage.dir}/bin/somedynamiclib.dll" />
			</dlls-external>
		</module>
		<module name="MyModule.Extra">
			<!-- explicit declaration -->
			<dlls basedir="${package.MyPackage.builddir}/${config}/bin">
				<includes name="MyModule.Extra.dll" />
			</dlls>
		</module>		
	</publicdata>

</project>