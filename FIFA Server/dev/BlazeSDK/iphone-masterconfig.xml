<project>
    <!-- (c) Electronic Arts. All Rights Reserved. -->
    <!-- Master config for the Blaze SDK.-->

    <masterversions>

        <!-- Build system packages -->
      
        <!-- Platform specific packages for our build tools -->
        <package name="XcodeProjectizer"       version="3.07.02" />

        <package name="zlib"                   version="1.2.11" />

        <!-- Code generation -->
        <package name="antlr"                  version="3.5.2" />
        <package name="jdk"                    version="azul-8.0.222-osx-1" />

        <!-- EA packages we build with -->
        <package name="EABase"                 version="2.09.13" />
        <package name="EAAssert"               version="1.05.07" />
        <package name="EASTL"                  version="3.12.01" />
        <package name="EAStdC"                 version="1.23.00" />
        <package name="EAIO"                   version="2.23.01" />
        <package name="EATDF"                  version="15.1.1.10.2" />
        <package name="coreallocator"          version="1.04.02" />
        <package name="EAJson"                 version="1.06.05-maverick" /> <!-- upgrade to latest after https://jira.frostbite.ea.com/browse/SUP-1154 has been addressed -->
        <package name="UTFXml"                 version="3.08.09" />
        <package name="DirtySDK"               version="15.1.7.0.2" />
        <package name="TelemetrySDK"           version="20.4.1.1.0" />
        <package name="PinTaxonomySDK"         version="2.2.2" />
        <package name="PyroSDK"                version="15.1.1.9.3" />
        <package name="EACrypto"               version="1.03.00" />

        <!-- Packages for the samples -->
        <package name="PPMalloc"               version="1.26.00" />
        <package name="EAThread"               version="1.32.01" />
        <package name="EACallstack"            version="2.01.02" />

        <!-- libpack package containing prebuilt libs to be linked with when mobile.useprebuiltlibpack=true -->
        <package name="BlazeSDKSamplesLibPack" version="1.0.0" />
    </masterversions>

    <config package="eaconfig" default="iphonesim-x64-clang-debug" includes="iphonesim-x64-clang-* osx-x64-clang-*" />

    <globalproperties>
      samples
      pyro
      official
      blazesdk_buildrev
      dirtysdk-samples
      dirtysdk_debug_enable
      dirtysdk_debug_disable
      iphone-base-sdk-version=9.2
      iphone-deployment-target-version=9.2
      iphone-extra-frameworks="CFNetwork Security SystemConfiguration"
      osx-extra-frameworks="-framework Security"
      package.iphonesdk.appdir="/Applications/Xcode.app/Contents/Developer"
      xcode-projectize
      mobile.useprebuiltlibpack=false
      blazesdk_disable_default_eatdf_allocator
    </globalproperties>

    <globaldefines>
        EASTL_SIZE_T_32BIT=1
        EAIO_64_BIT_SIZE_ENABLED=0
    </globaldefines>

    <buildroot>build</buildroot>

    <ondemand>true</ondemand>
    <ondemandroot>../../packages</ondemandroot>
    
    <packageroots>
        <packageroot>../</packageroot>
    </packageroots>
</project>
