[headername="gamemanager/tdf/gamebrowser.h"]
#include "gamemanager/gen/gamebrowser.tdf"


namespace Blaze
{
namespace GameBrowserService
{
namespace v1
{

class GameBrowserListRequest
{
    [tag="uuid", description="The request uuid. Only used for debug logging purpose."]
    string(256) mRequestUUID;
    
    [tag="glrq", description="The original request used to create game list."]
    Blaze::GameManager::GetGameListRequest mGameListRequest; 

    // Use a boolean to keep the similar interface as GameBrowserScenarioData. The Blaze::GameManager::ListType is not exposed on the client currently.
    [tag="snap", default=true, description="If true, short lived snapshot. If false, long running subscription."]
    bool mIsSnapshotList;
};

class GameBrowserListResponse
{
    [tag="list", description="The updates to the list"]
    Blaze::GameManager::NotifyGameListUpdate mListUpdate;
};

class GameBrowserListErrorResponse
{
    [tag="msg", description="The error message."]
    string(-1) mErrorMessage;
};

} // namespace v1
} // namespace GameBrowserService
} // namespace Blaze
