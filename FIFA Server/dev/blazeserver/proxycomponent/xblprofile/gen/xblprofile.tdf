[headername="framework/tdf/externalsessiontypes.h"]
#include "framework/gen/externalsessiontypes.tdf"

namespace Blaze
{

namespace XBLServices
{

class ProfileUserSetting
{
    [tag="id", description=""]
    string(-1) mId;
    
    [tag="valu", description=""]
    string(-1) mValue;
};

class ProfileUser
{
    [tag="id", description=""]
    string(MAX_EXTERNAL_ID_CHAR_LEN) mId;

    [tag="sets", description=""]
    list<ProfileUserSetting> mSettings;
};

typedef list<ProfileUser> ProfileUsers;

/////////////////////////////////////////////////////////////////////////////////////////
//      Retrieve user info from external session service
/////////////////////////////////////////////////////////////////////////////////////////

class GetExternalUserProfilesRequestHeader
{
    [tag="cvrn", description=""]
    string(20) mContractVersion;

    [tag="atkn", description=""]
    string(-1) mAuthToken;

    [tag="accp", description=""]
    string(-1) mAccept;
};

class GetExternalUserProfilesRequestBody
{
    [tag="uids", description=""]
    list<string(MAX_EXTERNAL_ID_CHAR_LEN)> mUserIds;

    [tag="sets", description=""]
    list<string(-1)> mSettings;
};

class GetExternalUserProfilesRequest
{
    [tag="guph", description=""]
    GetExternalUserProfilesRequestHeader mGetExternalUserProfilesRequestHeader;

    [tag="gupb", description=""]
    GetExternalUserProfilesRequestBody mGetExternalUserProfilesRequestBody;
};

class GetExternalUserProfilesResponse
{
    [tag="prof", description=""]
    ProfileUsers mProfileUsers;
};

}
}
