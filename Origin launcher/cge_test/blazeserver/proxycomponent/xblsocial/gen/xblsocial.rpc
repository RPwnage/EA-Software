[ headername="xblsocial/tdf/xblsocial.h" ]
#include "xblsocial/gen/xblsocial.tdf"

namespace Blaze
{
namespace XBLSocial
{

[
    id = core/1020,
    description = "Proxy component used to call XBL Social Apis",
    details = "xbl social",
    proxyOnly = true,
    http = {
        payloadEncoderSubType = "NORMAL"
    }
]
component XBLSocial
{
    slave
    {
        methods
        {
            [
                id = 1,
                description = "Identify the relationship between the current owner and the target user",
                details = "Identify the relationship between the current owner and the target user",
                requires_authentication = false,
                client_export = false,
                http = {
                    resource = "/users/xuid({xuidOwner})/people/xuid({xuidTarget})",
                    method = "GET",
                    custom_request_headers = {
                        "x-xbl-contract-version" = "peopleRequestsHeader.contractVersion",
                        "Authorization"          = "peopleRequestsHeader.authToken"
                    }
                }
            ]
            Person getPeople(GetPeopleRequest);
        }
    }
}


}
}
