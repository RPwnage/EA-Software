<project xmlns="schemas/ea/framework3.xsd">

  <include file="./core.xml"/>

  <SolutionFolders>
    <folder name="ExternalLibs">
      <projects>
        ${externallibs??}
        coreallocator
        EAAssert
        EABase
        EACallstack
        EAIO
        EAJson
        EAStdC
        EASTL
        EATDF
        EAThread
        GamePacker
        libcurl
        PPMalloc
        UTFXml
        zlib
      </projects>
    </folder>
    <folder name="GeneratedCode">

      <projects>
        blazeserver/framework_gen
        ${codegenprojects}
        blazeserver/grpc_helpers
        blazeserver/outboundgrpc
        blazeserver/proxycomponents
      </projects>
    </folder>
    <folder name="Scripts">
      <folder name="Codegen">
        <folder name="EatdfTemplates">
          <items>
            <includes name="${package.EATDF.dir}/tool/templates/cpp/**.stg"/>
            <includes name="${package.EATDF.dir}/tool/templates/protobuf/**.stg"/>
          </items>
        </folder>
        <folder name="BlazeTemplates">
          <items>
            <includes name="${package.blazeserver.dir}/tools/typecomp2/templates/cpp/**.stg"/>
            <includes name="${package.blazeserver.dir}/tools/typecomp2/templates/cpp/shared/**.stg"/>
            <includes name="${package.blazeserver.dir}/tools/typecomp2/templates/cpp/server/**.stg"/>
          </items>
        </folder>
      </folder>
      <folder name="Build">
        <items>
          <includes name="${package.blazeserver.dir}/*.build"/>
          <includes name="${package.blazeserver.dir}/*.xml"/>
          <includes name="${package.blazeserver.dir}/scripts/**.xml"/>
          <includes name="${package.blazeserver.dir}/scripts/**.cs"/>
          <includes name="${package.blazeserver.dir}/scripts/**.props"/>
        </items>
      </folder>
    </folder>
    <folder name="Core">
      <projects>
        blazeserver/blazeserver_main
        blazeserver/framework
        ${coreprojects}
      </projects>
    </folder>
    <folder name="Custom">
      <projects>
        blazeserver/customcode
        ${customprojects}
      </projects>
    </folder>
  </SolutionFolders>

</project>
