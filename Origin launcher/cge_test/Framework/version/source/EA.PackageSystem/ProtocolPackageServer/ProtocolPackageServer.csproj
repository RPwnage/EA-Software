<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>$(NantTargetFramework)</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Configurations>Debug;Release</Configurations>
    <DelaySign>false</DelaySign>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\NAnt.Authentication\NAnt.Authentication.csproj" />
    <ProjectReference Include="..\..\NAnt.Core\NAnt.Core.csproj" />
    <ProjectReference Include="..\..\NAnt.NuGet\NAnt.NuGet.csproj" />
    <ProjectReference Include="..\..\NAnt.Perforce\NAnt.Perforce.csproj" />
    <ProjectReference Include="..\..\NAnt.Perforce.ConnectionManagement\NAnt.Perforce.ConnectionManagement.csproj" />
    <ProjectReference Include="..\..\NAnt.Tasks\NAnt.Tasks.csproj" />
  </ItemGroup>
  <ItemGroup Condition=" '$(UseDotNetCore)' != 'true' ">
    <Reference Include="System.Web">
      <HintPath>System.Web.dll</HintPath>
      <Private>false</Private>
    </Reference>
    <Reference Include="WindowsBase">
      <HintPath>WindowsBase.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\..\Properties\VersionInfo.cs">
      <Link>Properties\VersionInfo.cs</Link>
    </Compile>
    <Compile Include="..\..\Properties\EAVersionInfo.cs">
      <Link>Properties\EAVersionInfo.cs</Link>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="LibGit2Sharp" Version="0.26.2" />
  </ItemGroup>
</Project>