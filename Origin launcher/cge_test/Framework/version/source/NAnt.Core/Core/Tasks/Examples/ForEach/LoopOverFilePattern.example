<example>
  <para>Loop over all *.txt files in C:\</para>
  <code>
    <![CDATA[
    <project default="doloop">
        <target name="doloop">
            <foreach item="File" in="c:\*.txt" property="filename">
                <echo message="${filename}"/>
            </foreach>
        </target>
    </project>
    ]]>
  </code>
</example>
