<project>
    <Program name="voipmetrics" frompartial="DCProgram" outputdir="${package.dir}/metrics/run">
        <sourcefiles optionset="CFile" basedir="${package.dir}">
            <includes name="metrics/source/*.c"/>
        </sourcefiles>

        <includedirs>
            ${package.dir}/metrics/source
        </includedirs>

        <dependencies>
            <auto>
                EABase
                DirtySDK
                LegacyDirtySDK
                DirtyCast/eafn
                DirtyCast/shared
                DirtyCast/version
            </auto>
        </dependencies>

        <buildsteps>
            <run workingdir="${package.dir}/metrics/run"/>
        </buildsteps>
    </Program>
</project>
