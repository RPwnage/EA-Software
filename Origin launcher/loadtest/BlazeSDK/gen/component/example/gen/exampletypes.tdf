// Defines the TDF classes used in the example component.
//  TDF classes are compiled with TypeComp, generating C++ classes that can be serialized in RPCs and Notifications.

namespace Blaze
{
namespace Example
{

class ExampleItemState
{
    [tag="msg"] string(256) mStateMessage;
};

class CreateExampleItemRequest
{
    [tag="msg"] string(256) mState;
    [tag="ttl"] uint64_t    mTimeToLiveInSeconds;
};

class CreateExampleItemResponse
{
    [tag="id"]  uint64_t    mExampleItemId;
};

class ReadExampleItemRequest
{
    [tag="id"]  uint64_t    mExampleItemId;
};

class UpdateExampleItemRequest
{
    [tag="id"]  uint64_t    mExampleItemId;
    [tag="msg"] string(256) mState;
};

class PinExampleItemRequest
{
    [tag="id"]  uint64_t    mExampleItemId;
    [tag="dur"] uint64_t    mDurationInSeconds;
};

class DeleteExampleItemRequest
{
    [tag="id"]  uint64_t    mExampleItemId;
};

[
    description = "The request object for a poke command.",
    details = "This class a bare minimal set of parameters."
]
class Nested
{
    [tag="num", description="A number value greater than 0."]
    int32_t mNum;
    
    [tag="text", description="Text to send up to the server."] 
    string(256) mText;
    
    [tag="nmpa"] map<string(32),string(32), ignorecase> mStringMap;
};

class ExampleRequest
{
    [tag="num", description="A number value greater than 0."]
    int32_t mNum;
    
    [tag="text", description="Text to send up to the server."] 
    string(256) mText;
    
    [tag="smap"] map<string(32),string(32), ignorecase> mStringMap;

    [tag="nmap"] map<string(32),Nested, ignorecase> mNestedMap;
};

class ExampleResponse
{
    enum ExampleResponseEnum
    {
        [description="Unknown response."] 
        EXAMPLE_ENUM_UNKNOWN = 0,
        
        [description="Succeeded!"] 
        EXAMPLE_ENUM_SUCCESS,
        
        [description="Failed"] 
        EXAMPLE_ENUM_FAILED
    };


    [tag="map"] map<int32_t,ExampleRequest> mMyMap;
    
    typedef list<int32_t> IntList;
    [tag="list"] IntList mMyList;

    [tag="enum", description="Enum response type."] 
    ExampleResponseEnum mRegularEnum;
    
    [tag="msg"] 
    string(256) mMessage;

    [tag="inst"] 
    string(256) mInstanceName;
};

class ExampleError
{
    [tag="msg"] 
    string(256) mMessage;
};


} // Example
} // Blaze



