<?xml version="1.0"?>
<project xmlns="schemas/ea/framework3.xsd">
	<!-- most of the options do not need to be set for emulator to function, but they are collected here to document that they they can be overridden from masterconfig -->
	<property name="package.android_config.imageSDKVersion" value="${package.android_config.imageSDKVersion??${package.AndroidSDK.minimumSDKVersion}}"/> <!-- by default it makes sense to run tests on the mimimum device you are targeting -->
	<property name="package.android_config.system-image-type" value="${package.android_config.system-image-type??default}"/>
	<property name="package.android_config.enable-gpu-emulation" value="${package.android_config.enable-gpu-emulation??false}"/>
	<property name="package.android_config.emulatorRestart" value="${package.android_config.emulatorRestart??true}"/> <!-- by default kill the emulator when tests are finished (it will be restarted on next test run) -->
</project>