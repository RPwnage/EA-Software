set print pretty on
set pagination off

printf "\n"

printf "\nbacktrace\n"
printf "---------\n"
printf "{noformat}\n"
bt
printf "{noformat}\n"

printf "\ncanonical backtrace\n"
printf "-------------------\n"
printf "{noformat}\n"
set print frame-arguments none
bt
set print frame-arguments scalar
printf "{noformat}\n"

printf "\nfull backtrace\n"
printf "--------------\n"
printf "{noformat}\n"
bt full
printf "{noformat}\n"

printf "\n\n"
