namespace BlazeRedis
{
class BlazeRedisConfig
{
    [tag="bprt", default=30000, description="The base port to use when launching redis nodes"]
    uint16_t basePort;

    class ClusterInfo
    {
        [tag="tnod", description="The total number of redis nodes to launch"]
        uint16_t totalNodes;

        [tag="nrep", description="The number of replica nodes per master node"]
        uint16_t numReplicas;
    };
    typedef map<string(-1), ClusterInfo> ClusterMap;

    [tag="cmap", description="Map of clusters by name"]
    ClusterMap clusters;
};
}