#include "framework/gen/userdefines.tdf"

namespace Blaze
{

namespace XBLSocial
{

class PeopleRequestsHeader
{
    [tag="cvrn", description=""]
    string(-1) mContractVersion;

    [tag="atkn", description="XBL Auth Token"]
    string(-1) mAuthToken;
};




/////////////////////////////////////////////////////////////////////////////////////////
//      Get People Request & response objects
/////////////////////////////////////////////////////////////////////////////////////////



class ServiceErrorResponse
{
   [tag="code", description="The type of error."]
   int32_t mCode;
   [tag="srce", description="The name of the service that raised the error."]
   string(-1) mSource;
   [tag="desp", description="A description of the error."]
   string(-1) mDescription;  
};


class GetPeopleRequest
{
    [tag="onid", description="Xbox User ID (XUID) of the owner making the request."]
    ExternalXblAccountId mXuidOwner;

    [tag="tgid", description="Xbox User ID (XUID) of target user in question."]
    ExternalXblAccountId mXuidTarget;
    
    [tag="prhr", description="Common request header."]
    PeopleRequestsHeader mPeopleRequestsHeader;
};


typedef string(64) SocialNetwork;
typedef list<SocialNetwork> SocialNetworks;
class Person
{
    [tag="xuid", description="Xuid of the person."]
    ExternalXblAccountId mXuid;
    
    [tag="ifav", description="Whether this person is one that the user cares about more."]
    bool mIsFavourite;
    
    [tag="newk", description="Array of external networks the user and this person have a relationship."]
    SocialNetworks mSocialNetworks;
};


}
}
