// Defines the TDF classes used in the fifagroups component.
//  TDF classes are compiled with TypeComp, generating C++ classes that can be serialized in RPCs and Notifications.
//
// Note: see http://gos.online.ea.com/confluence/display/tech/Typecomp for info on the .tdf spec, as well as the compiler, TypeComp
[headername="fifagroups/tdf/fifagroupstypes.h"]
#include "fifagroups/gen/fifagroupstypes.tdf"

namespace Blaze
{
	namespace FifaGroups
	{
		[
			description = "The configuration object for the fifagroups component",
			details = "This class represents the schema for all the configuration parameters for the fifagroups component.."
		]
		
		class FifaGroupsConfig
		{ 
			[tag="gbau", description = "EADP Groups Url Base", reconfigurable="yes"]
			string(256) mGroupsUrlBase;

			[tag="aver", description = "EADP Groups API Version", reconfigurable="yes"]
			string(8) mApiVersion;

			[tag="tscp", description = "Token Scope", reconfigurable="yes"]
			string(32) mTokenScope;

			[tag="dins", description = "API for Delete Instance", reconfigurable="yes"]
			string(128) mApiDeleteInstance;

			[tag="cins", description = "API for Create Instance", reconfigurable="yes"]
			string(128) mApiCreateInstance;

			[tag="cinj", description = "API for Create and Join Instance", reconfigurable="yes"]
			string(128) mApiCreateAndJoinInstance;

			[tag="sina", description = "API for Set Instance Attribute", reconfigurable="yes"]
			string(128) mApiSetInstanceAttribute;

			[tag="smia", description = "API for Set Multiple Instance Attributes", reconfigurable="yes"]
			string(128) mApiSetMultipleInstanceAttributes;

			[tag="jogp", description = "API for Join Group", reconfigurable="yes"]
			string(128) mApiJoinGroup;

			[tag="dmem", description = "API for Delete Member", reconfigurable="yes"]
			string(128) mApiDeleteMember;

			[tag="rnam", description = "API for Rename Name Group Instance", reconfigurable="yes"]
			string(128) mApiRenameGroupInstanceName;

			[tag="rsnm", description = "API for Rename Short Name Group Instance", reconfigurable="yes"]
			string(128) mApiRenameGroupInstanceShortName;

			[tag="matt", description = "Max number of Attempts", reconfigurable="yes"]
			uint32_t mMaxAttempts;	
		};
	
		class GetConfigResponse
		{
			[tag="cfg", description="FifaGroups server config TDF"]
			FifaGroupsConfig mConfig;
		};

	} // FifaGroups
} // Blaze



