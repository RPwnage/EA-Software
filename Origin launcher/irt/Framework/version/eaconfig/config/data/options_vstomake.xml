<?xml version="1.0"  encoding="utf-8" ?>
<vstomakerules>

  <platform name="NX32">
    <toolset name="Clang">

      <tool name="Compile">
        <property  name="PreprocessorDefinitions" type="array" separator=";">
          <rule regex="^(.+)$" option="-D{0}" />
        </property>
        <property  name="AdditionalIncludeDirectories" type="array" separator=";">
          <map regex="^(.+)$" option="-I{0}" quote="true"/>
        </property>

        <property  name="ForcedIncludeFiles"   type="array" separator=";">
          <rule regex="^(.+)$" option="-include {0}"  quote="true" />
        </property>

        <property  name="GenerateDebugInformation" type="bool">
          <rule regex="^TRUE$" option="-g"/>
        </property>

        <property  name="Warnings" type="enum">
          <rule regex="^WarningsOff$" option="-w"/>
          <rule regex="^MoreWarnings$" option="-Wall"/>
        </property>

        <property  name="ExtraWarnings" type="bool">
          <rule regex="^TRUE$" option="-Wextra"/>
        </property>

        <property  name="WarningsAsErrors" type="bool">
          <rule regex="^TRUE$" option="-Werror"/>
        </property>

        <property  name="OptimizationLevel" type="enum">
          <rule regex="^Level([1-3])$" option="-O{0}"/>
          <rule regex="^Levels$" option="-Os"/>
        </property>

        <property  name="FastMath" type="bool">
          <rule regex="^TRUE$" option="-ffast-math"/>
        </property>

        <property  name="NoStrictAliasing" type="bool">
          <rule regex="^TRUE$" option="-fno-strict-aliasing"/>
        </property>

        <property  name="UnrollLoops" type="bool">
          <rule regex="^TRUE$" option="-funroll-loops"/>
        </property>

        <property  name="AnsiCompliance" type="bool">
          <rule regex="^TRUE$" option="-ansi"/>
        </property>

        <property  name="SignedChar" type="bool">
          <rule regex="^TRUE$" option="-fsigned-char"/>
        </property>

        <property  name="MsExtensions" type="bool">
          <rule regex="^TRUE$" option="-fms-extensions"/>
        </property>

        <property  name="CompileAs" type="enum">
          <rule regex="^CompileAsC$" option="-x c"/>
          <rule regex="^CompileAsCpp$" option="-x c++"/>
          <rule regex="^CompileAsAssembler$" option="-x assembler-with-cpp"/>
        </property>

        <property  name="AdditionalOptions" type="enum">
          <rule regex="^(.+)$" option="{0}"/>
        </property>
      </tool>

      <tool name="Link">
        <property  name="DataStripping" type="enum">
          <rule regex="^StripFuncs$" option="-Wl,-strip-unused"/>
          <rule regex="^StripFuncsAndData$" option="-Wl,-strip-unused-data"/>
        </property>

        <property  name="DuplicateStripping" type="bool">
          <rule regex="^true$" option="-Wl,-strip-duplicates"/>
        </property>
      </tool>

    </toolset>

  </platform>
</vstomakerules>