<project xmlns="schemas/ea/framework3.xsd">

  <property name="package.eaconfig.isusingvc8" value="true" readonly="true"/>
  <property name="package.eaconfig.isusingvc9" value="true" readonly="true"/>
  <property name="package.eaconfig.isusingvc10" value="true" readonly="true"/>
  <property name="package.eaconfig.isusingvc11" value="true" readonly="true"/>

  <!-- This property is now the same as InstalledVersion.  We still export this property because we have other packages depends on it. -->
  <property name="package.VisualStudio.InstalledUpdateVersion" value="${package.VisualStudio.InstalledVersion}" unless="${package.VisualStudio.use-non-proxy-build-tools??false}"/>

  <do if="@{PropertyExists('config-processor')}">
    <property name="build.platform" value="win-vc8"/>
    <property name="build.platform" value="win64-vc8" if="${config-processor} == 'x64'"/>
  </do>

  <property name="package.VisualStudio.support64bit" value="true"/>

</project>