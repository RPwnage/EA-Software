[headername="thirdpartyoptin/tdf/thirdpartyoptintypes.h"]
#include "thirdpartyoptin/gen/thirdpartyoptintypes.tdf"

[headername="framework/tdf/userdefines.h"]
#include "framework/gen/userdefines.tdf"

[headername="preferencecenter/tdf/preferencecenter.h"]
#include "preferencecenter/gen/preferencecenter.tdf"

namespace Blaze
{
namespace ThirdPartyOptIn
{
typedef list<TeamId> TeamIdList;
typedef list<LeagueId> LeagueIdList;
typedef list<PreferenceCenter::CountryCode> CountryCodeList;

// The ThirdPartyOptIn configuration definition
[
    description = "The configuration object for the thirdpartyoptin component",
    details = "The thirdpartyoptin configuration is autoconfigured via the Blaze framework."
]
class ThirdPartyOptInConfig
{
    [tag="enbl", description="Kill switch to enable/disable the third party opt-in APIs.", default=true]
    bool mEnableThirdPartyOptIn;

    [tag="prfx", description="The title Id"]
	string(64) mPreferenceNamePrefix;

    [tag="dbtl", description="The list of TeamIds that require the Double OptIn email"]
	TeamIdList mDoubleOptInTeamIdList;

    [tag="dbll", description="The list of LeagueIds that require the Double OptIn email"]
	LeagueIdList mDoubleOptInLeagueIdList;

    [tag="dbcl", description="The list of contries that require the Double OptIn email for any club"]
	CountryCodeList mDoubleOptInCountryCodeList;
};

} // ThirdPartyOptIn
} // Blaze
