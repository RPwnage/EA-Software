// Defines the TDF classes used in the XmsHd component
//  TDF classes are compiled with TypeComp, generating C++ classes that can be serialized in RPCs and Notifications.
//
// Note: see http://gos.online.ea.com/confluence/display/tech/Typecomp for info on the .tdf spec, as well as the compiler, TypeComp

namespace Blaze
{
namespace XmsHd
{

	[description="Structure of the attribute"]
	class XmsAttributes
	{
		[tag="name", description="Name of Attribute"]		string(64) mName;
		[tag="valu", description="Value of Attribute"]		string(64) mValue;
		[tag="type", description="Type of Attribute"]		string(64) mType;
		[tag="mtch", description="MatchType of Attribute"]	string(64) mMatch;
		[tag="from", description="Attributes From"]			string(64) mFrom;
		[tag="toat", description="Attributes To"]			string(64) mTo;
		[tag="sear", description="Attribute Searchable"]	bool mSearchable;
	};

	[description="Structure of the binary asset"]
	class XmsBinary
	{
		[tag="name", description="Name of Binary"]		string(64) mName;
		[tag="data", description="Binary data"]			string(16384) mData;	// 16 Kb limit
		[tag="size", description="Binary size"]			uint32_t mDataSize;
	};

    [description="Request to publish data to XMS HD"]
    class PublishDataRequest
    {
        [tag="niud", description="Nucleus Id"]			int64_t    mNucleusId;
		[tag="name", description="Name of XMS Asset"]	string(64) mXmsAssetName;
		[tag="attr", description="List of Attributes"]	list<XmsAttributes> mAttributes;
		[tag="refs", description="List of Binaries"]	list<XmsBinary> mBinaries;
    }; 

	[description="Response of publish data to XMS HD"]
	class PublishDataResponse
	{
	};

} // XmsHd
} // Blaze



