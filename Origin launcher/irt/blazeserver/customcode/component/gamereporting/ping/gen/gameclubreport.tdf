[headername="gamereporting/tdf/gamereporting.h"]
#include "gamereporting/gen/gamereporting.tdf"


namespace Blaze
{
[usePtrOption=true]
namespace GameReporting
{

///////////////////////////////////////////////////////////////////////////////
//  Ping Club player report
//
//  Submitted report TDFs. 
namespace GameClubReportBase
{

[
    tdfid = "hash",
    description = "Generic PlayerReport TDF that takes a variable TDF representing player data.",
    details = "Online Club game player report TDF"
]
class PlayerReport
{
    [tag="hits", description="Player hit count"]
    uint16_t hits;
    
    [tag="miss", description="Player misses count"]
    uint16_t misses;
    
    [tag="serv", description="Player serves count"]
    uint16_t serves;
};

[
    tdfid = "hash",
    description = "Generic ClubReport TDF that takes a variable TDF representing player data.",
    details = "Online Club game club report TDF"
]
class ClubReport
{
    [tag="chit", description="Club hit count"]
    uint16_t hits;
    
    [tag="cmis", description="Club misses count"]
    uint16_t misses;
    
    [tag="cser", description="Club serves count"]
    uint16_t serves;
};

} // namespace GameClubReportBase
} // namespace GameReporting
} // namespace Blaze
