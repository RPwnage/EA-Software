<project>
    <Program name="qosstress" frompartial="DCProgram" outputdir="${package.dir}/qosstress/run">
        <sourcefiles basedir="${package.dir}">
            <includes name="qosstress/source/*.cpp"/>
            <includes name="qosstress/source/*.c" optionset="CFile"/>
        </sourcefiles>

        <headerfiles basedir="${package.dir}">
            <includes name="qosstress/source/*.h"/>
        </headerfiles>

        <includedirs>
            ${package.dir}/qosstress/source
        </includedirs>

        <dependencies>
            <auto>
                coreallocator
                DirtySDK
                LegacyDirtySDK
                EAAssert
                EABase
                EAStdC
                EASTL
                EAThread
                DirtyCast/eafn
                DirtyCast/shared
            </auto>
        </dependencies>

        <buildsteps>
            <run workingdir="${package.dir}/qosstress/run"/>
        </buildsteps>
    </Program>
</project>
