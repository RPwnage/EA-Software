<project>
    <Library name="shared" frompartial="DCLibrary">
        <headerfiles basedir="${package.dir}">
            <includes name="shared/*.h"/>
        </headerfiles>

        <sourcefiles basedir="${package.dir}">
            <includes name="shared/*.c"/>
        </sourcefiles>

        <dependencies>
            <auto>
                DirtySDK
                LegacyDirtySDK

                <do if="${config-system} == 'pc64'">
                    pcre
                </do>
            </auto>

            <interface>
                DirtyCast/eafn
            </interface>
        </dependencies>
    </Library>
</project>
