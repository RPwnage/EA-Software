[headername="gamemanager/tdf/gamemanager.h"]
#include "gamemanager/gen/gamemanager.tdf"

[headername="gamemanager/tdf/gamebrowser.h"]
#include "gamemanager/gen/gamebrowser.tdf"

[headername="gamemanager/tdf/scenarios.h"]
#include "gamemanager/gen/scenarios.tdf"

namespace Blaze
{
namespace GameManager
{

[ description = "Start a new game browser session with a given scenario." ]
class GetGameListScenarioRequest
{
    // Scenario Data:
    [tag="gnsn", description="The game browser scenario name to use."]
    ScenarioName mGameBrowserScenarioName;

    [tag="gbsa", description="Map which holds client send overridable attributes"]
    ScenarioAttributes mGameBrowserScenarioAttributes;
 
    // Common Data:
    [tag="pljd", description="Info on the players that may join the GB request. Includes Team choice, Roles, etc."]
    PlayerJoinData mPlayerJoinData;

    [tag="cmgd", description="Common data used in Matchmaking, Join Game, and GB Requests. Includes game protocol version string."]
    CommonGameRequestData mCommonGameData;
};

[description = "Response to GetGameBrowserScenarioAttribute Request"]
class GetGameBrowserScenariosAttributesResponse
{
    [tag="gbra", description="The game browser scenario attributes used per-scenario."]
        map<ScenarioName, ScenarioAttributeMapping> mGameBrowserScenarioAttributes;
};

[description = "Encapsulates GetGameListRequest along with snapshot type" ]
class GameBrowserScenarioData
{
    [tag="glrq", description="The original request used to create game list."]
    GetGameListRequest mGetGameListRequest; 

    [tag="snap", description="If true indicates to Search slave to snapshot the current game list and destroy the session immediately."]
    bool mIsSnapshotList;
};

} // namespace GameManager
} // namespace Blaze