namespace Blaze
{
namespace Association
{
    class AssociationlistsConfig
    {
        [tag="namp", reconfigurable="no", description="Associationlists database configuration per platform."]
        DbNameByPlatformTypeMap mDbNamesByPlatform;

        [tag="lmid", reconfigurable="no", description="Associationlists parameters configuration." ]
        ListDataVector mLists;

        [tag="sqsz", reconfigurable="yes", description="Min size of set list operation that will trigger 'large' format temp table queries.", default = 1000,
         details="Set operations larger than this size will use an optimized query that uses temporary tables to avoid sending the large list to the server multiple times."]
        uint32_t setQueryLargeListThreshold;
    };

    [
        tdfid = "hash",
        description = "Event information about an updated association list",
        details = "Triggered when an association list has been updated",
        generateProto=true
    ]
    class ListUpdated
    {
        [tag="bid", description="Blaze id for the user whose association list has been updated"]
        BlazeId mBlazeId;

        [tag="name", description="Name of the updated association list"]
        ListName mName;

        [tag="type", description="Type of the updated association list"]
        ListType mType;
    };
} // Association
} // Blaze
