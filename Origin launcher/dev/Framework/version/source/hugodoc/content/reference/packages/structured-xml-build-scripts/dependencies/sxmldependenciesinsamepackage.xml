<project xmlns="schemas/ea/framework3.xsd">

  <package name="Example"/>

  <Library name="LibraryA">
    <dependencies>
      <use>
        EABase
      </use>
    </dependencies>
    . . . . .
  </Library>

  <Library name="LibraryB">
    <!-- 
        Auto dependency on LibraryA module is equivalent to <use> dependency
    -->
    <dependencies>
      <auto>
        Example/LibraryA
      </auto>
    </dependencies>
    . . . . .
  </Library>


  <Utility name="helper">
    <dependencies>
      <build>
        EAThread
      </build>
    </dependencies>
    . . . . .
  </Utility>

  <Program name="ProgramA">
    <!-- 
        Auto dependency on LibraryB and helper modules is equivalent to <build> dependency.
        Dependency on LibraryA will be transitively propagated.
    -->
    <dependencies>
      <interface>
        EABase
      </interface>
      <auto>
        Example/LibraryB
        Example/helper
      </auto>
    </dependencies>
    . . . . .
  </Program>

  <tests>

    <Program name="TestProgramA">
      <!-- 
        TestProgramA depends on EABase and EAThread.
        Framework will add all modules in 'runtime' group of this package as dependencies
        because no explicit dependencies on other modules in this package are defined.
      -->
      <dependencies>
        <use>
          EABase
        </use>
        <build>
          EAThread
        </build>
      </dependencies>
      . . . . .
    </Program>

    <Program name="TestProgramB">
      <dependencies>
        <!-- 
        TestProgramB depends on EABase and EAThread and TEstLibrary module.
        All 'runtime' modules are added automatically.
      -->
        <use>
          EABase
        </use>
        <build>
          EAThread
          Example/test/TestLibrary
        </build>
      </dependencies>
      . . . .
    </Program>

    <Program name="TestProgramC">
      <dependencies>
        <!-- 
        TestProgramC depends on LibraryA, EAthread and utility module 'helper'.
        No additinal dependencies on 'runtime' modules are added.
      -->
        <use>
          Example/runtime/LibraryA
        </use>
        <build>
          EAThread
          Example/helper
        </build>
      </dependencies>
      . . . .
    </Program>

    <Library name="TestLibrary">
      . . . .
    </Library>

  </tests>

  <examples>

    <Program name="ExampleProgram">
      <!-- 
        ExampleProgram depends on LibraryB, LibraryA, and helper modules from 'runtime' group
        And on TestLibrary module from 'test' group.
      -->
      <dependencies>
        <interface>
          Example/LibraryB
        </interface>
        <build>
          Example/test/TestLibrary
          Example/helper
          Example/runtime/LibraryA
        </build>
      </dependencies>
      . . . . .
    </Program>

  </examples>

</project>