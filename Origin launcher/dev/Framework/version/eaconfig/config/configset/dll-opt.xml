<project xmlns="schemas/ea/framework3.xsd">
  <property name="config-name" value="${config-name??dll-opt}"/>

  <property name="Dll" value="true" />
  <property name="config-isDll" value="true"/>

  <!-- Add an "EA_DLL" define when building in a DLL configuration -->
  <optionset name="config-options-program" append="true">
    <option name="buildset.cc.defines" value="EA_DLL" />
  </optionset>
  <optionset name="config-options-windowsprogram" append="true" if="@{OptionSetExists('config-options-windowsprogram')}">
    <option name="buildset.cc.defines" value="EA_DLL" />
  </optionset>
  <optionset name="config-options-managedcppassembly" append="true" if="@{OptionSetExists('config-options-managedcppassembly')}">
    <option name="buildset.cc.defines" value="EA_DLL" />
  </optionset>
  <optionset name="config-options-library" append="true">
    <option name="buildset.cc.defines" value="EA_DLL" />
  </optionset>

</project>
