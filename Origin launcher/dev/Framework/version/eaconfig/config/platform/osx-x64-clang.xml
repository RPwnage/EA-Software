<project xmlns="schemas/ea/framework3.xsd">

	<property name="platform-ptrsize"     value="64bit"/>
	<property name="platform-wordsize"    value="64bit"/>

	<property name="arch-osx" value="x86_64"/>
    <property name="osx-deployment-target-version"   value="10.14"  unless="@{PropertyExists('osx-deployment-target-version')}"/>
    
    <property name="osx-x64-clang-common-options">
        -msse4.2      <!-- required because we use SSE instructions in metrohash and Engine.Render.Core2.PlatformNull projects. -->
    </property>
    
	<optionset name="config-options-common">
		<option name="buildset.cc.options">
			-target ${arch-osx}-apple-macos${osx-deployment-target-version}
            ${osx-x64-clang-common-options}
			${option.value}
		</option>
		<option name="buildset.link.options">
            -target ${arch-osx}-apple-macos${osx-deployment-target-version}
			${option.value}
		</option>
	</optionset>

	<include file="osx-clang-common.xml"/>

</project>
