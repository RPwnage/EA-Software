<project xmlns="schemas/ea/framework3.xsd">
  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('config.targetoverrides', 'build')}' == 'exclude'">
    <target name="build" description="Build the specific configuration" allowoverride="true">
      <property name="eaconfig.build.group" value="runtime" />
      <call target="eaconfig-build-graph" force="true" />
      <GenerateBuildLayout/>
      <nant-build configs="${config}"/>
    </target>

  </do>

  <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <do unless="'@{OptionSetGetValue('config.targetoverrides', 'buildall')}' == 'exclude'">
    <target name="buildall" description="Build all the configurations" allowoverride="true">
      <property name="eaconfig.build.group" value="runtime" />
      <call target="eaconfig-build-graph-all" force="true" />
      <GenerateBuildLayout/>
      <nant-build configs="${eaconfig.build.configs}"/>
    </target>
  </do>
</project>
