<project xmlns="schemas/ea/framework3.xsd">

  <!-- 
   Export class files and resource directories from library modules downloader_library and zip_file
  -->

  <property name="play_apk_expansion.buildmodules">
    downloader_library
    zip_file
  </property>

  <!-- +-+-+-+-+-+- downloader_library +-+-+-+-+-+-+ -->

  <fileset name="package.play_apk_expansion.downloader_library.java.classes"   basedir="${package.play_apk_expansion.builddir}/${config}/bin/downloader_library/classes" >
    <includes name="**.class"/>
  </fileset>

  <property name="package.play_apk_expansion.downloader_library.resourcedir.android" value="${package.play_apk_expansion.dir}/downloader_library/res"/>

  <!-- +-+-+-+-+-+- zip_file  +-+-+-+-+-+-+ -->

  <fileset name="package.play_apk_expansion.zip_file.java.classes"   basedir="${package.play_apk_expansion.builddir}/${config}/bin/zip_file/classes" >
    <includes name="**.class"/>
  </fileset>

  <property name="package.play_apk_expansion.zip_file.resourcedir.android" value="${package.play_apk_expansion.dir}/zip_file/res"/>

</project>
