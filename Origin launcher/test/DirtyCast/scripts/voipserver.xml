<project>
    <property name="partialmodule" local="true" value="DCProgram"/>
    <property name="partialmodule" local="true" value="WinDCProgram" if="${config-system} == 'pc' or ${config-system} == 'pc64'"/>

    <Program name="voipserver" frompartial="${partialmodule}" outputdir="${package.dir}/run">
        <sourcefiles optionset="CFile" basedir="${package.dir}">
            <includes name="source/*.c"/>
        </sourcefiles>

        <headerfiles basedir="${package.dir}">
            <includes name="source/*.h"/>
        </headerfiles>

        <includedirs>
            ${package.dir}/metrics/source
            ${package.dir}/source
        </includedirs>

        <dependencies>
            <auto>
                DirtySDK
                LegacyDirtySDK
                DirtyCast/eafn
                DirtyCast/shared
                DirtyCast/version
            </auto>
        </dependencies>

        <buildsteps>
            <run workingdir="${package.dir}/run"/>
        </buildsteps>
    </Program>
</project>
