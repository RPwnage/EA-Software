<osdk_tools>

    <!--
        This is the user definition of users that have user privileges.  Each user element requires a username and an email.

        @username:
            Perforce account username
        @email:
            Contact email
        @group:
            Groups assigned to user
    -->
    <users>
        <user username="tince" email="tince@ea.com" group="admin" />
        <user username="pshervey" email="pshervey@ea.com" group="admin" />
        <user username="atoft" email="atoft@ea.com" group="admin" />
        <user username="aromero" email="aromero@ea.com" group="admin" />
        <user username="tyrone" email="tyrone@ea.com" group="admin" />
        <user username="mpoernbacher" email="mpoernbacher@ea.com" group="admin" />
        <user username="efan" email="efan2@ea.com" group="admin" />
        <user username="mchristman" email="mchristman@ea.com" group="admin" />
        <user username="efunkhouser" email="efunkhouser@ea.com" group="admin" />
        <user username="dcrummack" email="dcrummack@ea.com" group="user" />
        <user username="gkwok" email="gkwok@ea.com" group="admin" />
    </users>

    <!-- 
        Each configitem element, must define the name and access attribubtes.  The path attribute is optional.  When a
        configitem is selected in the Select Configuration Form, the Tool checks for a UI present that can handle
        the configitem (check is made using the name attribute).  If no UI can be found that handles the configitem, then
        the tool will attempt to load the configitem into the default TextEditor UI.  This will only be attempted if the
        path attribute is set.  So, if you only want the UI to be used, omit the path attribute.
        
        @name:
            Display name for the config item.
        @path: (optional)
            Config file paths are from the repository trunk folder.  For example, the path for -
                //blaze/games/Ping/2010-NG/trunk/etc/osdk_tools.cfg 
            would be -
                etc/osdk_tools.cfg
        @access: 
            Comma separated list of groups that are allowed to make changes to the configitem.
    -->
    <configitems>
        <configitem name="Tools Config" path="etc/osdk_tools.xml" access="admin" />
        <configitem name="Sponsored Events" path="etc/osdk_sponsored_event.cfg" access="admin,user" />
        <configitem name="Leaderboard Groups" path="etc/component/leaderboards.cfg" access="admin,user" />
    </configitems>

</osdk_tools>
