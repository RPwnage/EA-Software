// Defines the TDF classes used in the fifastats component.
//  TDF classes are compiled with TypeComp, generating C++ classes that can be serialized in RPCs and Notifications.
//
// Note: see http://gos.online.ea.com/confluence/display/tech/Typecomp for info on the .tdf spec, as well as the compiler, TypeComp
[headername="fifastats/tdf/fifastatstypes.h"]
#include "fifastats/gen/fifastatstypes.tdf"

namespace Blaze
{
	namespace FifaStats
	{
		[
			description = "The configuration object for the fifastats component",
			details = "This class represents the schema for all the configuration parameters for the fifastats component.."
		]

		class FifaStatsConfig
		{ 
			[tag="aver", description = "EADP Stats API Version", reconfigurable="yes"]
			string(8) mApiVersion;

			[tag="cxid", description = "EADP Stats Context Id", reconfigurable="yes"]
			string(16) mContextId;

			[tag="cfid", description = "EADP Stats Context Id for FUT", reconfigurable="yes"]
			string(16) mContextIdFUT;
			
			[tag="cpid", description = "EADP Stats Context Id for Player Health", reconfigurable="yes"]
			string(16) mContextIdPlayerHealth;
			
			[tag="tscp", description = "Token Scope", reconfigurable="yes"]
			string(32) mTokenScope;

			[tag="upst", description = "API for Update Stats", reconfigurable="yes"]
			string(128) mApiUpdateStats;

			[tag="matt", description = "Max number of Attempts", reconfigurable="yes"]
			uint32_t mMaxAttempts;	
		};
	
		class GetConfigResponse
		{
			[tag="cfg", description="FifaStats server config TDF"]
			FifaStatsConfig mConfig;
		};

	} // FifaStats
} // Blaze



