[headername="gamereporting/tdf/gamereporting.h"]
#include "gamereporting/gen/gamereporting.tdf"

namespace Blaze
{
[usePtrOption=true]
namespace GameReporting
{

///////////////////////////////////////////////////////////////////////////////
//  Ping Tournament game report
//
//  Submitted report TDFs. 
namespace GameTournamentReportBase
{

[
    tdfid = "hash",
    description = "Generic Game Report TDF that takes a variable TDF representing game data.",
    details = "Online Tournament game report TDF"
]
class GameReport
{
    [tag="toId", description="Tournament Id"]
    uint32_t tournamentId;
};

[
    tdfid = "hash",
    description = "Generic PlayerReport TDF that takes a variable TDF representing player data.",
    details = "Online Tournament game player report TDF"
]
class PlayerReport
{
    [tag="matt", description="Player meta attribute"]
        uint32_t metaAttribute;

    [tag="hits", description="Player hit count"]
        uint16_t hits;
    
    [tag="miss", description="Player misses count"]
        uint16_t misses;
    
    [tag="serv", description="Player serves count"]
        uint16_t serves;
};

} // namespace GameTournamentReportBase
} // namespace GameReporting
} // namespace Blaze
