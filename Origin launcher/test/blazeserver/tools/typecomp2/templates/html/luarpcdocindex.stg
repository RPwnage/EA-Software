group luarpcdocindex : servercommon;

masterComponent(fileNode, component) ::= <<>>
slaveComponent(fileNode, component) ::= <<>>


rootComponent(fileNode, node) ::= <<
$standardFileHeader()$
<head>
  <title>Index</title>
  <link rel="stylesheet" type="text/css" name="wadl" href="wadl.css" />
</head>
<body>
  <h1><a href="luarpcdocindex.html">Blaze Lua RPC Doc Index</a></h1>
  <p><i>This document serves as a reference for the Web Application Layer.
For a full guide to using the Web Application Layer,
<a href="https://developer.ea.com/display/blaze/Web+Access+Layer+-+Getting+Started"> see Confluence</a></i></p>
<p>Blaze component index.  Select a resource below to view WAL documentation.</p>
<p><b>Base URI: </b><tt>http://hostname:port/</tt></p>

<ul><li><b>Components</b><ul>
$node.Components:{<li><a href="rpcs/$it.Name; format="toLower"$luarpcs.html">$it.Name$</a></li>}; separator="\n"$
</ul></li></ul>

