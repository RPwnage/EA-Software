group errorcommon : servercommon;

/////////////////////////// Error Printing Templates ///////////////////////////
// These are to be specifically shared between RPC client component's header and
// RPC client central error header
////////////////////////////////////////////////////////////////////////////////

printSystemErrorDef(e) ::= <<
<printPaddedErrorName(e=e)> = <printSystemErrorVal(e=e); format="@%1$-35s">; ///\< <printErrorDesc(e=e)>
>>

printSystemErrorVal(e) ::= <<
BLAZE_SYSTEM_ERROR(<e.Value>)
>>

printSdkErrorDef(e) ::= <<
<printPaddedErrorName(e=e)> = <printSdkErrorVal(e=e); format="@%1$-35s">; ///\< <printErrorDesc(e=e)>
>>

printSdkErrorVal(e) ::= <<
BLAZE_CLIENT_SYSTEM_ERROR(<e.Value>)
>>

printComponentErrors(component, commentOut) ::= <<
// <compName(component=component)> errors:
<component.Errors: printComponentErrorDef(e = it, commentOut=commentOut); separator="\n">
>>

printComponentErrorDef(e, commentOut) ::= <<
<if (commentOut)>// <endif><printPaddedErrorName(e=e)> = <printComponentErrorVal(e=e); format="@%1$-35s">; ///\< <printErrorDesc(e=e)>
>>

printComponentErrorVal(e) ::= <<
BLAZE_COMPONENT_ERROR(<compId(component=e.Parent)>, <e.Value>)
>>

printPaddedErrorName(e) ::= <<
const BlazeError <e.Name; format="@%1$-57s">
>>

printErrorDesc(e) ::= <<
<e.FullValue; format="hex"> | <e.FullValue> | <e.description>
>>
